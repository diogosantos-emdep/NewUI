        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="0,5,0,0" Width="250">

            <Button Content="{DynamicResource AddCustomerViewAccept}"
        		Command="{Binding AttachToActivityViewAcceptButtonCommand}"
        		Height="30"
        		Width="90"
        		Margin="0,0,30,0"
        		VerticalAlignment="Bottom" />
            <Button Content="{DynamicResource AddCustomerViewCancel}"
            	Command="{Binding AttachToActivityViewCancelButtonCommand}" 
            	Height="30"
            	Width="90"
            	Margin="30,0,0,0"
            	VerticalAlignment="Bottom"  />

        </StackPanel>

    </Grid>
</dxwui:WinUIDialogWindow>