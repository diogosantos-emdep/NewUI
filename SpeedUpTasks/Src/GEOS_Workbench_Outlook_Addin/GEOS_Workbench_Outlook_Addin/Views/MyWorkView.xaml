<UserControl x:Class="Emdep.Geos.Modules.Crm.Views.MyWorkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
             xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxnavi="http://schemas.devexpress.com/winfx/2008/xaml/navigation/internal"
             xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.Crm.ViewModels"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto"
             Style="{DynamicResource UserControlStyle}">

    <UserControl.DataContext>
        <ViewModels:MyWorkViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <dxg:GridControl Grid.Row="0" Margin="0"  ItemsSource="{Binding MyWorkList}"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <dxg:GridControl.Columns>
                <dxg:GridColumn ReadOnly="True" Header="Group" FieldName="Group" Width="50"/>
                <dxg:GridColumn ReadOnly="True" Header="Company" FieldName="Company" Width="100"/>
                <dxg:GridColumn ReadOnly="True" Header="Activity Type" FieldName="ActivityType" Width="50"/>
                <dxg:GridColumn ReadOnly="True" Header="Subject" FieldName="Subject" Width="*" />
                <dxg:GridColumn ReadOnly="True" Header="Status" FieldName="Status" Width="50"/>
                <dxg:GridColumn ReadOnly="True" Header="Priority" FieldName="Priority" Width="50"/>
                <dxg:GridColumn ReadOnly="True" Header="Start Date" FieldName="StartDate" Width="100"/>
                <dxg:GridColumn ReadOnly="True" Header="Due Date" FieldName="DueDate" Width="100"/>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView NavigationStyle="Row" ShowHorizontalLines="False" AllowPerPixelScrolling="False" 
                               AllowGrouping="False" ShowGroupPanel="False" 
                               ShowColumnHeaders="True" ShowVerticalLines="False"
                               ShowIndicator="False" AutoWidth="True" BorderThickness="0" 
                               VerticalScrollbarVisibility="Visible" >
                </dxg:TableView>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
