                            <dxg:GridControl x:Name="gridTracker" ItemsSource="{Binding DataContext.ProjectTaskView.TaskWorkingTimes, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}, Mode=TwoWay}"  Margin="-10,-10,-10,-10" DockPanel.Dock="Top" MaxHeight="1000">
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn FieldName="WorkingDate"/>
                                    <dxg:GridColumn FieldName="User.FullName" Header="User"/>
                                    <dxg:GridColumn Header="Working Time">
                                        <dxg:GridColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock TextAlignment="Left" Text="{Binding Path=Data.WorkingTimeInHours ,Converter={StaticResource TimeConverter}}" />
                                            </DataTemplate>
                                        </dxg:GridColumn.CellTemplate>

                                    </dxg:GridColumn>
                                    <dxg:GridColumn FieldName="Delete" FixedWidth="True" Width="50">
                                        <dxg:GridColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="deleteRowTrackerHistory" Content=""
                                                        Command="{Binding DataContext.DeleteTrackerHistoryRowCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dxlc:GroupBox}}}" 
                                                        CommandParameter="{Binding RowData.Row}">
                                                    <Button.ContentTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Image Style="{DynamicResource DeleteButtonImageStyle}" Grid.Column="0" Height="16" Width="16"/>
                                                                <TextBlock Text="{Binding}" Grid.Column="1" VerticalAlignment="Center" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </Button.ContentTemplate>
                                                </Button>
                                            </DataTemplate>
                                        </dxg:GridColumn.CellTemplate>
                                    </dxg:GridColumn>
                                </dxg:GridControl.Columns>
                                <dxg:GridControl.View>
                                    <dxg:TableView x:Name="trackerHistoryTable" NavigationStyle="Row" AutoWidth="True" ShowGroupPanel="False" AllowEditing="True" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                            <Button  Name="btnAddTime" Content="Add Time" Height="60" Width="120" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontWeight="Bold" Margin="-10,10,-10,-10" Padding="0" DockPanel.Dock="Bottom" Style="{StaticResource LinkButton}"  />
                        </DockPanel>
                    </DataTemplate>
                </dxlc:GroupBox.MaximizedContentTemplate>
            </dxlc:GroupBox>

            <dxlc:GroupBox  Header="Watcher : " Style="{StaticResource myGroupBoxStyle}" Width="300" >
                <dxlc:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="Watcher : " FontWeight="Bold"></TextBlock>
                            <TextBlock Name="wathcerCount" Text="{Binding DataContext.ProjectTaskView.TaskWatchers.Count, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" Width="50"  ></TextBlock>
                        </WrapPanel>
                    </DataTemplate>
                </dxlc:GroupBox.HeaderTemplate>
                <dxlc:GroupBox.ContentTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="PART_Root" Text="{Binding DataContext.ProjectTaskView.TaskWatchers[0].User.FullName,RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" Grid.Column="1" TextAlignment="Left"  />

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding DataContext.ProjectTaskView.TaskWatchers.Count, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}, FallbackValue=0}" Value="0">
                                <Setter TargetName="PART_Root" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </dxlc:GroupBox.ContentTemplate>
                <dxlc:GroupBox.MaximizedContentTemplate>
                    <DataTemplate>
                        <dxg:GridControl HorizontalAlignment="Stretch" VerticalAlignment="Top"  Margin="-10,-10,-10,-10" Padding="0"
                                         ItemsSource="{Binding DataContext.ProjectTaskView.TaskWatchers,  RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}, Mode=TwoWay}" MaxHeight="1000">
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="User.FullName" Header=" Watchers"/>
                                <dxg:GridColumn FieldName="Delete" FixedWidth="True" Width="50">
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Name="deleteRowWatcher" Content=""
                                                        Command="{Binding DataContext.DeleteWatcherRowCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dxlc:GroupBox}}}" 
                                                        CommandParameter="{Binding RowData.Row}">
                                                <Button.ContentTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Image Style="{DynamicResource DeleteButtonImageStyle}" Grid.Column="0" Height="16" Width="16"/>
                                                            <TextBlock Text="{Binding}" Grid.Column="1" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </Button.ContentTemplate>
                                            </Button>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                            </dxg:GridControl.Columns>
                            <dxg:GridControl.View>
                                <dxg:TableView x:Name="watcherTable" NavigationStyle="Row" AutoWidth="True" ShowGroupPanel="False" AllowEditing="True" HorizontalScrollbarVisibility="Hidden" VerticalScrollbarVisibility="Hidden"/>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </DataTemplate>
                </dxlc:GroupBox.MaximizedContentTemplate>
            </dxlc:GroupBox>

            <dxlc:GroupBox  Header="Assistance Request : " Style="{StaticResource myGroupBoxStyle}" Width="300" >
                <dxlc:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="Assistance Request : "  FontWeight="Bold" />
                            <TextBlock Name="RequestCount" Text="{Binding DataContext.ProjectTaskView.TaskAssistances.Count, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" Width="50"  ></TextBlock>
                        </WrapPanel>
                    </DataTemplate>
                </dxlc:GroupBox.HeaderTemplate>
                <dxlc:GroupBox.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0">
                            <Grid Margin="-5" x:Name="PART_Root">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Margin="2" Padding="2"  FontWeight="Bold">Date :</Label>
                                <TextBlock Grid.Row="0" Grid.Column="1" Margin="2" Padding="2" Text="{Binding DataContext.ProjectTaskView.TaskAssistances[0].RequestDate, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox},StringFormat='dd/MM/yyyy'}"/>
                                <Label Grid.Row="1" Grid.Column="0" Margin="2" Padding="2"  FontWeight="Bold">From :</Label>
                                <TextBlock Grid.Row="1" Grid.Column="1" Margin="2" Padding="2" Text="{Binding DataContext.ProjectTaskView.TaskAssistances[0].RequestFrom.FullName, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}"/>
                                <Label Grid.Row="2" Grid.Column="0" Margin="2" Padding="2"  FontWeight="Bold">To :</Label>
                                <TextBlock Grid.Row="2" Grid.Column="1" Margin="2" Padding="2" Text="{Binding DataContext.ProjectTaskView.TaskAssistances[0].RequestTo.FullName, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}"/>
                                <!--<Label Grid.Row="0" Grid.Column="6" >Comments</Label>
                                <TextBlock Grid.Row="1" Grid.Column="6"  Text="{Binding DataContext.LastRecordComments.Comment, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}"/>-->

                            </Grid>
                        </StackPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding DataContext.ProjectTaskView.TaskAssistances.Count, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}, FallbackValue=0}" Value="0">
                                <Setter TargetName="PART_Root" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </dxlc:GroupBox.ContentTemplate>

                <dxlc:GroupBox.MaximizedContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1">
                                <Button Name="btnAddNewRequestAssistance" Command="{Binding Path = DataContext.AddNewRequestAssistanceCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                        Height="30" Width="30" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontWeight="Bold">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Style="{DynamicResource AddButtonImageStyle}" Height="24" Width="24" Margin="-10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>

                            <dxg:GridControl x:Name="gridTaskAssistance" EnableSmartColumnsGeneration="True" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                             HorizontalAlignment="Stretch" VerticalAlignment="Top"  Margin="-10,-10,-10,-10" Padding="0"
                                             ItemsSource="{Binding DataContext.ProjectTaskView.TaskAssistances,RelativeSource={RelativeSource AncestorType=dxlc:LayoutControl, Mode=FindAncestor},Mode=TwoWay}" MaxHeight="1000">
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn FieldName="RequestDate" AllowEditing="False"/>
                                    <dxg:GridColumn FieldName="RequestFrom.FullName" Header="Request From" AllowEditing="False"/>
                                    <dxg:GridColumn FieldName="RequestTo.FullName" Header="Request To" AllowEditing="True">
                                        <!--<dxg:GridColumn.EditSettings>
                                            <dxe:ComboBoxEditSettings ItemsSource="{Binding DataContext.TaskAssistanceUserList,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type dxlc:GroupBox}}}"
                                                                  DisplayMember="FullName" ValueMember="IdUser"/>
                                        </dxg:GridColumn.EditSettings>-->
                                    </dxg:GridColumn>
                                    <dxg:GridColumn Binding="{Binding RowData.Row.TaskAssistanceStatus.Value}" Header="Status" AllowEditing="False">
                                        <dxg:GridColumn.CellStyle>
                                            <Style >
                                                <Setter Property="TextBlock.Foreground" Value="Green"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RowData.Row.TaskAssistanceStatus.IdLookupValue}" Value="75">
                                                        <Setter Property="TextBlock.Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RowData.Row.TaskAssistanceStatus.IdLookupValue}" Value="76">
                                                        <Setter Property="TextBlock.Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </dxg:GridColumn.CellStyle>
                                    </dxg:GridColumn>
                                    <dxg:GridColumn Header="Delete" FixedWidth="True" Width="50">
                                        <dxg:GridColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="deleteRowFollowUp" 
                                                        Command="{Binding DataContext.DeleteTaskAssistanceRowCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dxlc:GroupBox}}}" 
                                                        CommandParameter="{Binding RowData.Row}">
                                                    <Button.ContentTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Image Style="{DynamicResource DeleteButtonImageStyle}" Grid.Column="0" Height="16" Width="16"/>
                                                                <TextBlock Text="{Binding}" Grid.Column="1" VerticalAlignment="Center" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </Button.ContentTemplate>
                                                </Button>
                                            </DataTemplate>
                                        </dxg:GridColumn.CellTemplate>
                                    </dxg:GridColumn>
                                </dxg:GridControl.Columns>
                                <dxg:GridControl.View>
                                    <dxg:TableView x:Name="assistanceTable" AutoWidth="True" ShowGroupPanel="False"
                                               HorizontalScrollbarVisibility="Hidden" NavigationStyle="Row" >
                                        <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="RowUpdated">
                                                <Behaviors:InvokeDelegateCommandAction Command="{Binding AddNewRowTaskAssistanceCommand}"   CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=InvokeParameter}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                    </dxg:TableView>

                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </Grid>
                    </DataTemplate>
                </dxlc:GroupBox.MaximizedContentTemplate>
            </dxlc:GroupBox>

        </dxlc:FlowLayoutControl>

    </Grid>
</UserControl>
