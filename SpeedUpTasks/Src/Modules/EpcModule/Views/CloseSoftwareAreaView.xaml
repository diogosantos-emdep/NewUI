<UserControl x:Class="Emdep.Geos.Modules.Epc.Views.CloseSoftwareAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <dxwui:PageAdornerControl Margin="-20" Padding="0" Header="Software Area Lessons Learned" VerticalAlignment="Top" Grid.Row="0"/>
        <dxlc:LayoutControl Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Stretch" >
            <dxlc:LayoutGroup dx:ScrollViewerTouchBehavior.IsEnabled="True">
                <dx:GroupFrame Header="Consideration To Development Changes " Height="150">
                    <dxlc:LayoutGroup  View="Group" >
                        <dxlc:LayoutItem>
                            <dxe:TextEdit   Height="100"      AcceptsReturn="True" VerticalScrollBarVisibility="Visible" VerticalContentAlignment="Top"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                </dx:GroupFrame>

            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Header="Software Details" View="GroupBox" HorizontalAlignment="Stretch">
                <dxlc:LayoutGroup dx:ScrollViewerTouchBehavior.IsEnabled="True" Orientation="Vertical">
                    <dxlc:LayoutItem Label="Application Name">
                        <dxe:TextEdit />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Setup File Location">
                        <dxe:TextEdit />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="File Format Programming">
                        <dxe:TextEdit/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Location Application Files">
                        <dxe:TextEdit/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Programming Language">
                        <dxe:TextEdit/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Source Location">
                        <dxe:TextEdit/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>


            </dxlc:LayoutGroup>

        </dxlc:LayoutControl>

    </Grid>
</UserControl>
