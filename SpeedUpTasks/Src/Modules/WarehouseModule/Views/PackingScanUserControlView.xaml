<UserControl x:Class="Emdep.Geos.Modules.Warehouse.Views.PackingScanUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion" 
             xmlns:DataCommon="clr-namespace:Emdep.Geos.Data.Common;assembly=Emdep.Geos.Data.Common"
             xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges" 
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:dxat="http://schemas.devexpress.com/winfx/2008/xaml/accordion/themekeys"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d" 
             Style="{DynamicResource UserControlStyle}"
             Focusable="True" IsTabStop="True"  
             UIHelper:FocusExtension.IsFocused="{Binding FocusUserControl}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <behaviors:InvokeDelegateCommandAction Command="{Binding CommandKeyDown}" CommandParameter="{Binding Path=InvokeParameter, RelativeSource={RelativeSource Self}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <UIHelper:ChildrenSelectorHelper x:Key="childrenSelector" />
        <Converters:WeightToWeightUnitConverter x:Key="WeightToWeightUnitConverter"/>

        <Style TargetType="dxlc:GroupBox" >
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <system:Double x:Key="FontSize24">24</system:Double>
        <system:Double x:Key="FontSize23">23</system:Double>
        <system:Double x:Key="FontSize19">19</system:Double>
        <system:Double x:Key="FontSize35">35</system:Double>


        <DataTemplate x:Key="rowIndicatorContentTemplate">
            <Border x:Name="errorIndicatorBorder" Background="Transparent">
                <ContentControl Name="iconPresenter">
                    <Border />
                </ContentControl>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IndicatorState}" Value="Focused">
                    <Setter Property="ContentTemplate" Value="{dxi:ThemeResource {dxgt:RowIndicatorThemeKey ResourceKey=FocusedIconTemplate}}" TargetName="iconPresenter" />
                    <Setter Property="ContentTemplate" TargetName="iconPresenter">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{DynamicResource IndicatorImageStyle}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <Style x:Key="HideButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowRight.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowLeft.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="childrenPathTemplate">
            <TextBlock Text="Boxes" Height="150" Width="200"></TextBlock>
        </DataTemplate>

        <ControlTemplate x:Key="DigitalGaugeControlTemplate">
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
                            <GradientStop Color="Transparent" Offset="1"/>
                            <GradientStop Color="Transparent" Offset="0"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid Focusable="True" UIHelper:FocusExtension.IsFocused="{Binding FocusUserControl}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="10*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="45*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="50*" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="45*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="50*" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <dxlc:LayoutGroup Grid.Column="0" View="GroupBox" 
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              IsCollapsible="False" IsCollapsed="False" Visibility="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <dxlc:LayoutGroup.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left">
                            <TextBlock FontWeight="Bold" 
                                       FontSize="{StaticResource FontSize24}" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left">
                                <Run Text="{DynamicResource Boxes}"></Run>
                                <Run Text=":"></Run>
                                <Run Text="{Binding DataContext.TotalPackingBoxCount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:LayoutGroup}}"></Run>
                            </TextBlock>
                        </Viewbox>
                    </Grid>
                </DataTemplate>
            </dxlc:LayoutGroup.HeaderTemplate>

            <Grid>
               
                <Grid.RowDefinitions>
                    <RowDefinition Height="95*"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="5*"></RowDefinition>
                </Grid.RowDefinitions>

                <dxa:AccordionControl Name="accordionControl" 
                                      SelectionUnit="SubItem"  
                                      ItemsSource="{Binding PackingCompanyList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedItem}" 
                                      ChildrenSelector="{StaticResource childrenSelector}"
                                      ExpandMode="SingleOrNone" 
                                      Grid.Row="0"
                                      HorizontalAlignment="Stretch" 
                                      ShowSearchControl="False">
                    <dxa:AccordionControl.Resources>
                        <DataTemplate DataType="{x:Type DataCommon:PackingCompany}">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Right" Style="{StaticResource TextBlock18Style}" Text="{Binding PackingBoxes.Count,StringFormat=[\{0\}]}"/>
                                <TextBlock Text="{Binding ShortName}" Style="{StaticResource TextBlock18Style}"/>
                            </DockPanel>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type DataCommon:PackingBox}">
                            <Border BorderThickness="0.5" BorderBrush="Gray">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="2"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="2"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Image Style="{DynamicResource DeleteImageStyle}" Grid.Row="0" Height="18" Width="18"
                                           HorizontalAlignment="Right" Margin="0 5 5 0" 
                                           ToolTip="{DynamicResource DeletePackingBox}">
                                        <dxmvvm:Interaction.Triggers>
                                            <dxmvvm:EventToCommand EventName="MouseDown" UseDispatcher="True"
                                                                   Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl},Path=DataContext.DeleteButtonCommand}"
                                                                   CommandParameter="{Binding DataContext.SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl}}">
                                            </dxmvvm:EventToCommand>
                                        </dxmvvm:Interaction.Triggers>
                                    </Image>

                                    <Image Grid.Row="0" Height="18" Width="18"
                                           HorizontalAlignment="Left" Margin="5 5 5 0" >
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="0">
                                                        <Setter Property="Source" Value="{DynamicResource OpenBoxImageSource}"></Setter>
                                                        <Setter Property="ToolTip" Value="Open"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="1">
                                                        <Setter Property="Source" Value="{DynamicResource ClosedBoxImageSource}"></Setter>
                                                        <Setter Property="ToolTip" Value="Closed"/>
                                                    </DataTrigger>

                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                        <dxmvvm:Interaction.Triggers>
                                            <dxmvvm:EventToCommand EventName="MouseDown" UseDispatcher="True"
                                                                   Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl},Path=DataContext.OpenCloseBoxCommand}"
                                                                   CommandParameter="{Binding DataContext.SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl}}">
                                            </dxmvvm:EventToCommand>
                                        </dxmvvm:Interaction.Triggers>
                                    </Image>

                                    <TextBlock Grid.Row="1" Text="BOX NUMBER" Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="2" Text="{Binding BoxNumber}" Style="{StaticResource TextBlock18Style}" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap"/>
                                    <Image Grid.Row="4" HorizontalAlignment="Center" Margin="5">
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="0">
                                                        <Setter Property="Source" Value="{DynamicResource OpenBoxImage}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="1">
                                                        <Setter Property="Source" Value="{DynamicResource ClosedBoxImage}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <TextBlock Grid.Row="6" Text="{DynamicResource TotalItems}" Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="7" Style="{StaticResource TextBlock18Style}" HorizontalAlignment="Center" FontWeight="Bold" 
                                               Text="{Binding ItemsInBox,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </dxa:AccordionControl.Resources>

                    <dxmvvm:Interaction.Triggers>
                        <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                                               Command="{Binding SelectedItemChangedCommand}"
                                               PassEventArgsToCommand="True">
                        </dxmvvm:EventToCommand>
                        <dxmvvm:EventToCommand EventName="MouseDoubleClick"
                                       Command="{Binding EditBoxCommand}"
                                       PassEventArgsToCommand="True" />
                        <dxmvvm:EventToCommand EventName="ItemExpanded"
                                               Command="{Binding ItemExpandedCommand}"
                                               PassEventArgsToCommand="True">
                        </dxmvvm:EventToCommand>
                    </dxmvvm:Interaction.Triggers>
                </dxa:AccordionControl>

                <Button Grid.Row="2" ToolTip="Add New Box" Margin="5"
                        Command="{Binding AddButtonCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <Image Style="{DynamicResource AddNewButtonImageStyle}"  Height="15" Width="15" Margin="-10"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>

        </dxlc:LayoutGroup>

        <ToggleButton x:Name="expandButton" Width="20" Grid.Column="1"
                          Command="{Binding HidePanelCommand}"  
                          Style="{StaticResource HideButtonStyle}" IsChecked="True" VerticalAlignment="Center">
        </ToggleButton>

        <dxlc:LayoutGroup Grid.Column="2" View="GroupBox" Padding="0"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              IsCollapsible="False" IsCollapsed="False">
            <dxlc:LayoutGroup.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left">
                            <TextBlock Grid.Column="0"
                                       FontSize="{StaticResource FontSize24}" 
                                       FontWeight="Bold" VerticalAlignment="Center" 
                                       HorizontalAlignment="Left">
                                <Run Text="{DynamicResource UnpackedItems}" />
                                 <Run Text=":"/>
                                <Run Text="{Binding DataContext.UnPackedItemsList.Count,Mode=OneWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:LayoutGroup}}" />
                            </TextBlock>
                        </Viewbox>

                    </Grid>
                </DataTemplate>
            </dxlc:LayoutGroup.HeaderTemplate>

            <UIHelper:GridControlWithoutClickEx AllowLiveDataShaping ="True" 
                                                ItemsSource="{Binding UnPackedItemsList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                CurrentItem="{Binding SelectedUnPackedItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                                SelectionMode="None" Width="Auto" Height="Auto">
                <!--WorkOrder-->
                <dxg:GridColumn Header="{DynamicResource WorkOrder}" FieldName="WorkOrder" AllowColumnFiltering ="False" AllowSorting="False" Width="30*">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Margin="5 0 0 5">
                                        <Hyperlink x:Name="hyperlink"
                                                   TargetName="_blank"
                                                   Command="{Binding DataContext.WorkOrderHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                   CommandParameter="{Binding RowData.Row}" Style="{DynamicResource hyperlinkGridStyle}">
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Data.WorkOrder}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline" />
                                            </InlineUIContainer>
                                        </Hyperlink>
                                     </TextBlock>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <!--Item-->
                <dxg:GridColumn Header="{DynamicResource  Item}" FieldName="Item" AllowColumnFiltering ="False" AllowSorting="False" Width="15*"/>

                <!--Reference-->
                <dxg:GridColumn Header="{DynamicResource PickingMaterialReferenceColumn}" FieldName="Reference"  AllowColumnFiltering ="False" AllowSorting="False" Width="30*">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Margin="5 0 0 5">
                                <!--Comment Info Image-->
                                 <StackPanel Orientation="Horizontal">
                                 <Image x:Name="image_Un" Uid="IdUnPackedImage" VerticalAlignment="Center" Height="22" Width="22">
                                                            
                                          <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Setter Property="Source" Value="{DynamicResource InfoImageStyle}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=RowData.Row.ArticleComment}" Value="{x:Null}">
                                                            <Setter Property="Source" Value="{x:Null}"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style> 
                                            <dxmvvm:Interaction.Behaviors>
                                                <dxmvvm:EventToCommand Command="{Binding DataContext.UnPackedItemImageClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                                        EventName="MouseDown" CommandParameter="{Binding RowData.Row}">                                                                                                                                                 
                                                </dxmvvm:EventToCommand>                                                        
                                            </dxmvvm:Interaction.Behaviors>
                                            </Image>  
                                            <dxe:FlyoutControl IsOpen="{Binding RowData.Row.ShowComment,Mode=TwoWay}" 
                                                               PlacementTarget="{Binding ElementName=image_Un}"
                                                               Background="{Binding DataContext.InfoTooltipBackColor, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}" >
                                                <dxe:FlyoutControl.Settings>
                                                    <dxe:FlyoutSettings
                                                        IndicatorHorizontalAlignment="Center"
                                                        Placement="Top"
                                                        ShowIndicator="True" 
                                                        />
                                                </dxe:FlyoutControl.Settings>
                                                <TextBlock Text="{Binding RowData.Row.ArticleComment}" TextWrapping="WrapWithOverflow" Style="{DynamicResource TextBlock25Style}" 
                                                                                                                                      Foreground="Black" FontWeight="Bold"/>
                                            </dxe:FlyoutControl>
                                         </StackPanel>

                                        <Hyperlink x:Name="hyperlink"
                                                   TargetName="_blank"
                                                   Command="{Binding DataContext.ArticleReferenceHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                   CommandParameter="{Binding RowData.Row}" Style="{DynamicResource hyperlinkGridStyle}">
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Data.Reference}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline" />
                                            </InlineUIContainer>
                                        </Hyperlink>
                                     </TextBlock>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <!--Weight-->
                <dxg:GridColumn Header="{DynamicResource  Weight}" FieldName="ArticleWeight" AllowColumnFiltering ="False" AllowSorting="False" Width="15*">
                    <dxg:GridColumn.EditSettings>
                        <dxe:TextEditSettings DisplayTextConverter="{StaticResource WeightToWeightUnitConverter}"/>
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>

                <!--Quantity-->
                <dxg:GridColumn Header="{DynamicResource  Qty}" FieldName="Qty" AllowColumnFiltering ="False" AllowSorting="False" Width="15*"/>


                <UIHelper:GridControlWithoutClickEx.View>
                    <dxg:TableView x:Name="UnpackedItemsTableView"
                                   ShowGroupPanel="False"
                                   NavigationStyle="Row"
                                   ShowColumnHeaders="True"
                                   ShowIndicator="False" 
                                   AutoWidth="True" 
                                   RowMinHeight="60" 
                                   FontSize="{StaticResource FontSize23}" 
                                   IsColumnMenuEnabled="False"
                                   SearchColumns="False"
                                   HorizontalScrollbarVisibility="Auto"
                                   VerticalScrollbarVisibility="Auto"
                                   RowIndicatorContentTemplate="{StaticResource rowIndicatorContentTemplate}"
                                   IndicatorWidth="60" IsEnabled="True"
                                   FocusedRow="{Binding SelectedUnPackedItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >

                    </dxg:TableView>
                </UIHelper:GridControlWithoutClickEx.View>
            </UIHelper:GridControlWithoutClickEx>


        </dxlc:LayoutGroup>

        <Grid Grid.Column="4" Visibility="{Binding PackingBoxDetailsVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="75*"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
            </Grid.RowDefinitions>

            <dxlc:LayoutGroup Grid.Row="0" View="GroupBox" 
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              IsCollapsible="False" IsCollapsed="False">
                <dxlc:LayoutGroup.HeaderTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left">
                                <TextBlock Grid.Column="0"
                                           FontSize="{StaticResource FontSize24}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left">
                                    <Run Text="{DynamicResource PackedItems}"/>
                                    <Run Text=":"/>
                                    <Run Text="{Binding DataContext.PackedItemsList.Count,Mode=OneWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:LayoutGroup}}" />
                                </TextBlock>
                            </Viewbox>
                        </Grid>
                    </DataTemplate>
                </dxlc:LayoutGroup.HeaderTemplate>

                <UIHelper:GridControlWithoutClickEx AllowLiveDataShaping ="True" ShowBorder="False"
                                                    ItemsSource="{Binding PackedItemsList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                    CurrentItem="{Binding SelectedPackedItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                                    SelectionMode="None" Width="Auto" Height="Auto">
                    <!--WorkOrder-->
                    <dxg:GridColumn Header="{DynamicResource WorkOrder}" FieldName="WorkOrder" AllowColumnFiltering ="False" AllowSorting="False" Width="30*">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                                        <Hyperlink x:Name="hyperlink"
                                                   TargetName="_blank"
                                                   Command="{Binding DataContext.WorkOrderHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                   CommandParameter="{Binding RowData.Row}" Style="{DynamicResource hyperlinkGridStyle}">
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Data.WorkOrder}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline" />
                                            </InlineUIContainer>
                                        </Hyperlink>
                                     </TextBlock>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>

                    <!--Item-->
                    <dxg:GridColumn Header="{DynamicResource  Item}" FieldName="Item" AllowColumnFiltering ="False" AllowSorting="False" Width="15*" />

                    <!--Reference-->
                    <dxg:GridColumn Header="{DynamicResource PickingMaterialReferenceColumn}" FieldName="Reference"  AllowColumnFiltering ="False" AllowSorting="False" Width="30*">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                                    <!--Comment Info Image-->
                                 <StackPanel Orientation="Horizontal">
                                 <Image x:Name="image" Uid="IdPackedItem" VerticalAlignment="Center" Height="22" Width="22">
                                                            
                                          <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Setter Property="Source" Value="{DynamicResource InfoImageStyle}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=RowData.Row.ArticleComment}" Value="{x:Null}">
                                                            <Setter Property="Source" Value="{x:Null}"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style> 
                                            <dxmvvm:Interaction.Behaviors>
                                                <dxmvvm:EventToCommand Command="{Binding DataContext.PackedItemImageClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                                        EventName="MouseDown" CommandParameter="{Binding RowData.Row}">                                                                                                                                                 
                                                </dxmvvm:EventToCommand>                                                        
                                            </dxmvvm:Interaction.Behaviors>
                                            </Image>  
                                            <dxe:FlyoutControl IsOpen="{Binding RowData.Row.ShowComment,Mode=TwoWay}" 
                                                               PlacementTarget="{Binding ElementName=image}"
                                                               Background="{Binding DataContext.InfoTooltipBackColor, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}" >
                                                <dxe:FlyoutControl.Settings>
                                                    <dxe:FlyoutSettings
                                                        IndicatorHorizontalAlignment="Center"
                                                        Placement="Top"
                                                        ShowIndicator="True" 
                                                        />
                                                </dxe:FlyoutControl.Settings>
                                                <TextBlock Text="{Binding RowData.Row.ArticleComment}" TextWrapping="WrapWithOverflow" Style="{DynamicResource TextBlock25Style}" 
                                                                                                                                      Foreground="Black" FontWeight="Bold"/>
                                            </dxe:FlyoutControl>
                                         </StackPanel>

                                        <Hyperlink x:Name="hyperlink"
                                                   TargetName="_blank"
                                                   Command="{Binding DataContext.ArticleReferenceHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                   CommandParameter="{Binding RowData.Row}" Style="{DynamicResource hyperlinkGridStyle}">
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Data.Reference}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline" />
                                            </InlineUIContainer>
                                        </Hyperlink>
                                     </TextBlock>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>

                    <!--Weight-->
                    <dxg:GridColumn Header="{DynamicResource  Weight}" FieldName="ArticleWeight" AllowColumnFiltering ="False" AllowSorting="False" Width="15*">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings DisplayTextConverter="{StaticResource WeightToWeightUnitConverter}"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>

                    <!--Quantity-->
                    <dxg:GridColumn Header="{DynamicResource  Qty}" FieldName="Qty" AllowColumnFiltering ="False" AllowSorting="False" Width="15*"/>


                    <UIHelper:GridControlWithoutClickEx.View>
                        <dxg:TableView x:Name="PackedItemsTableView"
                                   ShowGroupPanel="False"
                                   NavigationStyle="Row"                                 
                                   ShowColumnHeaders="True"
                                   ShowIndicator="False" 
                                   AutoWidth="True" 
                                   RowMinHeight="60" 
                                   FontSize="{StaticResource FontSize23}" 
                                   IsColumnMenuEnabled="False"
                                   SearchColumns="False"
                                   HorizontalScrollbarVisibility="Auto"
                                   VerticalScrollbarVisibility="Auto"
                                   RowIndicatorContentTemplate="{StaticResource rowIndicatorContentTemplate}"
                                   IndicatorWidth="60" IsEnabled="True"
                                   FocusedRow="{Binding SelectedPackedItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >

                        </dxg:TableView>
                    </UIHelper:GridControlWithoutClickEx.View>
                </UIHelper:GridControlWithoutClickEx>
            </dxlc:LayoutGroup>

            <Grid Grid.Row="2" ShowGridLines="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                               Text="{Binding SelectedPackedItem.Description}" TextWrapping="Wrap" TextAlignment="Center"
                               HorizontalAlignment="Stretch"
                               FontSize="{StaticResource FontSize24}" FontWeight="Bold" />

                        <Image Grid.Row="2"
                               Source="{Binding ArticleImage,UpdateSourceTrigger=PropertyChanged}"
                               VerticalAlignment="Stretch">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedPackedItem,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>

                    <Grid Grid.Column="2" ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                            <RowDefinition Height="25*"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                            <RowDefinition Height="25*"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                            <RowDefinition Height="25*"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid ShowGridLines="False" Grid.Row="0" HorizontalAlignment="Stretch" Width="Auto" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!--Scale Weight-->
                            <TextBlock Grid.Column="0" Text="{DynamicResource ScaleWeight}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom"  
                                   FontSize="{StaticResource FontSize19}" />

                            <!--StateIndicatorControl-->
                            <dxga:StateIndicatorControl Grid.Column="2" x:Name="lampStateIndicatorControl"
                                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                        Height="20" ToolTip="{Binding ToolTip, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                        StateIndex="{Binding StateIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        >
                                <dxga:StateIndicatorControl.Model>
                                    <dxga:LampStateIndicatorModel />
                                </dxga:StateIndicatorControl.Model>
                            </dxga:StateIndicatorControl>
                        </Grid>

                        <!--actual Weight-->
                        <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" >

                            <dxga:DigitalGaugeControl Grid.Row="0" Name="FourteenSegmentsGauge"
                                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                                      TextHorizontalAlignment="Right" TextVerticalAlignment="Center"
                                                      Text="{Binding ScaleWeightValue,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"  EnableAnimation="False">
                                <dxga:DigitalGaugeControl.Model>
                                    <dxga:DigitalDefaultModel InnerPadding="0"/>
                                </dxga:DigitalGaugeControl.Model>
                                <dxga:DigitalGaugeControl.SymbolView>
                                    <dxga:FourteenSegmentsView>
                                        <dxga:FourteenSegmentsView.Presentation>
                                            <dxga:DefaultFourteenSegmentsPresentation FillActive="{DynamicResource WarehouseInitialLocationBackground}" />
                                        </dxga:FourteenSegmentsView.Presentation>
                                    </dxga:FourteenSegmentsView>
                                </dxga:DigitalGaugeControl.SymbolView>
                            </dxga:DigitalGaugeControl>
                        </Border>

                        <!--Estimated Weight-->
                        <TextBlock Grid.Row="4" 
                                   Text="{DynamicResource EstimatedWeight}" 
                                   HorizontalAlignment="Stretch" 
                                   TextAlignment="Left" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="{StaticResource FontSize19}" />

                        <!--Estimated actual Weight-->
                        <Border Grid.Row="6" BorderThickness="1" BorderBrush="Gray">
                            <Viewbox HorizontalAlignment="Right" VerticalAlignment="Stretch">
                                <TextBlock Text="{Binding EstimatedWeight,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged ,Converter={StaticResource WeightToWeightUnitConverter}}" 
                                       HorizontalAlignment="Stretch" 
                                       TextAlignment="Right" 
                                       FontSize="{StaticResource FontSize35}" 
                                       Foreground="White"
                                       VerticalAlignment="Stretch">
                                </TextBlock>
                            </Viewbox>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBoxWeightTolerance,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Value="true">
                                            <Setter Property="Background" Value="Green"></Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsBoxWeightTolerance,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Value="false">
                                            <Setter Property="Background" Value="Red"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>

                    <!--WeightMachine Image-->
                    <Image Grid.Column="4"
                           Source="{DynamicResource WeightMachineImageStyle}"                
                           VerticalAlignment="Center"/>

                </Grid>
            </Grid>

        </Grid>


    </Grid>
</UserControl>
