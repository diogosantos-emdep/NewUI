<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.DeliveryNotePrintPreviewView"
                         Title="{DynamicResource PrintLabelViewTitle}"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:WarehouseCommon="clr-namespace:Emdep.Geos.Modules.Warehouse;assembly=Emdep.Geos.Modules.Warehouse"
                         xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                         mc:Ignorable="d" 
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         d:DesignHeight="300" d:DesignWidth="300"
                         Style="{DynamicResource WinUIDialogWindowStyle}">
    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CommandCancelButton}" />
    </dxwui:WinUIDialogWindow.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Height="30" FontSize="16" Text="{DynamicResource DeliveryNotePrintViewItemquantity}" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"></TextBlock>

        <dxe:SpinEdit Mask="d0" MaskType="Numeric" IsFloatValue="False"  Increment="1" AllowRoundOutOfRangeValue="True"
                      Grid.Column="1" Grid.Row="0" MinValue="1"  Height="30" Width="100"
                      VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" 
                      Value="{Binding Quantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      MaxValue="{Binding MaxQuantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  >
        </dxe:SpinEdit>

        <!--<TextBlock Height="30" FontSize="16" Text="{DynamicResource DeliveryNotePrintViewCopies}" Grid.Column="0" Grid.Row="1" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,0">
        </TextBlock>

        <dxe:SpinEdit Grid.Column="1" Mask="d0" MaskType="Numeric" IsFloatValue="False"  Increment="1" 
                      Grid.Row="1" MinValue="1" Value="{Binding Copies,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      Height="30" Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" 
                      AllowRoundOutOfRangeValue="True" ></dxe:SpinEdit>-->

        <Button Grid.Column="0" Grid.Row="2" Content="{DynamicResource DeliveryNotePrintViewPrint}"  
                FontSize="16" Height="30" Width="100" Style="{DynamicResource Button16Style}" 
                Command="{Binding CommandPrintButton}" HorizontalAlignment="Right" Margin="0,10,10,0">

        </Button>

        <Button Grid.Column="1" Grid.Row="2" Content="{DynamicResource DeliveryNotePrintViewCancel}" 
                FontSize="16" Height="30" Width="100" Style="{DynamicResource Button16Style}"
                Command="{Binding CommandCancelButton}"  HorizontalAlignment="Left" Margin="10,10,0,0">

        </Button>
    </Grid>
</dxwui:WinUIDialogWindow>
