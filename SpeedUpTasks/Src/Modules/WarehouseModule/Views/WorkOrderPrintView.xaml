<dxwui:WinUIDialogWindow
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:WarehouseCommon="clr-namespace:Emdep.Geos.Modules.Warehouse;assembly=Emdep.Geos.Modules.Warehouse"
                         xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" x:Class="Emdep.Geos.Modules.Warehouse.Views.WorkOrderPrintView"
                         xmlns:system="clr-namespace:System;assembly=mscorlib"
                         Title="{DynamicResource WorkOrderPrintViewTitle}"
                         mc:Ignorable="d" 
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         d:DesignHeight="300" d:DesignWidth="300"
                         Style="{DynamicResource WinUIDialogWindowStyle}">
    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CommandCancelButton}" />
    </dxwui:WinUIDialogWindow.InputBindings>
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Height="30" FontSize="16" Text="{DynamicResource WorkOrderPrintViewDN}"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OtItem.RevisionItem.WarehouseProduct.Article.IdArticleType}" Value="4">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <dxe:ComboBoxEdit AutoComplete="True" IsTextEditable="False" ImmediatePopup="True" IncrementalFiltering="True" ItemsSource="{Binding ArticlesStockUIList}"  SelectedItem="{Binding SelectedArticlesStock}" DisplayMember="WarehouseDeliveryNoteItem.WarehouseDeliveryNote.Code"  Grid.Column="1" Grid.Row="0" Height="30" Width="100"  Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" >
            <dxe:ComboBoxEdit.Style>
                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OtItem.RevisionItem.WarehouseProduct.Article.IdArticleType}" Value="4">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </dxe:ComboBoxEdit.Style>
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="EditValueChanged" Command="{Binding CommandDNSelectionChanged}"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:ComboBoxEdit>

        <TextBlock Height="30" FontSize="16" Text="{DynamicResource WorkOrderPrintViewSerialNo}" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,0"
                   Visibility="{Binding SerialNoVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBlock>
        <dxe:ComboBoxEdit AutoComplete="True" IsTextEditable="False" ImmediatePopup="True" IncrementalFiltering="True" 
                          ItemsSource="{Binding SerialNumberList}"  SelectedItem="{Binding SelectedSerialNumber}" 
                          DisplayMember="Code" Grid.Column="1" Grid.Row="1" Height="30" Width="100"  Margin="10,10,10,0" 
                          VerticalAlignment="Center" HorizontalAlignment="Left" Visibility="{Binding SerialNoVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
        </dxe:ComboBoxEdit>

        <TextBlock Height="30" FontSize="16" Text="{DynamicResource WorkOrderPrintViewItemquantity}" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        <dxe:SpinEdit  IsFloatValue="False"  Increment="1" AllowRoundOutOfRangeValue="True" Grid.Column="1" Grid.Row="2"
			Height="30" Width="100" Mask="#######0;"
			MinValue="0" InvalidValueBehavior="AllowLeaveEditor"   
			MaxValue="{Binding MaxQuantity,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
		    Value="{Binding Quantity,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
			VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,10,0"/>
        <TextBlock Height="30" FontSize="16" Text="{DynamicResource WorkOrderPrintViewCopies}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        <dxe:SpinEdit Grid.Column="1" Mask="d0" MaskType="Numeric" IsFloatValue="False"  Increment="1"  Grid.Row="3" MinValue="1" Value="{Binding Copies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" AllowRoundOutOfRangeValue="True"/>
        <Button Grid.Column="0" Grid.Row="4" Content="{DynamicResource WorkOrderPrintViewPrint}"  FontSize="16" Height="30" Width="100" Style="{DynamicResource Button16Style}" Command="{Binding CommandPrintButton}" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        <Button Grid.Column="1" Grid.Row="4" Content="{DynamicResource WorkOrderPrintViewCancel}"  FontSize="16" Height="30" Width="100" Style="{DynamicResource Button16Style}" Command="{Binding CommandCancelButton}"  HorizontalAlignment="Left" Margin="10,10,0,0"/>
    </Grid>
</dxwui:WinUIDialogWindow>
