<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.PrintArticleLocationLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Style="{DynamicResource WinUIDialogWindowStyle}"
             Title="{DynamicResource PrintArticleLocationLabel}"
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseWindowCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="14"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="14"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="14"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="210"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--<StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">-->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource IncludeArticlePhotoWithColon}" 
                                    HorizontalAlignment="Left" VerticalAlignment="Center">
            </TextBlock>

        <Border Width="50" Grid.Row="1" Grid.Column="2" Height="20" Margin="10,0,0,0" HorizontalAlignment="Left">
            <dxe:ToggleSwitch ToggleSwitchWidth="50" ToggleSwitchHeight="20" IsThreeState="False" 
                                  Style="{DynamicResource ToggleSwitchlForegroundStyleForPrintLabel}"
                                  IsChecked="{Binding IsIncludeArticlePhoto}"></dxe:ToggleSwitch>
            </Border>
        <!--</StackPanel>-->

        <Label Content="{DynamicResource WarehouseLocationPrintLabelSize}" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>

        <dxe:ComboBoxEdit Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left"  Width="200" 
                          IsTextEditable="False" ItemsSource="{Binding LabelSizeList}"
                          DisplayMember="Value" Margin="10,0,0,0" ValueMember="IdLookupValue" Height="35" 
                          SelectedItem="{Binding SelectedLabelSize}" />

        <Label Content="{DynamicResource LabelStyleWithColon}" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" ></Label>

        <dxe:ListBoxEdit Name="LabelStyleListBox" Grid.Row="5" Grid.Column="2" Width="200"
                         ItemsSource="{Binding Images, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                         SelectedItem="{Binding SelectedImageStyle, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                         AllowItemHighlighting="True" SelectionMode="Single" Focusable="True" Margin="10,0,0,0" ShowBorder="False" >
            <dxe:ListBoxEdit.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                    </StackPanel>
                </ItemsPanelTemplate>
            </dxe:ListBoxEdit.ItemsPanel>
            <dxe:ListBoxEdit.ItemTemplate>
                <DataTemplate>
                    <Image Width="92" Height="35" Source="{Binding Image}" HorizontalAlignment="Stretch" /> <!--Width="92" Height="30"-->
                </DataTemplate>
            </dxe:ListBoxEdit.ItemTemplate>
        </dxe:ListBoxEdit>

        <StackPanel Grid.Row="7" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal" 
                    Width="210" Grid.Column="2" Grid.ColumnSpan="2">

            <Button Content="{DynamicResource Accept}"
                            Command="{Binding AcceptButtonCommand}"
                            Height="30"
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom" />

            <Button Content="{DynamicResource Cancel}"
                            Command="{Binding CloseWindowCommand}" 
                            Height="30"
                            Width="100"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </StackPanel>


        <!--<Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource WarehouseLocationPrintLabelSize}" Grid.Column="0"  HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <dxe:ComboBoxEdit Grid.Column="1" HorizontalAlignment="Left" Width="100" IsTextEditable="False" ItemsSource="{Binding LabelSizeList}" SelectedIndex="{Binding SelectedIndexLabelSize,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>-->
    </Grid>
</dxwui:WinUIDialogWindow>
