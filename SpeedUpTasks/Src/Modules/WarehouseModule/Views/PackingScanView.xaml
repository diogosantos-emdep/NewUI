<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.PackingScanView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
                         xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
                         xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
                         mc:Ignorable="d" 
                         d:DesignHeight="768" d:DesignWidth="1366">
    
    <dxwui:WinUIDialogWindow.Resources>
        <UIConverter:InvertedBooleanConverter x:Key="invertedBooleanConverter"/>
    </dxwui:WinUIDialogWindow.Resources>

    <dxwui:WinUIDialogWindow.TitleStyle>
        <Style TargetType="ContentControl">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="{x:Type ColumnDefinition}">
                                            <Setter Property="Width" Value="56*"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                                             Value="Collapsed">
                                                    <Setter Property="Width" Value="51*" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition> 
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="{x:Type ColumnDefinition}">
                                            <Setter Property="Width" Value="44*"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                                             Value="Collapsed">
                                                    <Setter Property="Width" Value="49*" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="80*"/>
                                    <ColumnDefinition Width="3"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource Packing}" 
                                           Style="{DynamicResource PickingWinUIDialogWindowTitleStyle}" 
                                           HorizontalAlignment="Left" />

                                <DockPanel Grid.Column="2" HorizontalAlignment="Left">
                                    <Image x:Name="errorImage" Height="24" Width="24"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/error.png" 
                                   Visibility="{Binding DataContext.IsWrongItemErrorVisible,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" DockPanel.Dock="Left"/>
                                    <TextBlock Name="errorText" Text="{Binding DataContext.WrongItem, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"  
                                               Foreground="#FF0000" DockPanel.Dock="Right" FontSize="24" Margin="2 0 0 0"/>
                                </DockPanel>
                            </Grid>
                           
                            
                            <ToggleButton Grid.Column="1" Width="70" Height="30"
                                          HorizontalAlignment="Left"
                                          Name="btModeSwitch"
                                          IsChecked="{Binding DataContext.IsScanDirectionArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                          Visibility="{Binding DataContext.PackingBoxDetailsVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="{x:Type Image}">
                                            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsScanDirectionArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" Value="false">
                                                    <Setter Property="Source" Value="{DynamicResource LeftArrowIndicatorImageStyle}"/>
                                                    <Setter Property="ToolTip" Value="Unpacked items"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DataContext.IsScanDirectionArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" Value="true">
                                                    <Setter Property="Source" Value="{DynamicResource RightArrowIndicatorImageStyle}"/>
                                                    <Setter Property="ToolTip" Value="Packed items"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </ToggleButton>

                            <Grid  Grid.Column="3" HorizontalAlignment="Right" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="2"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="3"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="2"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="3"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="2"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!--AutoWeighing-->
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" 
                                               Text="{DynamicResource AutoWeighing}" 
                                               Grid.Column="0"
                                               Style="{DynamicResource PackingTextBlockStyle}"
                                               Visibility="{Binding DataContext.PackingBoxDetailsVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" />

                                <Border Width="70" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" 
                                        Grid.Column="2"
                                        Visibility="{Binding DataContext.PackingBoxDetailsVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">

                                    <dxe:ToggleSwitch IsChecked="{Binding DataContext.IsAutoWeighing,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                                      IsThreeState="False" Style="{DynamicResource ToggleSwitchStyle}" 
                                                      Visibility="{Binding DataContext.PackingBoxDetailsVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
                                </Border>
                                <!--ScanBox-->
                                <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" 
                                            Grid.Column="4"
                                            Text="{DynamicResource ScanBox}" 
                                            Style="{DynamicResource PackingTextBlockStyle}"/>
                                <Border Width="70" Height="30" 
                                        VerticalAlignment="Center" HorizontalAlignment="Right" 
                                        Grid.Column="6">
                                    <dxe:ToggleSwitch IsChecked="{Binding DataContext.IsScanBox, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                                      IsThreeState="False" 
                                                      Style="{DynamicResource ToggleSwitchStyle}" />
                                </Border>


                                <!--ScanItem-->
                                <TextBlock Grid.Column="8" VerticalAlignment="Center"
                                           HorizontalAlignment="Right" 
                                           Text="{DynamicResource ScanItem}"
                                           Style="{DynamicResource PackingTextBlockStyle}"/>

                                <Border Width="70" Height="30" HorizontalAlignment="Right" Grid.Column="10">
                                    <dxe:ToggleSwitch IsChecked="{Binding DataContext.IsScanBox,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Converter={StaticResource invertedBooleanConverter}}" 
                                                      IsThreeState="False" 
                                                      Style="{DynamicResource ToggleSwitchStyle}" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </dxwui:WinUIDialogWindow.TitleStyle> 

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="PreviewTextInput">
            <behaviors:InvokeDelegateCommandAction Command="{Binding CommandScanBarcode}" CommandParameter="{Binding Path=InvokeParameter, RelativeSource={RelativeSource Self}}"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="Loaded">
            <behaviors:InvokeDelegateCommandAction Command="{Binding CommandOnLoaded}" CommandParameter="{Binding Path=InvokeParameter, RelativeSource={RelativeSource Self}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <dxmvvm:Interaction.Behaviors>
        <dxwuin:FrameNavigationService Frame="{Binding ElementName=NavigationRoot}"/>
    </dxmvvm:Interaction.Behaviors>

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelButtonCommand}" />
    </dxwui:WinUIDialogWindow.InputBindings>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid ShowGridLines="True"
              Height="{Binding WindowHeight,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
              Width="{Binding WindowWidth,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
            <dxwui:NavigationFrame x:Name="NavigationRoot" AnimationType="SlideHorizontal" BackNavigationMode="PreviousScreen" />
        </Grid>
    </ScrollViewer>
    
</dxwui:WinUIDialogWindow>
