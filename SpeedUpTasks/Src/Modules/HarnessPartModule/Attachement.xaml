<dx:DXWindow x:Class="Emdep.Geos.Modules.HarnessPart.Attachement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Attachement" Height="400" Width="525" 
    xmlns:dxlc="clr-namespace:DevExpress.Xpf.LayoutControl;assembly=DevExpress.Xpf.LayoutControl.v19.2"
    xmlns:dxg1="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="clr-namespace:DevExpress.Xpf.Grid;assembly=DevExpress.Xpf.Grid.v19.2" 
     xmlns:local="clr-namespace:Emdep.Geos.Modules.HarnessPart"
    Loaded="DXWindow_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <Window.Resources>
        <DataTemplate x:Key="chkTemplate">
            <dxe:CheckEdit />
        </DataTemplate>
        <DataTemplate x:Name="chkSelectAll"
                      x:Key="chkHeaderTemplate">
            <dxe:CheckEdit x:Name="chkSelectAll" IsChecked="{Binding IsAllRowsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Attachement}}, Mode=TwoWay}" />
        </DataTemplate>
    </Window.Resources>

    <Grid RenderTransformOrigin="0.592,0.502" Margin="0,10,2,0">
     
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="280" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <!--<Label Content="Attachments"  Margin="0,0,0,16" Grid.Column="0"  Grid.Row="0" Grid.RowSpan="2"  VerticalAlignment="Top" HorizontalAlignment="Left" ></Label>-->
        <!--<dxe:CheckEdit Content="Check All" Margin="0,0,0,-20" Padding="0"  />-->
        <dxg:GridControl CustomUnboundColumnData="grid_CustomUnboundColumnData" x:Name="gridAttachments" AutoExpandAllGroups="True" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" Height="280" VerticalAlignment="Top">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Selected" Header="" Width="30" 
                                HorizontalHeaderContentAlignment="Center"
                                UnboundType="Boolean" AllowSorting="False" 
                                AllowAutoFilter="False" AllowBestFit="False" 
                                AllowColumnFiltering="False" 
                                AllowGrouping="False" 
                                HeaderTemplate="{StaticResource chkHeaderTemplate}">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Data.Selected}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>                    
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="CategoryName" GroupIndex="0" GroupInterval="Value" Header="" AllowResizing="False" FixedWidth="True" />
                <dxg:GridColumn FieldName="FileName" AllowResizing="False" FixedWidth="True" />
            </dxg:GridControl.Columns>

            <dxg:GridControl.View>
                <dxg:TableView x:Name="tableView1" AllowBestFit="True" 
                                       AllowColumnMoving="False" AllowScrollAnimation="True"
                                       AutoMoveRowFocus="False"
							           EditorButtonShowMode="ShowAlways" ShowAutoFilterRow="False" AllowResizing="False" 
                                       ShowGroupPanel="False" ShowIndicator="False">
                </dxg:TableView>
            </dxg:GridControl.View>

        </dxg:GridControl>        
        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Height="30">
            <Button Grid.Column="0" Height="30" VerticalAlignment="Top" Width="60" Grid.Row="4" Content="Accept" Margin="0,0,5,0">
            </Button>
            <Button Grid.Column="0" Height="30" Grid.Row="4" Content="Close" Width="60" Margin="0,0,4,0" Click="Button_Click">
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
