                    <ColumnDefinition Width="Auto"/>
                   
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="90"/>
                    <!--<RowDefinition Height="30"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="90"/>-->
                    <RowDefinition Height="70"/>

                </Grid.RowDefinitions>


                <Label Grid.Row="0" Grid.Column="0" Content="Settings" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                <dx:GroupFrame Grid.Column="0" Grid.Row="1" Header="Theme" HorizontalAlignment="Left"  Width="400" BorderBrush="Red">


