                                <dxb:Gallery.Groups >
                                    <dxb:GalleryItemGroup Name="myGalleryGroup1" Caption="{x:Null}"   >
                                        <dxb:GalleryItemGroup.Items>
                                            <dxb:GalleryItem Caption="Black with Blue"  Glyph="/Emdep.Geos.Modules.HarnessPartcomponent/Image/MetropolisBlue.png"/>
                                            <dxb:GalleryItem Caption="White with Blue"  Glyph="/Emdep.Geos.Modules.HarnessPartcomponent/Image/MetropolisWhite.png" />
                                        </dxb:GalleryItemGroup.Items>
                                    </dxb:GalleryItemGroup>

                                </dxb:Gallery.Groups>
                            </dxb:Gallery>
                        </dxb:GalleryControl.Gallery>
                    </dxb:GalleryControl>


                </dx:GroupFrame>
                <dx:GroupFrame Grid.Column="0" Grid.Row="2" Header="Language" HorizontalAlignment="Left"  Width="400" BorderBrush="Red">
                    <dxe:ComboBoxEdit ApplyItemTemplateToSelectedItem="True" IsTextEditable="False"  Grid.Column="4" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Segoe UI Light" FontSize="15" Width="100" >
                        <dxe:ComboBoxEdit.Items>
                            <dxe:ComboBoxEditItem IsSelected="True">
                                <dxe:ComboBoxEditItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/English.gif" Margin="0,0,2,0" Height="20" Width="20"/>
                                        <TextBlock Text="English" Foreground="White"  FontFamily="Segoe UI" FontSize="14"  />
                                    </StackPanel>
                                </dxe:ComboBoxEditItem.Content>
                            </dxe:ComboBoxEditItem>
                            <dxe:ComboBoxEditItem>
                                <dxe:ComboBoxEditItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/spanish.gif" Margin="0,0,2,0" Height="20" Width="20"/>
