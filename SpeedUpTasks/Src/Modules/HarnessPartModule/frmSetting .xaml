                    <dxe:SpinEdit x:Name="cv"  Width="50" Text="10" MaskType="Numeric"/>
                </dxlc:LayoutItem>
                <dx:GroupFrame Grid.Column="0" Grid.Row="3" Header="Thumbnail size" HorizontalAlignment="Stretch"  Width="400" BorderBrush="Red">

                    <StackPanel Orientation="Vertical"  Width="400" >
                        <dxe:CheckEdit Content="Maintain aspect ratio" x:Name="cbSample">
                        </dxe:CheckEdit>
                        <dxlc:LayoutItem Label="Width  " >
                            <StackPanel Orientation="Horizontal">

                                <dxe:SpinEdit x:Name="cv1"  Width="50" Text="10" HorizontalAlignment="Left"   Mask ="N"  
    MaskType="Numeric" MaxValue="100" MinValue="0" />
                                <dxlc:LayoutItem Label="  Pixels" HorizontalAlignment="Left" VerticalAlignment="Center"></dxlc:LayoutItem>
                            </StackPanel>
                        </dxlc:LayoutItem>


                        <dxlc:LayoutItem Label="Height ">
                            <StackPanel Orientation="Horizontal">
                                <dxe:SpinEdit x:Name="cv4" Mask ="N"  Width="50" Text="10" HorizontalAlignment="Left"  Margin="0,5,0,0" MaskType="Numeric"/>
                                <dxlc:LayoutItem Label="  Pixels" HorizontalAlignment="Left" VerticalAlignment="Center"></dxlc:LayoutItem>
                            </StackPanel>
                        </dxlc:LayoutItem>

                    </StackPanel>
                </dx:GroupFrame>
                <dx:GroupFrame Grid.Column="0" Grid.Row="4" Header="Default Result View" HorizontalAlignment="Stretch"   >
                    <dxlc:LayoutItem Label="" Grid.Column="0" Grid.Row="2"  >
                        <dxe:ListBoxEdit Height="50" Name="listBoxEdit1" VerticalAlignment="Top"  ShowBorder="False" >
                            <dxe:ListBoxEdit.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </dxe:ListBoxEdit.ItemsPanel>
                            <dxe:ListBoxEdit.Items>
                                <dxe:ListBoxEditItem Content="Grid"/>
                                <dxe:ListBoxEditItem Content="Thumbnails"/>
                            </dxe:ListBoxEdit.Items>
                            <dxe:ListBoxEdit.StyleSettings>
