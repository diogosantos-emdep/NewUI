                    <!--<dxb:BarItemLink BarItemName="gTheme" />-->
                    <dxb:GalleryControl   Grid.Column="0" Grid.Row="0"  Height="55"  VerticalAlignment="Top" HorizontalAlignment="Stretch" >
                        <dxb:GalleryControl.Gallery >
                            <dxb:Gallery ColCount="2"  GroupItemsMargin="0"
                                              IsGroupCaptionVisible="False"
                                              IsItemCaptionVisible="True"   
                                              IsItemGlyphVisible="True" VerticalScrollbarVisibility="Hidden"
