                    <StackPanel Orientation="Horizontal" >
                        <Button Content="Apply"  x:Name="btnApply" Height="30"  Width="100" Grid.Column="1" Grid.Row="2"  Margin="0,0,9,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        <Button Content="Cancel"   x:Name="btnCancel" Height="30"  Width="100" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"  Click="btnCancel_Click" />
