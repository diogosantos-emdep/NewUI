                                        <TextBlock Text="French" Foreground="White"  FontFamily="Segoe UI" FontSize="14"  />
                                    </StackPanel>
                                </dxe:ComboBoxEditItem.Content>
                            </dxe:ComboBoxEditItem>
                        </dxe:ComboBoxEdit.Items>
                    </dxe:ComboBoxEdit>
                </dx:GroupFrame>
