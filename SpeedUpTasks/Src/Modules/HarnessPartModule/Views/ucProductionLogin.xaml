<UserControl x:Class="Emdep.Geos.Modules.HarnessPart.Views.ucProductionLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  Foreground="White"
     xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" Padding="0,0,0,0" Margin="0,0,0,0"
             mc:Ignorable="d"  
             d:DesignHeight="350" d:DesignWidth="380">
    <!--<UserControl.Background>
        <SolidColorBrush Color="#FF494848" Opacity="0.95"/>
        --><!--<SolidColorBrush Color="#4d4d4d " Opacity="0.95"/>--><!--

    </UserControl.Background>-->
    <UserControl.Background>
        <SolidColorBrush Color="#333333" />
        <!--<SolidColorBrush Color="#4d4d4d " Opacity="0.95"/>-->

    </UserControl.Background>
    <Grid   Background="Transparent"    Height="450" Width="380" >
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>       
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center" >
            <Ellipse  
                 Stroke="White" StrokeThickness="1"
                 Height="100" Width="100"  ToolTip="An author." HorizontalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Emdep.Geos.Modules.HarnessPartcomponent/Image/LoginUser.png" Stretch="Fill" />
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>        
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" >
            <Label   Width="60"  >
                <Label.Background>
                    <ImageBrush ImageSource="/Emdep.Geos.Modules.HarnessPartcomponent/Image/BarcodeScan.png"  />
                </Label.Background>
            </Label>
            <dxe:PasswordBoxEdit   HorizontalAlignment="Right" Width="265" AllowUpdateTwoWayBoundPropertiesOnSynchronization="False" InvalidValueBehavior="AllowLeaveEditor" PasswordChar="●"  FontSize="25"  HorizontalContentAlignment="Center" MaxLength="13" VerticalContentAlignment="Center"  AcceptsReturn="True"  Grid.Row="3"  FocusManager.FocusedElement="{Binding ElementName=PasswordBoxEdit1}" Name="PasswordBoxEdit1"  />
        </StackPanel>      
        <Label Name="lbl" Grid.Row="5" Content="Wating for scan...." VerticalAlignment="Bottom" HorizontalAlignment="Center"   FontFamily="calibri" FontSize="35"   />
        <Label x:Name="lbl_Copy" Grid.Row="1"  Content="OPERATOR ID"   VerticalAlignment="Bottom" HorizontalAlignment="Center"  FontFamily="calibri" FontSize="25"   />
    </Grid>

</UserControl>
