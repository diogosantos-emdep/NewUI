<UserControl x:Class="Emdep.Geos.Modules.HarnessPart.ucTotalConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dxnav="clr-namespace:DevExpress.Xpf.Navigation;assembly=DevExpress.Xpf.Controls.v19.2" 
             xmlns:dxlc="clr-namespace:DevExpress.Xpf.LayoutControl;assembly=DevExpress.Xpf.LayoutControl.v19.2"
             xmlns:dxg="clr-namespace:DevExpress.Xpf.Grid;assembly=DevExpress.Xpf.Grid.v19.2"
             d:DesignHeight="300" d:DesignWidth="300" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" x:Name="ucconnetor">
    <Grid>
        <dxg:GridControl Grid.Row="2"
                         ItemsSource="{Binding CurrentChildren}"
                         SelectionMode="Row"
                         CurrentItem="{Binding CurrentItem}"
                         AutoExpandAllGroups="True">
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding Path=OpenCurrentItemCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->

            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Caption" Header="Caption" ReadOnly="True">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>                             
                                 <Hyperlink Command="{Binding DataContext.OpenCurrentItemCommand,
                                            RelativeSource={RelativeSource AncestorType={x:Type dxg:GridColumn}}}">                  
                                     <!--<TextBlock Text="{Binding CurrentItem.Caption,
                                                RelativeSource={RelativeSource AncestorType={x:Type viewModels:ObjectItemViewModel}}}" />-->                           
                                </Hyperlink>                 
                            </TextBlock>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Template.Caption" Header="Type" ReadOnly="True" GroupIndex="0" />
            </dxg:GridControl.Columns>

            <dxg:GridControl.View>
                <dxg:TableView WaitIndicatorType="Panel" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        
    </Grid>
</UserControl>
