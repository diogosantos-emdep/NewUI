<UserControl x:Class="Emdep.Geos.Modules.HarnessPart.Views.ucThumbnailImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:dxlc="clr-namespace:DevExpress.Xpf.LayoutControl;assembly=DevExpress.Xpf.LayoutControl.v17.2"
              xmlns:local="clr-namespace:Emdep.Geos.Modules.HarnessPart.Views">
    <UserControl.Resources>
        <DataTemplate x:Key="itemTemplate">
            <dxlc:GroupBox Header="Important Logs" Content="{Binding}" MaximizeElementVisibility="Visible">
                <dxlc:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Hyperlink Command="{Binding View.DataContext.HyperLinkCommand}" BaselineAlignment="Subscript" CommandParameter="{Binding}">
                                    <Hyperlink.Style>
                                            <Style TargetType="Hyperlink">
                                                <Setter Property="Foreground" Value="#2AB7FF" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter Property="Foreground" Value="OrangeRed" />
                                                        </Trigger>
                                                        
                                                         <!--<Trigger  Property="IsFocused" Value="true">
                                                            <Setter Property="Foreground" Value="Blue" />
                                                        </Trigger>-->
                                                    </Style.Triggers>
                       
                                            </Style>
                                        </Hyperlink.Style>
                                    
                                    <TextBlock Text="EPN050485" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center " />
                                </Hyperlink>
                                </TextBlock>
                    </DataTemplate>
                </dxlc:GroupBox.HeaderTemplate>
                <dxlc:GroupBox.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0" Width="100" Height="100" dxlc:FlowLayoutControl.IsFlowBreak="True">
                            <local:ImageContainer Content="{Binding VisualAid}" Width="100" Height="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Cursor="Hand">
                                <local:ImageContainer.Template>
                                    <ControlTemplate TargetType="local:ImageContainer">
                                        <Image x:Name="root" Source="{TemplateBinding Content}" RenderTransformOrigin="0.2,0.2" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="100">
                                            <Image.RenderTransform>
                                                <ScaleTransform />
                                            </Image.RenderTransform>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualStateGroup.Transitions>
                                                        <VisualTransition To="MouseOver" GeneratedDuration="0:0:0.075" />
                                                        <VisualTransition From="MouseOver" GeneratedDuration="0:0:0.05" />
                                                    </VisualStateGroup.Transitions>
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="root" Storyboard.TargetProperty="(RenderTransform).ScaleX"
                                                                     To="1.10" Duration="0" />
                                                            <DoubleAnimation Storyboard.TargetName="root" Storyboard.TargetProperty="(RenderTransform).ScaleY"
                                                                     To="1.03" Duration="0" />
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed" />
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Image>
                                    </ControlTemplate>
                                </local:ImageContainer.Template>
                            </local:ImageContainer>
                        </StackPanel>
                    </DataTemplate>

                </dxlc:GroupBox.ContentTemplate>
                <dxlc:GroupBox.MaximizedContentTemplate>
                    <DataTemplate>
                        <dxlc:LayoutControl ItemSpace="2">
                            <!--<dxlc:LayoutControl.GroupBoxStyle>
                                <Style TargetType="dxlc:GroupBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="dxlc:GroupBox">
                                                <dx:GroupFrame Header="{TemplateBinding Header}" Content="{TemplateBinding Content}"  />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </dxlc:LayoutControl.GroupBoxStyle>-->
                            <dxlc:FlowLayoutControl x:Name="layoutImages" ItemsSource="{Binding  AllvisualAid}"
                              AllowItemMoving="False" AllowLayerSizing="False" AllowMaximizedElementMoving="False" AnimateItemMoving="True" DragScrolling="False"
                              Orientation="Horizontal">
                                <dxlc:FlowLayoutControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <dxlc:GroupBox Height="250" Width="250" Padding="0,0,0,0" Margin="0,0,30,0" x:Name="groupBox1">
                                                <local:ImageContainer Content="{Binding}" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                                                    <local:ImageContainer.Template>
                                                        <ControlTemplate TargetType="local:ImageContainer">
                                                            <Image x:Name="root" Source="{TemplateBinding Content}" RenderTransformOrigin="0.2,0.2" Stretch="UniformToFill" HorizontalAlignment="Center">
                                                                <Image.RenderTransform>
                                                                    <ScaleTransform />
                                                                </Image.RenderTransform>
                                                                <VisualStateManager.VisualStateGroups>
                                                                    <VisualStateGroup x:Name="CommonStates">
                                                                        <VisualStateGroup.Transitions>
                                                                            <VisualTransition To="MouseOver" GeneratedDuration="0:0:0.075" />
                                                                            <VisualTransition From="MouseOver" GeneratedDuration="0:0:0.05" />
                                                                        </VisualStateGroup.Transitions>
                                                                        <VisualState x:Name="Normal" />
                                                                        <VisualState x:Name="MouseOver">
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="root" Storyboard.TargetProperty="(RenderTransform).ScaleX"
                                                                     To="1.10" Duration="0" />
                                                                                <DoubleAnimation Storyboard.TargetName="root" Storyboard.TargetProperty="(RenderTransform).ScaleY"
                                                                     To="1.03" Duration="0" />
                                                                            </Storyboard>
                                                                        </VisualState>
                                                                        <VisualState x:Name="Pressed" />
                                                                    </VisualStateGroup>
                                                                </VisualStateManager.VisualStateGroups>
                                                            </Image>
                                                        </ControlTemplate>
                                                    </local:ImageContainer.Template>
                                                </local:ImageContainer>
                                            </dxlc:GroupBox>
                                            <TextBox Text="Patilla ABIERTA" AcceptsReturn="True" Height="50" VerticalScrollBarVisibility="Visible" Margin="0,0,30,0" IsReadOnly="True"
                   VerticalAlignment="Center">
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </dxlc:FlowLayoutControl.ItemTemplate>
                            </dxlc:FlowLayoutControl>
                        </dxlc:LayoutControl>
                    </DataTemplate>
                </dxlc:GroupBox.MaximizedContentTemplate>

            </dxlc:GroupBox>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <dxlc:FlowLayoutControl Orientation="Horizontal" Name="flowControl" ItemsSource="{Binding}" ItemTemplate="{StaticResource itemTemplate}">
        </dxlc:FlowLayoutControl>
    </Grid>
</UserControl>
