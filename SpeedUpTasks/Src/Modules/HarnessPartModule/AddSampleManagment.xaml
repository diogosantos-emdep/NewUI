<dx:DXWindow
    x:Class="Emdep.Geos.Modules.HarnessPart.AddSampleManagment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    Title="Add Sample" Height="125" Width="285" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  ShowIcon="False">

    <Grid>
        <StackPanel Height="866" Margin="0,0,0,-546" VerticalAlignment="Top">

            <dxlc:LayoutControl Orientation="Vertical" Margin="0,0,0,0" Padding="0,0,0,0">
                <dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="Location Name"  Width="150" >
                        <!--<StackPanel Orientation="Horizontal" Margin="5,10,5,5">-->
                        <!--<dxe:TextEdit x:Name="cv" />-->
                        <dxe:ComboBoxEdit x:Name="cv"   >
                            <dxe:ComboBoxEditItem Content="---"/>
                            <dxe:ComboBoxEditItem Content="A"/>
                            <dxe:ComboBoxEditItem Content="B"/>
                            <dxe:ComboBoxEditItem Content="C"/>
                            <dxe:ComboBoxEditItem Content="D"/>
                            <dxe:ComboBoxEditItem Content="E"/>
                            <dxe:ComboBoxEditItem Content="F"/>
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="null"  >
                        <dxe:ComboBoxEdit x:Name="cv1"  Width="50"  HorizontalAlignment="Left" >
                            <dxe:ComboBoxEditItem Content="---"/>
                            <dxe:ComboBoxEditItem Content="01"/>
                            <dxe:ComboBoxEditItem Content="02"/>
                            <dxe:ComboBoxEditItem Content="03"/>
                            <dxe:ComboBoxEditItem Content="04"/>
                            <dxe:ComboBoxEditItem Content="05"/>
                            <dxe:ComboBoxEditItem Content="06"/>
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>
                    <!--</StackPanel>-->

                </dxlc:LayoutGroup>
                <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Height="50">
                    <Button x:Name="btnAccept"             Grid.Column="0" Height="30" VerticalAlignment="Top"  Width="60"  Grid.Row="4" Content="Accept" Margin="0,10,4,0" >
                    </Button>
                    <Button    Grid.Column="0" Height="30" Grid.Row="4" Content="Close" Width="60" Margin="0,10,0,0"  VerticalAlignment="Top"    >
                    </Button>
                </StackPanel>



            </dxlc:LayoutControl>


        </StackPanel>
    </Grid>
</dx:DXWindow>
