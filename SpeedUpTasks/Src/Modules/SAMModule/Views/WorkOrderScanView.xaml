<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SAM.Views.WorkOrderScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SAM.Views"
             Style="{DynamicResource WinUIDialogWindowStyle}"
             TitleStyle="{DynamicResource WinUIDialogWindowWorkOrderTitleStyle}" 
             mc:Ignorable="d" Title="{Binding WindowHeader,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" Height="250"  >
    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CommandCancelButton}" />
    </dxwui:WinUIDialogWindow.InputBindings>
    <Grid Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="1"  VerticalAlignment="Top" Text="{DynamicResource WorkOrder}"  FontWeight="SemiBold" FontSize="20" HorizontalAlignment="Left"></TextBlock>
        
        <Label Grid.Row="2" Grid.Column="0" Width="60" Style="{DynamicResource LabelBackgroundImageBrush}" HorizontalAlignment="Right"  ToolTip="{DynamicResource Scan}"  />

        <dxe:TextEdit  Width="350"  Margin="5" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"  ShowBorder="True"  Height="60" FontSize="40" VerticalContentAlignment="Center" HorizontalAlignment="Left" AcceptsReturn="False" AcceptsTab="False" TextWrapping="NoWrap"
                       FocusManager.FocusedElement="{Binding ElementName=TextEditBarcode}" AllowUpdateTwoWayBoundPropertiesOnSynchronization="False"
                       InvalidValueBehavior="AllowLeaveEditor"  TextTrimming="CharacterEllipsis" VerticalScrollBarVisibility="Disabled" x:Name="TextEditBarcode" >
           
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="KeyDown" Command="{Binding CommandScanBarcode}" PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
            <dxe:TextEdit.EditValue>
                <Binding Path="WorkOrderBarcode" ValidatesOnDataErrors="True" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
            </dxe:TextEdit.EditValue>
        </dxe:TextEdit>

        <StackPanel Orientation="Horizontal"  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Visibility="{Binding WorkOrderBarcodeErrorVisibility}" Height="25"  Grid.ColumnSpan="3" Margin="5,0,0,0">
            <Image Height="24" Width="24" Source="/Emdep.Geos.Modules.SAM;component/Assets/Images/error.png"  />
            <TextBlock Text="{Binding WorkOrderBarcodeError}" Foreground="{Binding WorkOrderErrorColour}" FontWeight="SemiBold"  FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right" />
        </StackPanel>
     
        <Button Content="{DynamicResource Cancel}" Grid.Column="1" Grid.Row="4"
                Command="{Binding CommandCancelButton}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"
                FontSize="16" Height="30" Width="100" Style="{DynamicResource Button16Style}"/>

    </Grid>
</dxwui:WinUIDialogWindow>
