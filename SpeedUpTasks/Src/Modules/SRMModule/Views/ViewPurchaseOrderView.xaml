                                        </dxg:GridControl.View>

                                        <dxg:GridControl.DetailDescriptor>
                                            <dxg:DataControlDetailDescriptor ItemsSourceBinding="{Binding ReceivedDeliveryNotes}">

                                                <dxg:GridControl ShowBorder="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                    <dxg:GridColumn Header="{DynamicResource GridColReference}" FieldName="Code" FilterPopupMode="CheckedList"/>
                                                    <dxg:GridColumn Header="{DynamicResource GridColSupplierCode}" FieldName="SupplierCode"  FilterPopupMode="CheckedList"/>
                                                    <dxg:GridColumn Header="{DynamicResource GridColDeliveryDate}" FieldName="DeliveryDate" FilterPopupMode="CheckedList"/>
                                                    <dxg:GridColumn Header="{DynamicResource GridColQuantity}" FieldName="Quantity" FilterPopupMode="CheckedList"/>
                                                    <dxg:GridColumn Header="{DynamicResource GridColTotalPrice}" FieldName="TotalAmount" FilterPopupMode="CheckedList"/>

