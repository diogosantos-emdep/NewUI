<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.PCM.Views.AddEditCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.PCM.Views"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:Converter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
             mc:Ignorable="d" 
                         
             Style="{DynamicResource WinUIDialogWindowStyle}"
             Title="{Binding WindowHeader}"
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}">

    <dxwui:WinUIDialogWindow.Resources>
        <dxmvvm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Converter:GroupboxBackroundColorConvertor x:Key="GroupboxBackroundColorConvertor" />
        <Converter:ForegroundColorConverter x:Key="ForegroundColorConverter" />
    </dxwui:WinUIDialogWindow.Resources>

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding EscapeButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="45"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>

        <!--Name-->
        <TextBlock Grid.Row="0" Grid.Column="0"  Text="{DynamicResource Name}" Style="{StaticResource TextBlock14Style}" VerticalAlignment="Center"  />
        <dxe:TextEdit Grid.Row="0" Grid.Column="2"
                      VerticalContentAlignment="Center" NullText="{DynamicResource Name}">
            <dxe:TextEdit.EditValue>
                <Binding Path="DataContext.Name" RelativeSource="{RelativeSource AncestorType=dxwui:WinUIDialogWindow}" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" 
                         ValidatesOnDataErrors="True">
                    <Binding.ValidationRules>
                        <Validation:AddEditCategoryValidation FieldName="Name" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </dxe:TextEdit.EditValue>
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand 
                    EventName="EditValueChanged" Command="{Binding DataContext.ChangeNameCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:TextEdit>

        <!--Description-->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Description}" Style="{StaticResource TextBlock14Style}" VerticalAlignment="Center" />
        <dxe:TextEdit Grid.Row="2" Grid.Column="2"  Text="{Binding DataContext.Description,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" NullText="{DynamicResource Description}"  VerticalContentAlignment="Top" TextWrapping="Wrap" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AcceptsReturn="True">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand 
                    EventName="EditValueChanged" Command="{Binding DataContext.ChangeDescriptionCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:TextEdit>

        <!--Checkbox-->
        <dxe:CheckEdit Grid.Row="4" Grid.Column="2" IsChecked="{Binding IsCheckedCopyNameAndDescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                       HorizontalAlignment="Left" VerticalAlignment="Center">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand 
                    EventName="Checked" Command="{Binding DataContext.CheckedCopyNameDescriptionCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
            </dxmvvm:Interaction.Behaviors>

            <TextBlock Grid.Row="4" Grid.Column="2" Margin="5 0 0 0" Text="{DynamicResource CopyNameDescription}" Style="{StaticResource TextBlock14Style}" VerticalAlignment="Center" />
        </dxe:CheckEdit>

        <!--Parent-->
        <TextBlock Grid.Row="6" Grid.Column="0"  Text="{DynamicResource Parent}" Style="{StaticResource TextBlock14Style}" VerticalAlignment="Center"  />

        <Grid Grid.Column="2"  Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="8"/>
            </Grid.ColumnDefinitions>

            <dxg:LookUpEdit Grid.Column="0"  Width="270"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding DataContext.ParentCategoryList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                            DisplayMember="Name" ValueMember="IdPCMArticleCategory" VerticalAlignment="Stretch" Name="lookUpEditParentCategory" 
                            AutoPopulateColumns="False" 
                            AutoComplete="True" IsTextEditable="False" ImmediatePopup="True" IncrementalFiltering="False" 
                            IncrementalSearch="False">
                <!--AutoComplete="True" IsTextEditable="False" ImmediatePopup="True"-->
                <!--IncrementalSearch="False" IncrementalFiltering="False" ImmediatePopup="False" AutoComplete="False" ValidateOnTextInput="True"-->
                <dxg:LookUpEdit.SelectedItem>
                    <Binding Path="DataContext.SelectedParentCategory" RelativeSource="{RelativeSource AncestorType=dxwui:WinUIDialogWindow}" ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <Validation:AddEditCategoryValidation FieldName="SelectedParentCategory" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </dxg:LookUpEdit.SelectedItem>
                <dxg:LookUpEdit.StyleSettings>                    <dxg:SearchLookUpEditStyleSettings/>                </dxg:LookUpEdit.StyleSettings>
                <dxg:LookUpEdit.PopupContentTemplate>
                    <ControlTemplate>
                        <dxg:GridControl Name="PART_GridControl">
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="Name" FilterPopupMode="CheckedList"/>
                            </dxg:GridControl.Columns>
                            <dxg:GridControl.View>
                                <dxg:TreeListView Name="treeListViewParentGroup"
                                                  AutoWidth="True" 
                                                  TreeDerivationMode="Selfreference" 
                                                  KeyFieldName="KeyName" 
                                                  ParentFieldName="ParentName"
                                                  ShowIndicator="False"
                                                  SearchPanelHorizontalAlignment="Stretch"
                                                  AutoExpandAllNodes="True"/>
                            </dxg:GridControl.View>
                          
                        </dxg:GridControl>
                    </ControlTemplate>
                </dxg:LookUpEdit.PopupContentTemplate>

                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="SelectedIndexChanged"
                                           Command="{Binding DataContext.CommandEditValueChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" />
                </dxmvvm:Interaction.Behaviors>
            </dxg:LookUpEdit>
        </Grid>
        
        <!--Order-->
        <TextBlock Grid.Row="8" Grid.Column="0"  Text="{DynamicResource Order}" Style="{StaticResource TextBlock14Style}" VerticalAlignment="Center"  />

        <Grid Grid.Column="2"  Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="8"/>
            </Grid.ColumnDefinitions>

            <dxe:ComboBoxEdit Grid.Column="0"  Width="270" HorizontalAlignment="Left"
                              
                                                  VerticalAlignment="Top" 
                                                  AutoComplete="True" ImmediatePopup="True" IncrementalFiltering="True" IsTextEditable="False"
                                                  ValidateOnTextInput="False"
                                                  ItemsSource="{Binding DataContext.OrderCategoryList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                                                  SelectedItem="{Binding DataContext.SelectedOrderCategory,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                                                  Style="{DynamicResource ComboBoxEditStyle}"
                                                  DisplayMember="Name" ValueMember="IdPCMArticleCategory" IsSynchronizedWithCurrentItem="True">

            </dxe:ComboBoxEdit>
            
            <!--<dxg:LookUpEdit Grid.Column="0"  Width="270"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding DataContext.OrderCategoryList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                            DisplayMember="Name" ValueMember="IdPCMArticleCategory" VerticalAlignment="Stretch" Name="lookUpEditOrderCategory" 
                            AutoPopulateColumns="False" 
                            AutoComplete="True" IsTextEditable="False" ImmediatePopup="True" IncrementalFiltering="False" 
                            IncrementalSearch="False">
                --><!--AutoComplete="True" IsTextEditable="False" ImmediatePopup="True"-->
                <!--IncrementalSearch="False" IncrementalFiltering="False" ImmediatePopup="False" AutoComplete="False" ValidateOnTextInput="True"--><!--
                <dxg:LookUpEdit.SelectedItem>
                    <Binding Path="DataContext.SelectedOrderCategory" RelativeSource="{RelativeSource AncestorType=dxwui:WinUIDialogWindow}" ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <Validation:AddEditCategoryValidation FieldName="SelectedOrderCategory" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </dxg:LookUpEdit.SelectedItem>

                <dxg:LookUpEdit.PopupContentTemplate>
                    <ControlTemplate>
                        <dxg:GridControl Name="PART_GridControl">
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn FieldName="Name" FilterPopupMode="CheckedList"/>
                            </dxg:GridControl.Columns>
                            <dxg:GridControl.View>
                                <dxg:TreeListView Name="treeListViewOrderGroup"
                                                  AutoWidth="True" 
                                                  TreeDerivationMode="Selfreference" 
                                                  KeyFieldName="KeyName" 
                                                  ParentFieldName="ParentName"
                                                  ShowIndicator="False"
                                                  AutoExpandAllNodes="True"/>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </ControlTemplate>
                </dxg:LookUpEdit.PopupContentTemplate>
            </dxg:LookUpEdit>-->
        </Grid>

        <!--Language-->
        <dxe:ListBoxEdit Name="listBoxLanguage" Grid.Row="0" Grid.RowSpan="7" Grid.Column="4" 
                         ItemsSource="{Binding DataContext.Languages, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                         SelectedItem="{Binding DataContext.LanguageSelected, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                         DisplayMember="TwoLetterISOLanguage" ValueMember="IdLanguage" 
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand 
                    EventName="SelectedIndexChanged" Command="{Binding DataContext.ChangeLanguageCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged ,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}}"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:ListBoxEdit>

        <!--Accept and Cancel button-->
        <Grid Grid.Row="10" ShowGridLines="False" Grid.Column="2" Grid.ColumnSpan="5" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button  HorizontalAlignment="Right"
                     Style="{DynamicResource Button16Style}"
                     VerticalAlignment="Top"
                     Content="{DynamicResource AddCatalogueAcceptButton}"
                     Command="{Binding AcceptCategoryCommand}"
                     Height="30"
                     Width="100" />

            <Button Grid.Row="10" Grid.Column="2"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="{DynamicResource AddCatalogueCancelButton}"
                    Command="{Binding CancelButtonCommand }"
                    Height="30"
                    Width="100" />
        </Grid>

    </Grid>
</dxwui:WinUIDialogWindow>
