<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Ticket.Views.FeedbackWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
                         xmlns:Helpers="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                         Title="{DynamicResource FeedbackWindowHeader}"
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         Style="{DynamicResource WinUIDialogWindowStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding FeedbackWindowCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical">
            <TextBlock Text="{DynamicResource FeedbackWindowTitle}"
                       FontWeight="Bold" 
                       HorizontalAlignment="Left"
                       Style="{DynamicResource TextBlock14Style}"/>
        </StackPanel>
        <Label Content="{DynamicResource FeedbackWindowModule}" 
               Grid.Column="0"
               Grid.Row="1"
               Style="{DynamicResource LabelStyle}" >
        </Label>

        <dxe:ComboBoxEdit HorizontalAlignment="Left"
                          Width="162" 
                          IsTextEditable="False" 
                          ItemsSource="{Binding GeosModuleList}"
                          DisplayMember="Name"
                          SelectedIndex="{Binding ModuleSelectedIndex}"
                          Grid.Row="1" Grid.Column="1" Margin="2" 
                          Style="{DynamicResource ComboBoxEditStyle}">
        </dxe:ComboBoxEdit>

        <Label Content="{DynamicResource FeedbackWindowDescription}"
               Grid.Column="0" Grid.Row="2" Style="{DynamicResource LabelStyle}"/>

        <dxe:TextEdit  Width="378"
                       Height="100"
                       HorizontalAlignment="Left"
                       VerticalScrollBarVisibility="Visible"
                       VerticalContentAlignment="Top"
                       HorizontalContentAlignment="Left"
                       AcceptsReturn="True"
                       Grid.Row="2"
                       Grid.Column="1"
                       VerticalAlignment="Top"
                       Margin="2,0,0,0" Style="{DynamicResource TextEditStyle}">
            <dxe:TextEdit.EditValue>
                <Binding Path ="FeedbackWindowDescription" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource FeedbackWindowDescriptionEmpty}" ValidationStep="UpdatedValue"   />
                    </Binding.ValidationRules>
                </Binding>
            </dxe:TextEdit.EditValue>
        </dxe:TextEdit>

        <Label Content= "{DynamicResource FeedbackWindowAttachment}"
               Grid.Column="0" 
               Grid.Row="3" 
               Width="120"
               HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" />

        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Left"
                    Orientation="Vertical"
                    Margin="0,4,0,0"
                    Width="380"
                    Grid.Column="1">
            <dxe:ComboBoxEdit x:Name="editor" Width="378" Height="65" 
                          EditValue="{Binding AttachmentList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          ItemsSource="{Binding AttachmentList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          Margin="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                          DisplayMember="Name"
                          AllowDefaultButton="False"
                          AutoComplete="True"
                          ImmediatePopup="True"
                          ValidateOnEnterKeyPressed="True" 
                          ValidateOnTextInput="True"
                          IsTextEditable="False" Style="{DynamicResource ComboBoxEditStyle}" >

                <dxe:ComboBoxEdit.StyleSettings>
                    <dxe:TokenComboBoxStyleSettings  NewTokenPosition="Far" EnableTokenWrapping="True"  />
                </dxe:ComboBoxEdit.StyleSettings>
            </dxe:ComboBoxEdit>

            <Button Content= "{DynamicResource FeedbackWindowBrowse}"
                    Height="30"
                    HorizontalAlignment="Right" 
                    Margin="0,5,0,0"
                    VerticalAlignment="Bottom" 
                    Width="80"
                    Command="{Binding FeedbackWindowBrowesButtonCommand}" Style="{DynamicResource ButtonStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="150,0,0,0"
                    Width="290"
                    Grid.ColumnSpan="2">

            <Button Content="{DynamicResource FeedbackWindowAccept}"
                    Command="{Binding FeedbackWindowAcceptButtonCommand}"
                    Height="30"
                    Width="80"
                    Margin="0,0,30,0"
                    VerticalAlignment="Bottom" Style="{DynamicResource ButtonStyle}" />

            <Button Content="{DynamicResource FeedbackWindowCancel}"
                    Command="{Binding FeedbackWindowCancelButtonCommand}" 
                    Height="30"
                    Width="80"
                    Margin="30,0,0,0"
                    VerticalAlignment="Bottom" Style="{DynamicResource ButtonStyle}" />
        </StackPanel>

    </Grid>
</dxwui:WinUIDialogWindow>
