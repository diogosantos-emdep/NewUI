<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Ticket.Views.SupportWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         Height="380" Width="550" x:Name="objEditProfile"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                         xmlns:local="clr-namespace:Emdep.Geos.Modules.Ticket.ViewModels"
                         xmlns:Helpers="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                         Title="{DynamicResource SupportWindowHeader}"
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         Style="{DynamicResource WinUIDialogWindowStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding SupportWindowCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <dxwui:WinUIDialogWindow.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Emdep.Geos.Modules.Ticket;component/Resources/TicketCommonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Style x:Key="ComboBoxEditStyleForTicket" BasedOn="{StaticResource BaseUniversalStyle}" TargetType="{x:Type dxe:ComboBoxEdit}">
                <Setter Property="EditNonEditableTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                                <Image Width="24" Height="24" Source="{Binding SelectedItem.IdImage, Converter={StaticResource TicketPriorityToImageConverter}}"  Margin="2,1,2,1"/>
                                <TextBlock Text="{Binding SelectedItem.Value}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="24" Height="24" Source="{Binding IdImage, Converter={StaticResource TicketPriorityToImageConverter}}"  Margin="2,1,2,1"/>
                                <TextBlock Text="{Binding Value}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="IsTextEditable" Value="False" />
            </Style>

        </ResourceDictionary>
    </dxwui:WinUIDialogWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50"></RowDefinition>-->
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="{DynamicResource SupportWindowUrgency}" 
               Grid.Column="0" 
               Grid.Row="0" Style="{DynamicResource LabelStyle}" >
        </Label>

        <dxe:ComboBoxEdit HorizontalAlignment="Left"
                          Width="162" 
                          SelectedIndex="{Binding PrioritySelectedIndex}"
                          IsTextEditable="False" 
                          Grid.Row="0" Grid.Column="1" Margin="0,3" 
                          ItemsSource="{Binding PriorityList}"
                          DisplayMember="Value"
                          Style="{StaticResource ComboBoxEditStyleForTicket}"
                          IsSynchronizedWithCurrentItem="True"
                          ValueMember="IdLookupValue"
                          NullText="Select Priority">
        </dxe:ComboBoxEdit>
        
        <Label Content="{DynamicResource FeedbackWindowModule}" 
               Grid.Column="0"
               Grid.Row="1"
               Style="{DynamicResource LabelStyle}" >
        </Label>

        <dxe:ComboBoxEdit HorizontalAlignment="Left"
                          Width="162"  Margin="0,3" 
                          IsTextEditable="False" 
                          ItemsSource="{Binding GeosModuleList}"
                          DisplayMember="Name"
                          SelectedIndex="{Binding ModuleSelectedIndex}"
                          Grid.Row="1" Grid.Column="1" 
                          Style="{DynamicResource ComboBoxEditStyle}">
        </dxe:ComboBoxEdit>
        <Label Content="{DynamicResource SupportWindowTitle}" Grid.Column="0" Grid.Row="2" Style="{DynamicResource LabelStyle}"/>

        <dxe:TextEdit HorizontalAlignment="Left" 
                      Width="378" 
                      Grid.Row="2" 
                      Grid.Column="1"
                      Height="32"
                      VerticalAlignment="Top" Style="{DynamicResource TextEditStyle}">
            <dxe:TextEdit.EditValue>
                <Binding Path ="SupportWindowTitle" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource SupportWindowTitleEmpty}" ValidationStep="UpdatedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </dxe:TextEdit.EditValue>

        </dxe:TextEdit>

        <Label Content="{DynamicResource SupportWindowDescription}" Grid.Column="0" Grid.Row="3" Style="{DynamicResource LabelStyle}"/>

        <dxe:TextEdit Width="378"
                      Height="100"
                      HorizontalAlignment="Right"
                      VerticalScrollBarVisibility="Visible"
                      VerticalContentAlignment="Top"
                      HorizontalContentAlignment="Left"
                      AcceptsReturn="True"
                      Grid.Row="3"
                      Grid.Column="1"
                      VerticalAlignment="Top"
                      Margin="0,0,25,0" Style="{DynamicResource TextEditStyle}">
            <dxe:TextEdit.EditValue>
                <Binding Path ="SupportWindowDescription" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource SupportWindowDescriptionEmpty}" ValidationStep="UpdatedValue"   />
                    </Binding.ValidationRules>
                </Binding>
            </dxe:TextEdit.EditValue>
        </dxe:TextEdit>

        <Label Content= "{DynamicResource SupportWindowAttachment}"
               Grid.Column="0" 
               Grid.Row="4" 
               Width="120"
               HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}">
        </Label>

        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0,4,24,0"
                    Width="380"
                    Grid.Column="1"  >
            <dxe:ComboBoxEdit x:Name="editor" Width="378" Height="65" 
                          EditValue="{Binding AttachmentList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          ItemsSource="{Binding AttachmentList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          Margin="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                          DisplayMember="Name"
                          AllowDefaultButton="False"
                          AutoComplete="True"
                          ImmediatePopup="True"
                          ValidateOnEnterKeyPressed="True" 
                          ValidateOnTextInput="True"
                          IsTextEditable="False" Style="{DynamicResource ComboBoxEditStyle}">
                <dxe:ComboBoxEdit.StyleSettings>
                    <dxe:TokenComboBoxStyleSettings  NewTokenPosition="Far" EnableTokenWrapping="True"  />
                </dxe:ComboBoxEdit.StyleSettings>
            </dxe:ComboBoxEdit>

            <Button Content= "{DynamicResource SupportWindowBrowse}"
                    Height="30"
                    HorizontalAlignment="Right" 
                    Margin="0,5,0,0"
                    VerticalAlignment="Bottom" 
                    Width="80"
                    Command="{Binding SupportWindowBrowesButtonCommand}" Style="{DynamicResource ButtonStyle}" />

        </StackPanel>

        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="140,0,0,0"
                    Width="290"
                    Grid.ColumnSpan="2">

            <Button Content="{DynamicResource SupportWindowAccept}"
                    Command="{Binding SupportWindowAcceptButtonCommand}"
                    Height="30"
                    Width="80"
                    Margin="0,0,30,0"
                    VerticalAlignment="Bottom" 
                    Style="{DynamicResource ButtonStyle}" />

            <Button Content="{DynamicResource SupportWindowCancel}"
                    Command="{Binding SupportWindowCancelButtonCommand}" 
                    Height="30"
                    Width="80"
                    Margin="30,0,0,0"
                    VerticalAlignment="Bottom" 
                    Style="{DynamicResource ButtonStyle}"  />
        </StackPanel>
    </Grid>
</dxwui:WinUIDialogWindow>
