            <dxg:GridColumn Header="{DynamicResource EmployeeGender}" FieldName="Gender.Value" FilterPopupMode="CheckedList" MinWidth="60" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource EmployeeMaritalStatus}" FieldName="MaritalStatus.Value" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True"/>
