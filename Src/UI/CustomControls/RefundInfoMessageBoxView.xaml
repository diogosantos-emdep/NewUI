<dxwui:WinUIDialogWindow 
                x:Class="Emdep.Geos.UI.CustomControls.RefundInfoMessageBoxView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                DataContext="RefundInfoMessageBoxViewModel"
                x:ClassModifier="internal">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"   Source="{Binding ImagePath}" Height="50" Grid.Column="0" VerticalAlignment="Center" ></Image>
        <WrapPanel  Orientation="Horizontal" Width="Auto" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" >
            <TextBlock Text="{Binding Message}" VerticalAlignment="Stretch" HorizontalAlignment="Center" FontSize="20" Margin="10,0,0,0" TextWrapping="Wrap"/>
           
        </WrapPanel>
        <StackPanel Grid.Row="1"
                        Grid.Column="1" 
                        Margin="20,3,3,3"
                        Width="290"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
            <Button Height="25"
                        Width="90"
                        Margin="0,0,20,0"
                    
                        VerticalAlignment="Bottom"
                        Command="{Binding CancelButtonCommand}"
                        Content="Cancel"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Next" 
                        Margin="20,0,0,0"
                        Command="{Binding NextButtonCommand}" 
                        Height="25"
                        Width="90"
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</dxwui:WinUIDialogWindow>
