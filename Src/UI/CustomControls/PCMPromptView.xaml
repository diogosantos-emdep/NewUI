
    <dxwui:WinUIDialogWindow
    x:Class="Emdep.Geos.UI.CustomControls.PCMPromptView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    x:ClassModifier="internal"
    DataContext="PCMPromptViewModel">

    <!--[pramod.misal][GEOS2-][09-07-2025]-->
    <StackPanel Margin="-10">


        <Grid ShowGridLines="False"  HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />

            </Grid.RowDefinitions>


            <Image
                Grid.Column="0"
                Height="50"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Source="{Binding ImagePath}" />


            <WrapPanel
                Grid.Column="1" Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ScrollViewer
                    CanContentScroll="True"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <TextBlock Style="{DynamicResource TextBlock16Style}"
                        Margin="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        FontSize="20"
                       
                        Text="{Binding Message}"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </WrapPanel>



            <Label Content="{DynamicResource DetailsLbl}" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="16" Grid.Row="1" Grid.Column="2"/>

            <CheckBox VerticalContentAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1"         
            FontSize="16"
            Foreground="White"
            IsChecked="{Binding IsDetailsChecked}" />

            <Label Content="{DynamicResource Priceslbl}" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="16" Grid.Row="2" Grid.Column="2"/>

            <CheckBox Grid.Row="2" Grid.Column="1"
           VerticalContentAlignment="Center" HorizontalAlignment="Right"
           
            FontSize="16"
            Foreground="White"
            IsChecked="{Binding IsPricesChecked}" />

        </Grid>

    </StackPanel>
</dxwui:WinUIDialogWindow>
