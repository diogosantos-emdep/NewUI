<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.UI.CustomControls.OTMPromptView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emdep.Geos.UI.CustomControls"
        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
        mc:Ignorable="d"
        DataContext="OTMPromptViewModel">
    <StackPanel Margin="-10">
        <Grid ShowGridLines="False"  HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Image Source="{Binding ImagePath}" Height="50" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,10,0"></Image>
            <Label Content="{DynamicResource InsertPOUpdateSuccessMsg}" VerticalAlignment="Center" Margin="0,-15,0,0" FontSize="25" Grid.Row="0" Grid.Column="2"/>
            <Label Content="{DynamicResource OTMEditPrompt}" VerticalAlignment="Center" Margin="100,-10,0,0" FontSize="16" Grid.Row="1" Grid.Column="2"/>
            <CheckBox VerticalContentAlignment="Center"  HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1"         
         FontSize="16"
         Foreground="White"
         IsChecked="{Binding IsDetailsChecked}" Margin="10,-6,-100,0"/>
        </Grid>
    </StackPanel>
</dxwui:WinUIDialogWindow>
