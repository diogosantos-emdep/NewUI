<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:dxwf="http://schemas.devexpress.com/winfx/2008/xaml/core/wizardframework" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Core.WizardFramework.WizardPageLayout}" TargetType="dxwf:WizardPageLayout">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxwf:WizardPageLayout">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Margin="24,12,24,16">
                            <TextBlock FontSize="23" Text="{TemplateBinding Title}" />
                            <TextBlock Text="{TemplateBinding Subtitle}" />
                        </StackPanel>
                        <Rectangle Fill="#20000000" Grid.Row="1" />
                        <Border Grid.Row="2" Background="{DynamicResource {dxt:WizardThemeKey ResourceKey=WizardBackground}}">
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="24" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>