                        </dxri:BackstageControlPaneContentControl>
                    </dxr:BackstageViewContentHost.RightContent>
                </dxr:BackstageViewContentHost>
            </Grid>
        </Grid>
    </ControlTemplate>

    
</ResourceDictionary>