<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="cs">
    <DataTemplate x:Key="{dxpt:NewDocumentViewerThemeKey ResourceKey=PageBorderTemplate}">
        <Grid>
            <Border x:Name="Border" BorderBrush="#FFC3C3C3" BorderThickness="4" Margin="-4" cs:Name="Border_0001" />
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Value="true" Binding="{Binding IsSelected}">
                <Setter TargetName="Border" Property="BorderBrush" Value="#FFF78A09" cs:Name="Setter_0001" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>