<UserControl 
                x:Class="Workbench.Views.OfficeUserLoginView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
                xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
                xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
                xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
                xmlns:Helpers="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations" 
                xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                mc:Ignorable="d" d:DesignHeight="350" d:DesignWidth="350" 
                RenderTransformOrigin="0.5,0.5"  
                KeyboardNavigation.TabNavigation="Cycle"
                Style="{DynamicResource UserControlBackgroundStyle}" >
    
    <UserControl.Resources>
        <DataTemplate x:Key="waitIndicator">
            <dx:WaitIndicator DeferedVisibility="True"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid  Height="350" Width="350" VerticalAlignment="Center"  HorizontalAlignment="Center"  FocusManager.FocusedElement="{Binding ElementName=Cmblogin}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"  >
            <Ellipse  Style="{DynamicResource EllipseUserLoginImageStyle}" 
                  StrokeThickness="1" Height="100" Width="100" HorizontalAlignment="Center">
            </Ellipse>
        </StackPanel>

        <Label  Content="{DynamicResource OfficeUserLoginViewLoginName}"
                Grid.Column="0"
                Grid.Row="1" 
                IsTabStop="False" Style="{DynamicResource LabelStyle}">
        </Label>

        <dxe:ComboBoxEdit  Name="Cmblogin" Grid.Column="1"  Grid.Row="1"  Height="30"
                                SelectionStart="0"    
                                NullText="{DynamicResource OfficeUserLoginViewDefaultLoginNameMessage}"                               
                                Width="250"
                                AllowDefaultButton="False"                               
                                ItemsSource="{Binding LoginUserList, UpdateSourceTrigger=PropertyChanged}"                            
                                AutoComplete="True" 
                                IsTextEditable="True"
                                ImmediatePopup="True" 
                                IncrementalFiltering="True"                              
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" TabIndex="0" 
                            Style="{DynamicResource ComboBoxEditStyle}" >
            <dxe:ComboBoxEdit.EditValue>
                <Binding Path ="LoginName" UpdateSourceTrigger="PropertyChanged" ValidatesOnNotifyDataErrors="True"  Mode="TwoWay" >
                    <Binding.ValidationRules>
                        <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource OfficeUserLoginViewDefaultLoginNameMessage}" ValidationStep="UpdatedValue"   />
                    </Binding.ValidationRules>
                </Binding>
            </dxe:ComboBoxEdit.EditValue>
        </dxe:ComboBoxEdit>

        <Label Content="{DynamicResource OfficeUserLoginViewPassword}" 
               Grid.Column="0"
               Grid.Row="3" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch" 
               IsTabStop="False" Style="{DynamicResource LabelStyle}">
        </Label>
        <!--[rdixit][GEOS2-6963][07.02.2025] [Removed 20 charachter limit from password]-->
        <dxe:PasswordBoxEdit  NullText="{DynamicResource OfficeUserLoginViewDefaultPasswordMessage}"
                              Width="250"
                              Grid.Column="1" 
                              Grid.Row="3"
                              Text="{Binding LoginPassword }"
                              TabIndex="1"
                              Style="{DynamicResource PasswordBoxEditStyle}" >
            <dxe:PasswordBoxEdit.EditValue>
                <Binding Path ="LoginPassword" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource OfficeUserLoginViewDefaultPasswordMessage}" ValidationStep="UpdatedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </dxe:PasswordBoxEdit.EditValue>

        </dxe:PasswordBoxEdit>
        <dxe:CheckEdit IsChecked="{Binding IsRememberMe}"
                       Content="{DynamicResource OfficeUserLoginViewRememberMeInThisComputer}" 
                       Grid.Column="1"
                       Grid.Row="5"
                       TabIndex="2" Style="{DynamicResource CheckEditStyle}">
        </dxe:CheckEdit>
        
        <Button  Content="{DynamicResource OfficeUserLoginViewForgotYourPassword}"
                 Cursor="Hand"
                 Grid.Column="1"
                 Grid.Row="7" 
                 Command="{Binding ForgotPasswordButtonCommand}"
                 TabIndex="3" 
                 Style="{DynamicResource ButtonForeground}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="{DynamicResource OfficeUserLoginViewAccept}" 
                Height="30" 
                Width="80"
                Grid.Column="1"
                Grid.Row="9"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Command="{Binding LoginAcceptButtonCommand}"
                TabIndex="4" Margin="0,10,0,0"
                IsDefault="True" Style="{DynamicResource ButtonStyle}">
        </Button>

        <Button Content="{DynamicResource OfficeUserLoginViewClose}" 
                Height="30" 
                Width="80"
                Grid.Column="1"
                Grid.Row="9"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding LoginCloseButtonCommand}"
                TabIndex="5" 
                Margin="0,10,0,0" Style="{DynamicResource ButtonStyle}">
        </Button>


        <!--<dx:WaitIndicator DeferedVisibility="True"/>-->

    </Grid>
</UserControl>