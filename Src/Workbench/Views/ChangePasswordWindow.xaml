<dxwui:WinUIDialogWindow x:Class="Workbench.Views.ChangePasswordWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                         xmlns:Helpers="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations" 
                         WindowStyle="None" Height="275" Width="310" x:Name="objEditProfile" 
                         Title="{DynamicResource ChangePasswordWindowChangePassword}"
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         Style="{DynamicResource WinUIDialogWindowStyle}">

    <!--Style="{DynamicResource UniversalStyleWinUIDialogWindow}"-->
    <!--<dxwui:WinUIDialogWindow.Resources>
        <ResourceDictionary Source="/GeosWorkbench;component/Resources/language.xaml" />
    </dxwui:WinUIDialogWindow.Resources>-->

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding EditProfileCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid >
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="45"/>-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!--[rdixit][GEOS2-6963][07.02.2025] [Removed 20 charachter limit from password]-->
        <!--<Label Grid.Row="0" Style = "{DynamicResource LabelTitleStyle}" Content="{DynamicResource ChangePasswordWindowChangePassword}" HorizontalAlignment="Left" VerticalAlignment="Center" ></Label>-->
        <dxlc:LayoutControl Orientation="Vertical" VerticalAlignment="Top" Grid.Row="0" >
            <dxlc:LayoutItem Label="{DynamicResource ChangePasswordWindowOldPassword}" HorizontalAlignment="Left" ElementSpace="10" >
                <dxe:PasswordBoxEdit Width="162" Style="{DynamicResource PasswordBoxEditStyle}">
                    <Binding Path ="OldPassword" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource ChangePasswordWindowOldPassword}" ValidationStep="UpdatedValue"/>
                        </Binding.ValidationRules>
                    </Binding>
                </dxe:PasswordBoxEdit>
            </dxlc:LayoutItem>
            <Label HorizontalContentAlignment="Right" Height="22" Style="{DynamicResource LabelStyle}"></Label>
            <dxlc:LayoutItem Label="{DynamicResource ChangePasswordWindowNewPassword}" HorizontalAlignment="Left" ElementSpace="10" >
                <dxe:PasswordBoxEdit  Width="162" Style="{DynamicResource PasswordBoxEditStyle}">
                    <Binding Path ="NewPassword" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource ChangePasswordWindowNewPassword}"  ValidationStep="UpdatedValue" />
                        </Binding.ValidationRules>
                    </Binding>
                    <dxmvvm:Interaction.Triggers>
                        <dxmvvm:EventToCommand EventName="EditValueChanged" 
                                               Command="{Binding NewPasswordCodeCommand }" 
                                               PassEventArgsToCommand="True" >
                        </dxmvvm:EventToCommand>
                    </dxmvvm:Interaction.Triggers>
                </dxe:PasswordBoxEdit>
            </dxlc:LayoutItem>
            <Label HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Content="{Binding PasswordStrenth}" Foreground="{Binding PasswordStrenthColor}" FontStyle="Italic"  Height="22" Style="{DynamicResource LabelStyle}"/>
            <dxlc:LayoutItem Label="{DynamicResource ChangePasswordWindowConfirmPassword}" HorizontalAlignment="Left" ElementSpace="10" >
                <dxe:PasswordBoxEdit Width="162" Style="{DynamicResource PasswordBoxEditStyle}">
                    <Binding Path ="ConfirmPassword" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <Helpers:CustomRequiredFieldValidation ValidationMessage="{StaticResource ChangePasswordWindowConfirmPassword}" ValidationStep="UpdatedValue"/>
                        </Binding.ValidationRules>
                    </Binding>
                </dxe:PasswordBoxEdit>
            </dxlc:LayoutItem>
            <Label HorizontalContentAlignment="Right" Height="22" Style="{DynamicResource LabelStyle}"/>
        </dxlc:LayoutControl>
        <StackPanel  Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" >
            <Button Content="{DynamicResource ChangePasswordWindowAccept}" Height="30" Width="80" Margin="0,0,10,0"  Command="{Binding ChangePassrowdAcceptButtonCommand}" Style="{DynamicResource ButtonStyle}"/>
            <Button Content="{DynamicResource ChangePasswordWindowCancel}"  Height="30"  Width="80" Margin="10,0,0,0" Command="{Binding WorkbenchWindowChangePasswordCloseButtonCommand}" Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</dxwui:WinUIDialogWindow>

