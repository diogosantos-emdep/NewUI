                         xmlns:Helpers="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations" 
                         xmlns:ViewModels="clr-namespace:Workbench.ViewModels" x:Class="Workbench.Views.EditProfile"
                         xmlns:ImgConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters" 
                         mc:Ignorable="d"
                         d:DesignHeight="480" d:DesignWidth="550" 
                         RenderTransformOrigin="0.5,0.5"
                         Title="{DynamicResource EditProfileWindowViewProfile}"
                         TitleStyle="{DynamicResource WinUIDialogTitleEditProfileStyle}"
                         Style="{DynamicResource WinUIDialogWindowStyle}">

    <!--<dxwui:WinUIDialogWindow.Resources>
        <ResourceDictionary Source="/GeosWorkbench;component/Resources/language.xaml" />
    </dxwui:WinUIDialogWindow.Resources>-->
    
    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding EditProfileCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>
    
    <Grid  Background="Transparent" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch">
        <Grid.RowDefinitions >
            <!--<RowDefinition Height="10*"/>-->
            <RowDefinition Height="40"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="376*"/>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>

        <!--<Label Grid.Row="0" Style="{DynamicResource LabelTitleStyle}" Content="{DynamicResource EditProfileWindowEditProfile}"  HorizontalAlignment="Left" Margin="135,0,130,0"/>-->
        <Border  Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Style="{DynamicResource BorderBrushStyle}" BorderThickness="1" CornerRadius="3" Width="480" 
            Visibility="{Binding IsProfileAlertShow}" Margin="135,0,130,0">
            <StackPanel  Orientation="Horizontal">
                <TextBlock Text="{DynamicResource EditProfileAlertMessage}" Style="{ DynamicResource TextblockForgroundStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="350" IsEnabled="False" TextWrapping="Wrap" Margin="5,0,0,0"></TextBlock>
                <Image Source="/GeosWorkbench;component/Assets/Images/Alert.png"  HorizontalAlignment="Right" Height="35" Width="35" Margin="80,0,0,0"></Image>
            </StackPanel>
        </Border>

        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1"
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Style="{ DynamicResource LabelForegroundStyle}" 
               FontSize="13" FontWeight="Bold"  Margin="120,4,20,3">
            <!--<Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>-->
            <dxmvvm:Interaction.Triggers>
                <dxmvvm:EventToCommand EventName="MouseLeftButtonDown" PassEventArgsToCommand="True" Command="{Binding WorkbenchWindowChangePasswordCommand,Mode=TwoWay}" ></dxmvvm:EventToCommand>
            </dxmvvm:Interaction.Triggers>
            <Label.Template>
                <ControlTemplate TargetType="{x:Type Label}">
                    <TextBlock TextDecorations="Underline" TextWrapping="WrapWithOverflow" Text="{DynamicResource EditProfileWindowChangePassword}" Style="{DynamicResource TextBlockStyle}">
                        <InlineUIContainer>
							<ContentPresenter />
						</InlineUIContainer>
                    </TextBlock>
                </ControlTemplate>
            </Label.Template>
        </Label>

        <Grid Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center">
            <Grid.RowDefinitions >
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="122*"/>
                <ColumnDefinition Width="162*"/>
                <ColumnDefinition Width="107*"/>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="27*"/>
                <ColumnDefinition Width="68*"/>
                <!--<ColumnDefinition Width="20"></ColumnDefinition>-->
            </Grid.ColumnDefinitions>


            <Label Content="{DynamicResource EditProfileWindowLogin}" Style="{DynamicResource LabelStyle}"  HorizontalAlignment="Left" Width="122" Grid.Row="0" Grid.Column="0" />
            <Label Content="{Binding Login}" HorizontalContentAlignment="Left" Grid.Row="0" Grid.Column="1" Style="{DynamicResource LabelStyle}" />

            <Label Content="{DynamicResource EditProfileWindowFirstName}"  HorizontalAlignment="Left" Width="122" Style="{DynamicResource LabelStyle}" Grid.Row="1" Grid.Column="0"/>
            <Label Content="{Binding FirstName}" HorizontalContentAlignment="Left" Grid.Row="1" Grid.Column="1" Style="{DynamicResource LabelStyle}" />


            <Label Content="{DynamicResource EditProfileWindowSurName}" HorizontalAlignment="Left" Width="122" Grid.Row="2" Grid.Column="0" Style="{DynamicResource LabelStyle}" />
            <Label Content="{Binding LastName}" HorizontalContentAlignment="Left"  Grid.Row="2" Grid.Column="1" Style="{DynamicResource LabelStyle}" />

            <Label Content="{DynamicResource EditProfileWindowEmail}" HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Grid.Row="3" Grid.Column="0" Width="122"/>
            <Label Content="{Binding Email}" Grid.Row="3" Grid.Column="1" Style="{DynamicResource LabelStyle}" />

            <Label Content="{DynamicResource EditProfileWindowPhoneNumber}" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" Width="122" Style="{DynamicResource LabelStyle}" />
            <Label Content="{Binding Phone}" Grid.Row="4" Grid.Column="1" Style="{DynamicResource LabelStyle}" />

            <!--<Label Content="{DynamicResource EditProfileWindowMobilePhone}"  HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" Width="122" Style="{DynamicResource LabelStyle}" />
            <Label Content="{Binding MobileNumber}" Grid.Row="5" Grid.Column="1" Style="{DynamicResource LabelStyle}" />-->

            <!--<Label Content="Phone2 :" HorizontalAlignment="Left" FontFamily="Calibri" Grid.Row="6" Grid.Column="0" Width="100"/>
            <dxe:TextEdit HorizontalAlignment="Left" Width="162" Height="25" FontFamily="Calibri"  Grid.Row="6" Grid.Column="1" EditValue="(+34)977612340"/>-->



            <!--<Label Content="{DynamicResource EditProfileWindowDepartment}" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" Width="122" Style="{DynamicResource LabelStyle}" />
            <dxe:ComboBoxEdit  HorizontalAlignment="Left" Width="162" Height="25" SelectedIndex="0" Grid.Row="6" VerticalAlignment="Top" Grid.Column="1" IsEnabled="False" Style="{DynamicResource ComboBoxEditStyle}" >
                <dxe:ComboBoxEditItem Content="IT" />
                <dxe:ComboBoxEditItem Content="Administration"/>
                <dxe:ComboBoxEditItem Content="Commercial"/>
                <dxe:ComboBoxEditItem Content="Engineer"/>
                <dxe:ComboBoxEditItem Content="Technician"/>
            </dxe:ComboBoxEdit>


            <Label Content="{DynamicResource EditProfileWindowJobDescription}" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="0" Width="122" Style="{DynamicResource LabelStyle}" />
            <dxe:ComboBoxEdit  HorizontalAlignment="Left"  Width="162" Height="25" SelectedIndex="0" VerticalAlignment="Top" Grid.Row="7" Grid.Column="1" IsEnabled="False" Style="{DynamicResource ComboBoxEditStyle}"  >
                <dxe:ComboBoxEditItem Content="IT Manager"/>
                <dxe:ComboBoxEditItem Content="Developer"/>
                <dxe:ComboBoxEditItem Content="Manager"/>
                <dxe:ComboBoxEditItem Content="Clerk"/>
            </dxe:ComboBoxEdit>-->


            <Label Content="{DynamicResource EditProfileWindowLocation}" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" Width="122" Style="{DynamicResource LabelStyle}" />
            <Label Content="{Binding Location}"  Grid.Row="5" Grid.Column="1" Style="{DynamicResource LabelStyle}" />


            <StackPanel Grid.Column="2" Grid.RowSpan="9" Grid.ColumnSpan="4" Margin="0,0,-0.206,0">
                <dxlc:LayoutControl Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Center"   Height="250" Width="250" >
                    <dxe:ImageEdit x:Name="EditImage"  Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Foreground="{Binding BrColor}" EditValue="{Binding ProfileImageSource, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <dxe:ImageEdit.MenuTemplate>
                            <ControlTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <dxe:ImageEditLoadToolButton />
                                    <dxe:ImageEditClearToolButton >
                                        <dxmvvm:Interaction.Triggers>
                                            <dxmvvm:EventToCommand EventName="Click"
                                                       PassEventArgsToCommand="True" 
                                                       Command="{Binding EditProfileRemoveButtonCommand,Mode=TwoWay}"></dxmvvm:EventToCommand>
                                        </dxmvvm:Interaction.Triggers>
                                    </dxe:ImageEditClearToolButton>
                                </StackPanel>
                            </ControlTemplate>
                        </dxe:ImageEdit.MenuTemplate>
                    </dxe:ImageEdit>
                </dxlc:LayoutControl>
            </StackPanel>
            <!--<Image Source="/GeosWorkbench;component/Assets/Images/Alert.png" Visibility="{Binding IsProfileAlertShow}" Grid.Column="6" Grid.Row="0" >-->
                <!--<Image.ToolTip>
                    <StackPanel  Width="400"  >
                        <TextBlock Grid.Row="7" 
                               TextWrapping="Wrap"
                               TextAlignment="Left"
                               Width="400"
                               FontSize="13"
                               Text="Profile Picture is pending for vailidate!">
                        </TextBlock>
                    </StackPanel>
                </Image.ToolTip>
            </Image>-->
        </Grid>
        <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="266,0,223,0">
            <Button Content="{DynamicResource EditProfileWindowAccept}"  Height="30" Width="80" Margin="0,0,30,0"  VerticalAlignment="Bottom" Command="{ Binding EditProfileAcceptButtonCommand}" Style="{DynamicResource ButtonStyle}" />
            <Button Content="{DynamicResource EditProfileWindowCancel}" Height="30"  Width="80" Margin="30,0,0,0"  VerticalAlignment="Bottom" Command="{Binding EditProfileCancelButtonCommand}" Style="{DynamicResource ButtonStyle}" />
        </StackPanel>

    </Grid>
</dxwui:WinUIDialogWindow>
