<dxwui:WinUIDialogWindow xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                         xmlns:ViewModels="clr-namespace:Workbench.ViewModels"
                         xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
                         x:Class="Workbench.Views.SettingWindow"
                         Title="{DynamicResource SettingWindowSettings}"
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
                         Style="{DynamicResource WinUIDialogWindowStyle}">

    <dxwui:WinUIDialogWindow.Resources>
        <!--<ResourceDictionary Source="/GeosWorkbench;component/Resources/language.xaml" />-->
        <Converters:InvertedBooleanConverter x:Key="invertedBooleanConverter"/>
    </dxwui:WinUIDialogWindow.Resources>

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding WorkbenchWindowSettingsCloseButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid>
        <dxlc:LayoutControl Orientation="Vertical" Margin="10,-90,20,0" Padding="0,0,0,0" Width="Auto" Height="Auto">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto " Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="40"/>-->
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <!--<Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource SettingWindowSettings}" Style="{DynamicResource LabelSettingWindow}" HorizontalAlignment="Left" VerticalAlignment="Top" />-->
                <dx:GroupFrame Grid.Column="0" Grid.Row="0" Header="{DynamicResource SettingWindowTheme}" HorizontalAlignment="Left"  Width="400" BorderBrush="Red" Visibility= "Hidden">
                    <StackPanel Orientation="Horizontal">
                        <!--<Button Command="{Binding WorkbenchWindowSettingsThemeBlackCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="50" Width="181" Margin="0,0,0,0" Style="{DynamicResource ButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="40" Width="40" Source ="/GeosWorkbench;component/Assets/Images/DarkAndSkyBlue.png" HorizontalAlignment="Left" Margin="-10,0,0,0"/>
                                <Label Content="{DynamicResource SettingWindowThemeNameBlackAndBlue}"  Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource LabelStyle}"/>
                            </StackPanel>
                        </Button>-->
                        <Button Command="{Binding WorkbenchWindowSettingsThemeWhiteCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="50" Width="181" Margin="12,0,0,0" Style="{DynamicResource ButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="40" Width="40" Source ="/GeosWorkbench;component/Assets/Images/WhiteAndBlue.png" HorizontalAlignment="Left" Margin="-10,0,0,0"/>
                                <Label Content="{DynamicResource SettingWindowThemeNameWhiteAndBlue}" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Style="{DynamicResource LabelStyle}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </dx:GroupFrame>
                <dx:GroupFrame Grid.Column="0"
                       Grid.Row="1"
                       Header="{DynamicResource SettingWindowLanguage}"
                       HorizontalAlignment="Stretch"
                       Width="Auto"
                       BorderBrush="Red" >
                    <dxe:ComboBoxEdit ApplyItemTemplateToSelectedItem="True"
                            IsTextEditable="False"
                            Height="40"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Style="{DynamicResource ComboBoxEditStyle}"
                            ItemsSource="{Binding Languages}"
                            ValueMember="IdLanguage"
                            DisplayMember="Name"
                            SelectedIndex="{Binding SettingWindowLanguageSelectedIndex}"
                            IsSynchronizedWithCurrentItem="True">
                        <dxe:ComboBoxEdit.ItemTemplate>
                            <DataTemplate>
                                <DockPanel >
                                    <Image Source="{Binding LanguageImage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5,2,2,2" Height="24" Width="24"/>
                                    <TextBlock Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Padding="2" Margin="5,0,0,0" Style="{DynamicResource TextBlockStyle}" />
                                </DockPanel>
                            </DataTemplate>
                        </dxe:ComboBoxEdit.ItemTemplate>
                    </dxe:ComboBoxEdit>
                </dx:GroupFrame>
                <dx:GroupFrame Grid.Column="0"
                       Grid.Row="2"
                       Header="{DynamicResource SettingWindowModule}"
                       HorizontalAlignment="Stretch"
                       Width="Auto"
                       BorderBrush="Red">
                    <dxe:ComboBoxEdit IsTextEditable="False"
                            Height="40"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Style="{DynamicResource ComboBoxEditStyle}"
                            ItemsSource="{Binding GeosModuleList}"
                            DisplayMember="Name"
                            SelectedIndex="{Binding ModuleSelectedIndex}" />
                </dx:GroupFrame>
                <dx:GroupFrame Grid.Column="0"
                       Grid.Row="3"
                       Header="{DynamicResource SettingWindowNotificationNumber}"
                       HorizontalAlignment="Left"
                       Width="400"
                       BorderBrush="Red">
                    <dxe:ComboBoxEdit IsTextEditable="False"
                            Grid.Column="4"
                            Height="40"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Style="{DynamicResource ComboBoxEditStyle}"
                            Width="150"
                            ItemsSource="{Binding NotificationNumberList}"
                            SelectedIndex="{Binding NotificationNumberSelectedIndex}" />
                </dx:GroupFrame>

                <!--<dx:GroupFrame Grid.Column="0" 
                               Grid.Row="4"
                               Header="{DynamicResource SettingWindowDisplayServiceStatusIcon}"
                               HorizontalAlignment="Left"
                               Width="400"
                               BorderBrush="Red">
                    <StackPanel Orientation="Vertical">
                        <CheckBox Height="30" Content="{DynamicResource SettingWindowShowServiceStatus}" IsChecked="{Binding IsShowServiceIcon}" Style="{DynamicResource CheckBoxStyle}"/>
                        <DockPanel>
                            <TextBlock Text="{DynamicResource SettingWindowCheckStatus}" Style="{DynamicResource TextBlockStyle}"></TextBlock>
                            <dxe:SpinEdit Width="50" Height="22"
