                                          VerticalContentAlignment="Center"
                                          MinValue="0"
                                          MaskType="Numeric"
                                          IsEnabled="{Binding IsShowServiceIcon}"
                                          Margin="0"
                                          IsFloatValue="False"
                                          DisplayFormatString="N0" 
                                          MaskUseAsDisplayFormat="False"
                                          EditValue="{Binding RefreshServiceSeconds, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                          Style="{DynamicResource SpinEditStyle}"/>
                            <TextBlock Text="{DynamicResource SettingWindowStatusSeconds}" Margin="10,0,0,0" Style="{DynamicResource TextBlockStyle}"/>
                        </DockPanel>
                    </StackPanel>
                </dx:GroupFrame>-->

                <dx:GroupFrame Grid.Column="0"
                       Grid.Row="4"
                       Header="{DynamicResource SettingWindowLogin}"
                       HorizontalAlignment="Left"
                       Width="400"
                       BorderBrush="Red">
                    <StackPanel Orientation="Horizontal">
                        <!--Command="{Binding WorkbenchWindowSettingsLoginCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->
                        <ToggleButton IsChecked="{Binding IsOfficeLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="50" Width="181" Style="{DynamicResource ToggleButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="40" Width="40" Source ="{DynamicResource OfficeLogin}" HorizontalAlignment="Left" Margin="-10,0,0,0"/>
                                <Label Content="{DynamicResource LoginWindowOffice}"  Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource LabelStyle}"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton IsChecked="{Binding IsOfficeLogin, Converter={StaticResource invertedBooleanConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="50" Width="181" Margin="12,0,0,0" Style="{DynamicResource ToggleButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="40" Width="40" Source ="{DynamicResource ProductionLogin}" HorizontalAlignment="Left" Margin="-10,0,0,0"/>
                                <Label Content="{DynamicResource LoginWindowProduction}" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Style="{DynamicResource LabelStyle}"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>

                    <!--<StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style x:Key="toggleStyle" BasedOn="{StaticResource {x:Type ToggleButton}}"
                                   TargetType="{x:Type RadioButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="40" Width="40" Source ="{DynamicResource OfficeLogin}" HorizontalAlignment="Left" Margin="-10,0,0,0"/>
                                                <Label Content="{DynamicResource LoginWindowOffice}"  Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource LabelStyle}"/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                        </StackPanel.Resources>

                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Height="40" Width="40"
                                    GroupName="CropGuidesColourRadioButtonGroup"
                                    IsChecked="{Binding Checked}" Margin="2" />
                        <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Height="40" Width="40"
                                        GroupName="CropGuidesColourRadioButtonGroup" 
                                        IsChecked="{Binding Checked}" Margin="2"/>
                    </StackPanel>-->

                </dx:GroupFrame>

                <dxlc:LayoutItem Label=" " Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="{DynamicResource SettingWindowAccept}"
                    x:Name="btnApply"
                    Height="30"
                    Width="80"
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="0,0,9,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding SettingWindowAcceptButtonCommand}"
                    Style="{DynamicResource ButtonStyle}"/>

                        <Button Content="{DynamicResource SettingWindowCancel}"
                    x:Name="btnCancel"
                    Height="30"
                    Width="80"
                    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Command="{Binding WorkbenchWindowSettingsCloseButtonCommand}"
                    Style="{DynamicResource ButtonStyle}"/>
                    </StackPanel>
                </dxlc:LayoutItem>
            </Grid>
        </dxlc:LayoutControl>
    </Grid>
</dxwui:WinUIDialogWindow>
