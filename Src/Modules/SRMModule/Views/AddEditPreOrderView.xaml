<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SRM.Views.AddEditPreOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SRM.Views"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
             xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters" 
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper" 
             xmlns:Validation="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations" 
             xmlns:dxefl="clr-namespace:DevExpress.Xpf.Editors.Flyout.Native;assembly=DevExpress.Xpf.Core.v19.2" 
             xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit" 
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common" 
             xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib" 
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"  
             mc:Ignorable="d" 
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}" 
             Title="{Binding WindowHeader}" 
             Style="{DynamicResource WinUIDialogWindowStyle}"       
             d:DesignHeight="450" d:DesignWidth="800">

    <!--[GEOS2-8252][rdixit][16.10.2025]-->
    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelButtonCommand}" />
    </dxwui:WinUIDialogWindow.InputBindings>
    <dxwui:WinUIDialogWindow.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="{x:Type dxlc:GroupBox}">
            <Setter Property="MaximizeElementVisibility" Value="Visible" />
            <Setter Property="Width" Value="350" />
            <Setter Property="Height" Value="150" />
        </Style>

        <dxre:PlainTextToContentConverter x:Key="PlainTextToContentConverter" />
        <dxre:RtfToContentConverter x:Key="rtfToContentConverter" />
    </dxwui:WinUIDialogWindow.Resources>

    <Grid Margin="2" Height="400" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>



        <!--<dxlc:GroupBox x:Name="Information"  Header="{DynamicResource EditContactViewInformation}"
                               Selector.IsSelected="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                           Grid.Row="0" Grid.Column="0" Width="500">
            <dxlc:GroupBox.ContentTemplate>
                <DataTemplate>-->
        <Grid Width="500" Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="200" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <!-- Waresouse -->
                        <Label Content="{DynamicResource Warehouse}" Grid.Column="1" Grid.Row="1" FontWeight="Bold" Margin="5,0,5,0" VerticalAlignment="Center" />
                        <dxe:TextEdit Name="CbeWareHouse" Grid.Column="3" IsReadOnly="True" Grid.Row="1" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left"                                                    
                                   Text="{Binding DataContext.SelectedWarehouse.Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>

                        <!-- Logistic -->
                        <Label Content="{DynamicResource Logisticwithcolon}" Grid.Column="1" Grid.Row="3" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" />
                        <dxe:ComboBoxEdit Name="CbeLogistic" Style="{DynamicResource ComboBoxEditStyle}"                    
                                                  Grid.Column="3" Grid.Row="3" Height="30"  Width="150"                                                           
                                                  VerticalAlignment="Center" IsTextEditable="False"  HorizontalAlignment="Left" 
                                                  SelectedItem="{Binding DataContext.SelectedLogistic, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                                  ItemsSource ="{Binding DataContext.LogisticList ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"                                                                 
                                                  DisplayMember="Value">
                            <dxe:ComboBoxEdit.SelectedIndex>
                                <Binding Path="SelectedLogisticIndex" ValidatesOnDataErrors="True" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <Validation:PreOrderValidation FieldName="SelectedLogisticIndex" ValidationStep="UpdatedValue" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </dxe:ComboBoxEdit.SelectedIndex>
                        </dxe:ComboBoxEdit>

                        <!-- PreOrderDate -->
                        <Label Content="{DynamicResource DateWithColon}" Grid.Column="1" Grid.Row="5" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" />
                        <dxe:DateEdit Grid.Row="5" Grid.Column="3" Style="{DynamicResource BaseUniversalStyle}"  Mask="dd/MM/yyyy"         
                                              ShowClearButton="False" MaskUseAsDisplayFormat="True" Height="30" Width="150"                                                            
                                              EditValue="{Binding DataContext.PreOrderDate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                              HorizontalAlignment="Left" VerticalAlignment="Center" IsTextEditable="False"                  
                                              HorizontalContentAlignment="Right" InvalidValueBehavior="AllowLeaveEditor">
                        </dxe:DateEdit>

                        <!-- Currency -->
                        <TextBlock Text="{DynamicResource Currency}"  Grid.Column="1" Grid.Row="7" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center" />
                        <dxe:ComboBoxEdit Name="CbeCurrency" HorizontalAlignment="Left" Width="100" 
                                                  Grid.Column="3" Grid.Row="7" VerticalAlignment="Center"                                                                                                 
                                                  Style="{DynamicResource ComboBoxEditStyle}" IsTextEditable="False" 
                                                  DisplayMember="Name" ApplyItemTemplateToSelectedItem="True"                                                             
                                                  ItemsSource="{Binding DataContext.CurrencyList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                                  SelectedItem="{Binding DataContext.SelectedCurrency, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                            <dxe:ComboBoxEdit.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Image Source="{Binding CurrencyIconImage}" VerticalAlignment="Center" Height="24" Width="24" Margin="0,0,5,0" />
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                    </DockPanel>
                                </DataTemplate>
                            </dxe:ComboBoxEdit.ItemTemplate>
                            <dxe:ComboBoxEdit.SelectedIndex>
                                <Binding Path="SelectedCurrencyIndex" ValidatesOnDataErrors="True" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <Validation:PreOrderValidation FieldName="SelectedCurrencyIndex" ValidationStep="UpdatedValue" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </dxe:ComboBoxEdit.SelectedIndex>
                            <dxmvvm:Interaction.Triggers>
                                <dxmvvm:EventToCommand EventName="PopupClosed" Command="{Binding DataContext.CurrencyPopupClosedCommand, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                                               PassEventArgsToCommand="True" />
                            </dxmvvm:Interaction.Triggers>
                        </dxe:ComboBoxEdit>

                        <!-- Observation -->
                        <Label Content="{DynamicResource observationswithcolon}" Grid.Column="1" Grid.Row="9" FontWeight="Bold" Margin="5,5,5,0" VerticalAlignment="Top" />
                        <dxe:TextEdit Grid.Column="3" Grid.Row="9" VerticalAlignment="Top" Height="100" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto"
                                      VerticalContentAlignment="Top" TextWrapping="Wrap">
                            <dxe:TextEdit.Text>
                                <Binding Path="DataContext.ObservationText" ValidatesOnDataErrors="True" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" 
                                                 RelativeSource="{RelativeSource AncestorType=dxwui:WinUIDialogWindow }">
                                    <Binding.ValidationRules>
                                        <Validation:PreOrderValidation FieldName="DataContext.ObservationText" ValidationStep="UpdatedValue" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </dxe:TextEdit.Text>
                        </dxe:TextEdit>
                    </Grid>
                <!--</DataTemplate>
            </dxlc:GroupBox.ContentTemplate>
        </dxlc:GroupBox>-->

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="20,5,0,0" Width="290">

            <Button Content="{DynamicResource AddContactViewAccept}" Command="{Binding AcceptButtonCommand}"                                         
                    Height="30" Width="100" Margin="0,0,30,0" VerticalAlignment="Bottom"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="{DynamicResource AddContactViewCancel}" Command="{Binding CancelButtonCommand}"                                           
                    Height="30" Width="100" Margin="30,0,0,0" VerticalAlignment="Bottom" />

        </StackPanel>
    </Grid>

</dxwui:WinUIDialogWindow>
