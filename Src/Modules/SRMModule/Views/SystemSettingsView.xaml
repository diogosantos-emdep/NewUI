<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SRM.Views.SystemSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                         xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SRM.Views"
             mc:Ignorable="d" 
                   Title="{DynamicResource SRMSystemSettings}"     
                         TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
            >

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{DynamicResource SRMSystemSettingsPOEmailCC}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"></Label>
        <Label Grid.Row="1" Content="{DynamicResource SRMSystemSettingsPOCCMessage}" Grid.ColumnSpan="3" FontSize="14"></Label>


        <dxg:GridControl x:Name="systemgrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2" MaxWidth="522"
                             ItemsSource="{Binding SystemSettingList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectionMode="Cell"
                        
                               >

            <dxg:GridColumn Header="{DynamicResource SystemSettingsWarehouse}" FieldName="Warehouse" AllowBestFit="true" ReadOnly="True" FilterPopupMode="Default"/>
            <dxg:GridColumn Header="{DynamicResource SystemSettingsCC}" FieldName="CC" ReadOnly="{Binding IsUserPermission}" AllowBestFit="true" FilterPopupMode="Default" Width="400"  />


            <dxg:GridControl.View>
                <dxg:TableView x:Name="tablesettings"
                                 HorizontalScrollbarVisibility="Auto"
                                                        NavigationStyle="Cell"
                                                        ShowGroupPanel="False"
                                                        ShowIndicator="False"
                                                        ShowColumnHeaders="True"
                                                        ShowSearchPanelMode ="Never"
                                                        ShowAutoFilterRow="False"
                                                        VerticalScrollbarVisibility="Auto"
                                                        FadeSelectionOnLostFocus="False"
                                                        HorizontalAlignment="Stretch"
                                                        AllowBestFit="True"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
        
        
        <!--rajashri-->

        <Grid Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Content="{DynamicResource SRMSystemSettingsPOEmailCustomMessage}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"></Label>
            <dxg:GridControl x:Name="systemgrid1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2"  MaxWidth="522"
                             ItemsSource="{Binding WarehouseFooterMessageList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectionMode="Cell">

                <dxg:GridColumn Header="{DynamicResource SystemSettingsWarehouse}" FieldName="Name" AllowBestFit="true" ReadOnly="True" FilterPopupMode="Default"/>

                <dxg:GridColumn AllowBestFit="True" ReadOnly="True" FilterPopupMode="Default" Width="20">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding RowData.Row.IsImportantNoticeEnabled}" HorizontalAlignment="Center"
                                      IsEnabled="{Binding DataContext.IsUserEditPermission, RelativeSource={RelativeSource AncestorType={x:Type dxg:GridControl}}}" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>


                <dxg:GridColumn Header="{DynamicResource warehouseCustommsg}" FieldName="CustomMessage" 
                AllowBestFit="True" FilterPopupMode="Default" Width="200" 
                AllowEditing="{Binding IsUserEditPermission}">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RowData.Row.CustomMessage}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                    <dxg:GridColumn.CellEditTemplate>
                        <DataTemplate>
                            <dxe:TextEdit Text="{Binding RowData.Row.CustomMessage, Mode=TwoWay}" />
                        </DataTemplate>
                    </dxg:GridColumn.CellEditTemplate>
                </dxg:GridColumn>




                <dxg:GridColumn Header="{DynamicResource fromdate}" FieldName="ImportantNoticeStartDate"  AllowEditing="{Binding IsUserEditPermission}" AllowBestFit="true" FilterPopupMode="Default" Width="90"  />
                <dxg:GridColumn Header="{DynamicResource todate}"  FieldName="ImportantNoticeEndDate"   AllowEditing="{Binding IsUserEditPermission}" AllowBestFit="true" FilterPopupMode="Default" Width="90"  />

                <dxg:GridControl.View>
                    <dxg:TableView x:Name="tablesettings1"
                                 HorizontalScrollbarVisibility="Auto"
                                                        NavigationStyle="Cell"
                                                        ShowGroupPanel="False"
                                                        ShowIndicator="False"
                                                        ShowColumnHeaders="True"
                                                        ShowSearchPanelMode ="Never"
                                                        ShowAutoFilterRow="False"
                                                        VerticalScrollbarVisibility="Auto"
                                                        FadeSelectionOnLostFocus="False"
                                                        HorizontalAlignment="Stretch"
                                                        AllowBestFit="True"/>
                </dxg:GridControl.View>
            </dxg:GridControl>

        </Grid>

        <Grid Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="0"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="{DynamicResource SystemSettingsAcceptButton}"
                           Command="{Binding AcceptButtonCommand}"
                    Height="30"
                    Width="100" 
                    
                    />


            <Button Grid.Row="1" Grid.Column="2"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="{DynamicResource SystemSettingsCancelButton}"
                    Command="{Binding CancelButtonCommand}"
                    Height="30"
                    Width="100" />
        </Grid>
        <!--<Grid Grid.Row="4"  Height="Auto" Width="Auto" Background="Transparent">
           
                <Button Content="{DynamicResource SystemSettingsAcceptButton}"
                        Command="{Binding AcceptButtonCommand}"
                        Height="30"
                        Width="100"
                        Margin="60,20,0,0"
                        Style="{DynamicResource Button16Style}"
                        VerticalAlignment="Center" />
                <Button Content="{DynamicResource SystemSettingsCancelButton}"
                        Command="{Binding CancelButtonCommand}"
                        Height="30"
                        Width="100"
                        Margin="60,20,0,0"
                        Style="{DynamicResource Button16Style}"
                        VerticalAlignment="Center" />
           
        </Grid>-->
    </Grid>
</dxwui:WinUIDialogWindow>
