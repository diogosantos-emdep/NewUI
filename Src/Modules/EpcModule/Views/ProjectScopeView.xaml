<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Epc.Views"
             xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:viewModel="clr-namespace:Emdep.Geos.Modules.Epc.ViewModels"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:UIValidation="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             DataContext="{dxmvvm:ViewModelSource Type={x:Type viewModel:ProjectScopeViewModel}}"
             x:Class="Emdep.Geos.Modules.Epc.Views.ProjectScopeView"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <!--<UserControl.Resources>
        <ResourceDictionary>
            --><!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Emdep.Geos.Modules.Epc;component/Resources/EpcCommonResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>--><!--
        </ResourceDictionary>
    </UserControl.Resources>-->

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <dxwui:PageAdornerControl Header="Project Scope " Margin="-20,-25,-20,0" Padding="0">
            <dxwui:PageAdornerControl.HeaderTemplate>
                <DataTemplate>
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" Grid.Column="0"/>
                    </Grid>
                </DataTemplate>
            </dxwui:PageAdornerControl.HeaderTemplate>
        </dxwui:PageAdornerControl>

        <Button  HorizontalAlignment="Right" Grid.Column="1"  Height="40" Width="40" Command="{Binding DataContext.SaveProjectScopeCommand,RelativeSource={RelativeSource Self}}">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Image Style="{ DynamicResource SaveButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <dxdo:DockLayoutManager Grid.Row="1" Grid.ColumnSpan="2" Name="dockManager1">
            <dxdo:LayoutGroup x:Name="RootGroup" Orientation="Horizontal">
                <dxdo:LayoutGroup x:Name="LayoutGroup1" Orientation="Vertical" >
                    <dxdo:LayoutPanel x:Name="paneProjectScopeDescription" Caption="Project Scope Description" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit Width="Auto"
                                      Height="Auto"
                                      HorizontalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      VerticalContentAlignment="Top"
                                      HorizontalContentAlignment="Left"
                                      AcceptsReturn="True"
                                      VerticalAlignment="Stretch"
                                      Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProductScopeDescription" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                </Binding>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel x:Name="paneProjectAcceptanceCriteria" Caption="Project Acceptance Criteria" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit  Width="Auto"
                                       Height="Auto"
                                       HorizontalAlignment="Stretch"
                                       VerticalScrollBarVisibility="Visible"
                                       VerticalContentAlignment="Top"
                                       HorizontalContentAlignment="Left"
                                       AcceptsReturn="True"
                                       VerticalAlignment="Stretch"
                                       Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProjectAcceptanceCriteria" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel x:Name="paneProjectConstraints" ShowCaption="True" Caption="Project Constraints" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit Width="Auto"
                                      Height="Auto"
                                      HorizontalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      VerticalContentAlignment="Top"
                                      HorizontalContentAlignment="Left"
                                      AcceptsReturn="True"
                                      VerticalAlignment="Stretch"
                                      Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProjectConstraints" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                </dxdo:LayoutGroup>

                <dxdo:LayoutGroup x:Name="LayoutGroup13" Orientation="Vertical">

                    <dxdo:LayoutPanel x:Name="paneProjectDeliverables" ShowCaption="True" Caption="Project Deliverables" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit  Width="Auto"
                                       Height="Auto"
                                       HorizontalAlignment="Stretch"
                                       VerticalScrollBarVisibility="Visible"
                                       VerticalContentAlignment="Top"
                                       HorizontalContentAlignment="Left"
                                       AcceptsReturn="True"
                                       VerticalAlignment="Stretch"
                                       Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProjectDeliverables" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                </Binding>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel x:Name="paneProjectExclusions" ShowCaption="True" Caption="Project Exclusions" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit  Width="Auto"
                                       Height="Auto"
                                       HorizontalAlignment="Stretch"
                                       VerticalScrollBarVisibility="Visible"
                                       VerticalContentAlignment="Top"
                                       HorizontalContentAlignment="Left"
                                       AcceptsReturn="True"
                                       VerticalAlignment="Stretch"
                                       Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProjectExclusions" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel x:Name="paneProjectAssumptions" ShowCaption="True" Caption="Project Assumptions" Style="{DynamicResource LayoutPanelStyle}">
                        <dxe:TextEdit  Width="Auto"
                                       Height="Auto"
                                       HorizontalAlignment="Stretch"
                                       VerticalScrollBarVisibility="Visible"
                                       VerticalContentAlignment="Top"
                                       HorizontalContentAlignment="Left"
                                       AcceptsReturn="True"
                                       VerticalAlignment="Stretch"
                                       Margin="0" ValidateOnTextInput="False" NullText="Enter Description" >
                            <dxe:TextEdit.EditValue>
                                <Binding Path="ProjectScopeData.ProjectAssumptions" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
                            </dxe:TextEdit.EditValue>
                        </dxe:TextEdit>
                    </dxdo:LayoutPanel>

                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>

    </Grid>
</UserControl>
