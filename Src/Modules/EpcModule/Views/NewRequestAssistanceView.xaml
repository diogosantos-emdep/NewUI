<dxwui:WinUIDialogWindow
            x:Class="Emdep.Geos.Modules.Epc.Views.NewRequestAssistanceView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"               
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:viewModel="clr-namespace:Emdep.Geos.Modules.Epc.ViewModels"
            xmlns:UIValidation="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
            xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
            mc:Ignorable="d" 
            d:DesignHeight="330" d:DesignWidth="600">

    <dxwui:WinUIDialogWindow.DataContext>
        <viewModel:NewRequestAssistanceViewModel/>
    </dxwui:WinUIDialogWindow.DataContext>

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding NewRequestAssistanceCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid DataContext="{Binding TaskAssistanceData}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical">
            <Label Grid.Row="0" 
               Grid.ColumnSpan="2"
               Content="New Request Assistance"
               FontSize="28" 
               FontWeight="Bold"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontFamily="Calibri" Margin="0,0,0,0" >
            </Label>
        </StackPanel>

        <Label  Content="Request From :" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" />
        <dxe:TextEdit x:Name="txtRequestFrom" HorizontalAlignment="Left" Width="200" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" IsEnabled="False" IsReadOnly="True"
                      EditValue="{Binding DataContext.ActiveUser.FullName, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxwui:WinUIDialogWindow}, Mode=TwoWay}">
        </dxe:TextEdit>
        <!--<dxe:ComboBoxEdit  x:Name="cmbRequestFrom" HorizontalAlignment="Left" Width="200" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" 
                           IsTextEditable="False" IsReadOnly="True"
                           SelectedIndex="{Binding DataContext.SelectedUserIndex, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow,Mode=FindAncestor}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           ItemsSource="{Binding DataContext.TaskAssistanceRequestUserList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxwui:WinUIDialogWindow}}"
                           DisplayMember="FullName" ValueMember="IdUser" >
        </dxe:ComboBoxEdit>-->

        <Label Name="lblRequestTo" Content="Request To :" Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="2"></Label>
        <dxe:ComboBoxEdit  x:Name="cmbRequestTo" Grid.Row="4" Grid.Column="2"  Grid.ColumnSpan="2"
                           HorizontalAlignment="Left" Width="200" IsTextEditable="False" 
                           ItemsSource="{Binding DataContext.TaskAssistanceRequestUserList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxwui:WinUIDialogWindow}}"
                           NullText="Select" DisplayMember="FullName" ValueMember="IdUser" 
                           EditValue="{Binding IdRequestTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </dxe:ComboBoxEdit>

        <Label Name="lblRequestDate" Content= "Request Date :" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"  Width="125"
               HorizontalAlignment="Left" IsEnabled="{Binding IsVEnabl, Mode=OneWay}">
        </Label>
        <dxe:DateEdit Grid.Row="6" Grid.Column="2"  Grid.ColumnSpan="2" Width="200" HorizontalAlignment="Left"
                      Margin="0,3" ValidateOnTextInput="False" ValidateOnEnterKeyPressed="True"
                      Mask="dd-MM-yyyy" MaskUseAsDisplayFormat="True"
                      EditValue="{Binding DataContext.TaskAssistanceData.RequestDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}">
        </dxe:DateEdit>

        <StackPanel Grid.Row="8" Width="270" Grid.Column="3" Margin="0,4,67,0"
                    HorizontalAlignment="Left" Orientation="Horizontal">

            <Button Content="Accept" Height="30" Width="100" Margin="0,0,30,0" FontFamily="Calibri"
                    Command="{Binding DataContext.NewRequestAssistanceAcceptButtonCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dxwui:WinUIDialogWindow}}}" 
                    HorizontalAlignment="Left" VerticalAlignment="Center">
            </Button>
            <Button Content="Cancel" Height="30" Width="100" Margin="30,0,0,0" FontFamily="Calibri"
                    Command="{Binding DataContext.NewRequestAssistanceCancelButtonCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dxwui:WinUIDialogWindow}}}" 
                    HorizontalAlignment="Right" VerticalAlignment="Center">
            </Button>

        </StackPanel>

    </Grid>
</dxwui:WinUIDialogWindow>
