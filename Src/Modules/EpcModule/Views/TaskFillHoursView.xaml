<dxwui:WinUIDialogWindow 
             x:Class="Emdep.Geos.Modules.Epc.Views.TaskFillHoursView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:viewModel="clr-namespace:Emdep.Geos.Modules.Epc.ViewModels"
             xmlns:UIValidation="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Epc.Views"
    xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding FillTaskHoursCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>
    <dxwui:WinUIDialogWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Emdep.Geos.Modules.Epc;component/Resources/EpcCommonResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
 
    </dxwui:WinUIDialogWindow.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="25"/>

            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical">
            <Label Grid.Row="0" 
               Grid.ColumnSpan="2"
               Content="Enter Time"
               FontSize="28" 
               FontWeight="Bold"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontFamily="Calibri" Margin="10,0,10,0" >
            </Label>
        </StackPanel>
       
        <dxg:GridControl x:Name="gridFillTaskHours" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                         ItemsSource="{Binding DataContext.TaskWorkingTimes,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dxwui:WinUIDialogWindow}},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                         EnableSmartColumnsGeneration="True" SelectionMode="Row" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                         AllowUpdateTwoWayBoundPropertiesOnSynchronization="True" >
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="ProjectCode" Header="Project Code" AllowEditing="False"></dxg:GridColumn>
                <dxg:GridColumn FieldName="TaskTitle" Header="Task" AllowEditing="False"></dxg:GridColumn>
              
                <dxg:GridColumn FieldName="WorkingTimeInHours" Header="Time" FixedWidth="True" Width="100" AllowEditing="True" KeyboardNavigation.TabNavigation="Cycle" FocusManager.IsFocusScope="True">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dxe:TextEdit  MaskType="DateTimeAdvancingCaret" Mask="HH:mm" MaskUseAsDisplayFormat="True" 
                                           EditValue="{Binding RowData.Row.WorkingTimeInHoursInTimeSpan , Converter={UIConverter:DateTimeToTimeSpanConverter},Mode=TwoWay,ValidatesOnExceptions=True,UpdateSourceTrigger=PropertyChanged}">
                            </dxe:TextEdit>
                            <!--<dxe:DateEdit VerticalAlignment="Stretch" Mask="HH:mm"  HorizontalAlignment="Stretch" 
                                          EditValue="{Binding RowData.Row.WorkingTimeInHoursInTimeSpan , Converter={UIConverter:DateTimeToTimeSpanConverter},Mode=TwoWay,ValidatesOnExceptions=True,UpdateSourceTrigger=PropertyChanged}">
                                <dxe:DateEdit.StyleSettings>
                                    <dxe:DateEditPickerStyleSettings/>
                                </dxe:DateEdit.StyleSettings>
                            </dxe:DateEdit>-->
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="tableFillTaskHours" AutoWidth="True" AllowPerPixelScrolling="True" NavigationStyle="Row" ShowGroupPanel="False" VerticalScrollbarVisibility="Visible"/>
            </dxg:GridControl.View>
        </dxg:GridControl>

        <StackPanel Grid.Row="6"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Width="260" Grid.Column="2" Margin="30,5,60,5">
            <Button Content="Accept"
                    Command="{Binding DataContext.FillTaskHoursAcceptButtonCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dxwui:WinUIDialogWindow}}}" 
                    Height="30"
                    Width="100"
                    Margin="0,0,30,0"
                    FontFamily="Calibri"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            </Button>

            <Button Content="Cancel"
                    Command="{Binding DataContext.FillTaskHoursCancelButtonCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dxwui:WinUIDialogWindow}}}" 
                    CommandParameter="{Binding ElementName=gridFillTaskHours}"
                    Height="30"
                    Width="100"
                    Margin="30,0,0,0"
                    FontFamily="Calibri"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            </Button>
        </StackPanel>

    </Grid>
</dxwui:WinUIDialogWindow>
