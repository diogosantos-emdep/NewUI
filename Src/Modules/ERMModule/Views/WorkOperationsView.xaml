<UserControl x:Class="Emdep.Geos.Modules.ERM.Views.WorkOperationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.ERM.Views"
             xmlns:ViewModel="clr-namespace:Emdep.Geos.Modules.ERM.ViewModels"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" 
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
             xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"  
             xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer/themekeys"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
               xmlns:dxci="http://schemas.devexpress.com/winfx/2008/xaml/core/internal" 
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Converters:ForegroundColorConverter x:Key="ForegroundColorConverter"/>

        <Style x:Key="printCellStatusStyle" TargetType="dxe:TextEdit" BasedOn="{StaticResource {dxgt:TableViewThemeKey ResourceKey=DefaultPrintCellStyle}}">
            <Style.Setters>
                <Setter Property="dxp:ExportSettings.TargetType" Value="Panel"/>
                <Setter Property="DisplayTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <dxe:TextEdit Name="PART_Editor" Text="{Binding RowData.Row.StatusList}" HorizontalAlignment="Stretch" 
                                          IsPrintingMode="True">
                            </dxe:TextEdit>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
       
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="{DynamicResource WorkOperations}" Style="{StaticResource LabelTitleStyle}" 
                   Grid.Row="0"
                   VerticalAlignment="Center" />

            <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                <Grid HorizontalAlignment="Right" Width="Auto" Height="45" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Add Button -->
                    <Button Content=" " Grid.Row="0" Grid.Column="3" Height="40" Width="40" HorizontalAlignment="Right" 
                            Command="{Binding AddWorksOperationCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}" Margin="5,0,5,5"
                              IsEnabled="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=IsEditWOPermissionERM}">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonAdd}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource PCMAddButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Refresh Button -->
                    <Button Content=" " Grid.Row="0" Grid.Column="4" Height="40" Width="40" HorizontalAlignment="Right"
                            Command="{Binding RefreshWorksOperationCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonRefresh}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource PCMRefreshButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Print Button -->
                    <Button Content=" " Grid.Row="0" Grid.Column="5" Height="40" Width="40" HorizontalAlignment="Right"
                            Command="{Binding PrintWorksOperationCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonPrint}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{DynamicResource PCMPrintButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Export to Excel -->
                    <Button Content=" " Grid.Row="0" Grid.Column="6" Height="40" Width="40" HorizontalAlignment="Right"
                            Command="{Binding ExportWorksOperationCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonExportToExcel}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{DynamicResource PCMExportToExcelButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <!-- Save Button -->
                    <Button Content=" " Height="40" Width="40" Grid.Row="0" Grid.Column="7" Command="{Binding UpdateMultipleRowsWorkOperationGridCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}" HorizontalAlignment="Right" Margin="0,0,5,5" 
                    IsEnabled="{Binding Path=(UIHelper:ERMWorkOperationViewMultipleCellEditHelper.IsValueChanged), ElementName=WorkOperationsListTableView}">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonSave}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource SaveButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <dxdo:DockLayoutManager Name="dockManager1" Grid.Row="1">
            <dxdo:LayoutGroup x:Name="rootMainGroup" Orientation="Horizontal">
                <dxdo:LayoutPanel x:Name="documentGroup1" ShowCaption="False" ShowCloseButton="False">
                    <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <dxg:GridControl x:Name="wogrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" FocusManager.IsFocusScope="True"
                             ItemsSource="{Binding WorkOperationsList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" SelectionMode="Cell"
                             SelectedItem="{Binding SelectedWorkOperationsList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             TotalSummarySource="{Binding TotalSummary}"
                            
                             ImplyNullLikeEmptyStringWhenFiltering="True">
                            <dxg:GridColumn Header="{DynamicResource GridColCode}" FieldName="Code" MinWidth="100" ReadOnly="True" FixedWidth="True" FilterPopupMode="CheckedList"
                                CellStyle="{DynamicResource FocusedHyperlinkCellStyle}">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                                             <Hyperlink x:Name="hyperlink" 
                                               TargetName="_blank"
                                               Command="{Binding DataContext.EditWorkOperationCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                               CommandParameter="{Binding ElementName=WorkOperationsListTableView}" >
                                     <InlineUIContainer>
                                            <TextBlock Text="{Binding Data.Code}" />
                                        </InlineUIContainer>
                                    </Hyperlink>
                                        </TextBlock>
                                        <DataTemplate.Triggers>
                                            <Trigger Property="dxg:DataViewBase.IsFocusedCell" Value="True">
                                                <Setter TargetName="hyperlink" Property="Foreground" Value="{DynamicResource ColorMain}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed" />
                                            </Trigger>
                                        </DataTemplate.Triggers>

                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <!--//[001][rdixit][GEOS2-3710][09/06/2022]-->
                            <dxg:GridColumn Header="{DynamicResource GridColName}" FieldName="Name" MinWidth="100" FilterPopupGroupFields="ModelTrademarkName;ModelName"  FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False"
                                                      Text="{Binding Name, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColDescription}" FieldName="Description" MinWidth="100" MaxWidth="650" FixedWidth="False" FilterPopupGroupFields="ModelTrademarkName;ModelName"  FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False"
                                                      Text="{Binding Description, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColParent}" FieldName="Parent" MinWidth="100" MaxWidth="600" FilterPopupMode="CheckedList" ColumnFilterMode="DisplayText" SortMode="DisplayText"  AllowSorting="True">
                                <!--GEOS2-4138- gulab lakade 19/01/2023-->
                                <dxg:GridColumn.DisplayTemplate>
                                    <ControlTemplate>
                                        <TextBlock Text="{Binding Row.Parent}"  ></TextBlock>
                                    </ControlTemplate>
                                </dxg:GridColumn.DisplayTemplate>
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>

                                        <dxg:LookUpEdit Grid.Column="0"  Width="600" Name="PART_Editor"
                            HorizontalAlignment="Left"
                           ItemsSource="{Binding RowData.Row.ParentList}" 
                            DisplayMember="Name" ValueMember="Name"   
                           AutoPopulateColumns="False" AutoComplete="True" IsTextEditable="False" ImmediatePopup="True" IncrementalFiltering="False" IncrementalSearch="False">
                                            <dxg:LookUpEdit.StyleSettings>
                                                <dxg:SearchLookUpEditStyleSettings/>
                                            </dxg:LookUpEdit.StyleSettings>
                                            <dxg:LookUpEdit.PopupContentTemplate>
                                                <ControlTemplate>
                                                    <dxg:GridControl Name="PART_GridControl">
                                                        <dxg:GridControl.Columns>
                                                            <dxg:GridColumn FieldName="Name" FilterPopupMode="CheckedList"/>
                                                        </dxg:GridControl.Columns>
                                                        <dxg:GridControl.View>
                                                            <dxg:TreeListView Name="treeListViewParentGroup"
                                                  AutoWidth="True" 
                                                  TreeDerivationMode="Selfreference" 
                                                  KeyFieldName="KeyName" 
                                                  ParentFieldName="Parent"
                                                  ShowIndicator="False"       
                                                  SearchPanelHorizontalAlignment="Stretch"
                                                  AutoExpandAllNodes="True"/>
                                                        </dxg:GridControl.View>

                                                    </dxg:GridControl>
                                                </ControlTemplate>
                                            </dxg:LookUpEdit.PopupContentTemplate>
                                        </dxg:LookUpEdit>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                                <!--ValueMember="IdWorkOperation"-->
                                <dxg:GridColumn.PrintCellStyle>
                                    <Style TargetType="dxe:TextEdit" BasedOn="{StaticResource {dxgt:TableViewThemeKey ResourceKey=DefaultPrintCellStyle}}">
                                        <Setter Property="dxp:ExportSettings.TargetType" Value="Panel" />
                                        <Setter Property="DisplayTemplate">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <dxe:TextEdit Name="PART_Editor" Text="{Binding Row.Parent}" HorizontalAlignment="Left"
                                                        IsPrintingMode="True">
                                                    </dxe:TextEdit>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </dxg:GridColumn.PrintCellStyle>
                                
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColWorkStage}" FieldName="WorkStage" MinWidth="100" FilterPopupMode="CheckedList" FixedWidth="True" IsSmart="True" ReadOnly="True"/>
                            <dxg:GridColumn Header="{DynamicResource GridColType}" FieldName="Type.Value"  MinWidth="100" ReadOnly="False" FixedWidth="True" SortMode="DisplayText"  FilterPopupMode="CheckedList">
                                
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Image Width="15" Height="15"  Source="{Binding RowData.Row.Type.ImageData,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={Converters:ByteArrayToImage}}"
                                                    VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            <dxe:ComboBoxEdit Name="PART_Editor" ItemsSource="{Binding DataContext.TypeList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=UserControl}}"                                                             
                                                  HorizontalAlignment="Stretch" IsTextEditable="False"       
                                                  DisplayMember="Value" ValueMember="Value"
                                                  AutoComplete="True" ImmediatePopup="True" IncrementalFiltering="True">
                                                
                                            </dxe:ComboBoxEdit>
                                        </DockPanel>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColStatus}" FieldName="WOStatus" SortMode="Default" MinWidth="100" ReadOnly="False" FixedWidth="True" FilterPopupMode="CheckedList">   <!--GEOS2-4138- gulab lakade 19/01/2023-->
                                <!--<dxg:GridColumn.EditSettings>
                                    <dxe:ComboBoxEditSettings ItemsSource="{Binding DataContext.StatusList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=UserControl}}" IsTextEditable="False" />
                                </dxg:GridColumn.EditSettings>-->
                                <dxg:GridColumn.DisplayTemplate>
                                    <ControlTemplate>
                                        <TextBlock Text="{Binding Row.WOStatus}" ></TextBlock>
                                    </ControlTemplate>
                                </dxg:GridColumn.DisplayTemplate>
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:ComboBoxEdit Name="PART_Editor"  ItemsSource="{Binding DataContext.StatusList,RelativeSource={RelativeSource AncestorType=UserControl}}"                                                            
                                                          HorizontalAlignment="Stretch" IsTextEditable="False" 
                                                          DisplayMember="Value" ValueMember="Value" 
                                                  AutoComplete="True" ImmediatePopup="True" IncrementalFiltering="True">
                                        </dxe:ComboBoxEdit>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="{x:Type dxg:LightweightCellEditor}">
                                        <!--<Setter Property="Background" Value="{Binding RowData.Row.Status.HtmlColor}"/>
                                        <Setter Property="Foreground" Value="{Binding Path=Background,Converter={StaticResource ForegroundColorConverter}}"/>-->
                                        <Style.Triggers>
                                        <Trigger Property="SelectionState" Value="none">
                                                <Setter Property="Background" Value="{Binding Row.StatusHTMLColor}"/>
                                            <Setter Property="Foreground" Value="{Binding Path=Background,Converter={StaticResource ForegroundColorConverter}}"/>
                                        </Trigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Row.StatusHTMLColor}" Value="" />
                                                <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Foreground" Value="White" />
                                        </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                                <dxg:GridColumn.PrintCellStyle>
                                    <Style TargetType="dxe:TextEdit" BasedOn="{StaticResource {dxgt:TableViewThemeKey ResourceKey=DefaultPrintCellStyle}}">
                                        <Setter Property="dxp:ExportSettings.TargetType" Value="Panel" />
                                        <Setter Property="DisplayTemplate">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <dxe:TextEdit Name="PART_Editor" Text="{Binding Row.WOStatus}" HorizontalAlignment="Left"
                                                        IsPrintingMode="True">
                                                    </dxe:TextEdit>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </dxg:GridColumn.PrintCellStyle>
                            </dxg:GridColumn>
                            
                            <!--//[001][kshinde][GEOS2-3709][03/06/2022]-->
                            <dxg:GridColumn Header="{DynamicResource GridColDistance}" FieldName="Distance" MinWidth="80" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" Mask="N1" MaskType="Numeric" 
                                                      Text="{Binding Distance, Mode=TwoWay}" MaskUseAsDisplayFormat="True"  SelectAllOnGotFocus="True" SelectAllOnMouseUp="True"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <!--start GEOS2-3954 Time Format HH:mm:ss-->
                            <dxg:GridColumn Header="{DynamicResource GridColObservedTime}" FieldName="UITempobservedTime" MinWidth="150" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" MaskType="TimeSpan" MaskUseAsDisplayFormat="True"
                                                      Text="{Binding UITempobservedTime, Mode=TwoWay}"  SelectAllOnGotFocus="True" SelectAllOnMouseUp="True">
                                            <dxe:TextEdit.Style>
                                                <Style TargetType="{x:Type dxe:TextEdit}">
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True" Binding="{Binding RowData.Row.IsObservedTimeHoursExist, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                                                            <Setter Property="Mask" Value="hh:mm:ss" />
                                                        </DataTrigger>
                                                        <DataTrigger Value="False" Binding="{Binding RowData.Row.IsObservedTimeHoursExist,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                                                            <Setter Property="Mask" Value="mm:ss" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </dxe:TextEdit.Style>
                                        </dxe:TextEdit>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <!--end GEOS2-3954 Time Format HH:mm:ss-->
                            <dxg:GridColumn Header="{DynamicResource GridColcActivity}" FieldName="Activity" MinWidth="40" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" Mask="N0" MaskType="Numeric" 
                                                      Text="{Binding Activity, Mode=TwoWay}" MaskUseAsDisplayFormat="True"  SelectAllOnGotFocus="True" SelectAllOnMouseUp="True"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EventToCommand 
                            EventName="EditValueChanged" Command="{Binding DataContext.ActivityValueChangedCommand, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </dxmvvm:Interaction.Behaviors>
                            </dxg:GridColumn>
                           
                            <!--start GEOS2-3954 Time Format HH:mm:ss-->
                            <dxg:GridColumn Header="{DynamicResource GridColdNormalTime}" FieldName="UITempNormalTime" MinWidth="150" ReadOnly="True" FilterPopupMode="CheckedList" >
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" MaskType="TimeSpan"  MaskUseAsDisplayFormat="True"
                                                      Text="{Binding UITempNormalTime, Mode=TwoWay}" SelectAllOnGotFocus="True" SelectAllOnMouseUp="True">
                                            <dxe:TextEdit.Style>
                                                <Style TargetType="{x:Type dxe:TextEdit}">
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True" Binding="{Binding RowData.Row.IsNormalTimeHoursExist, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                                                            <Setter Property="Mask" Value="hh:mm:ss" />
                                                        </DataTrigger>
                                                        <DataTrigger Value="False" Binding="{Binding RowData.Row.IsNormalTimeHoursExist,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                                                            <Setter Property="Mask" Value="mm:ss" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </dxe:TextEdit.Style>
                                        </dxe:TextEdit>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <!--end GEOS2-3954 Time Format HH:mm:ss-->
                            <!--[GEOS2-3933][Rupali Sarode][20/09/2022]-->

                            <dxg:GridColumn Header="{DynamicResource GridColRemarks}" FieldName="Remarks" MinWidth="130" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" MaxLength="300"  AcceptsReturn="True" 
                                                      Text="{Binding Remarks, Mode=TwoWay}" />
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            
                            <dxg:GridColumn Header="{DynamicResource GridColeDetectedProblems}" FieldName="DetectedProblems" MinWidth="130" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" 
                                                      Text="{Binding DetectedProblems, Mode=TwoWay}" />
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColefImprovementsProposals}" FieldName="ImprovementsProposals" MinWidth="170" ReadOnly="False" FilterPopupMode="CheckedList">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:TextEdit Name="PART_Editor"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"                                                  
                                                      ShowBorder="False" 
                                                      Text="{Binding ImprovementsProposals, Mode=TwoWay}" />
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{DynamicResource GridColLastUpdate}" FieldName="LastUpdated" MinWidth="100" ReadOnly="True" FixedWidth="True" FilterPopupMode="CheckedList" AllowEditing="False" />
                            <dxg:GridColumn MinWidth="30" Width="40" ReadOnly="True" FixedWidth="True" FilterPopupMode="CheckedList" AllowPrinting="False" ShowInColumnChooser="False" AllowMoving="false">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="deleteRowItem" ToolTip="{DynamicResource Delete}" 
                                    Command="{Binding View.DataContext.DeleteWorkOperationsListCommand}" CommandParameter="{Binding ElementName=WorkOperationsListTableView}"
                                                IsEnabled="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=IsEditWOPermissionERM}">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="16"  Style="{ DynamicResource DeleteStyle}" />
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxmvvm:Interaction.Behaviors>
                                <UIHelper:GridSelectingBehavior />
                            </dxmvvm:Interaction.Behaviors>
                           
                            <dxg:GridControl.TotalSummary>
                                <!--<dxg:GridSummaryItem x:Name="summary" FieldName="" SummaryType="Count" DisplayFormat="Total Count : {0}" Visible="True" Alignment="Left"/>-->
                               
                            </dxg:GridControl.TotalSummary>
                            
                            <dxg:GridControl.View>
                                <dxg:TableView x:Name="WorkOperationsListTableView"
                                   ShowGroupedColumns="True"  
                                   HorizontalScrollbarVisibility="Auto"  
                                   VerticalScrollbarVisibility="Visible" 
                                   ShowIndicator="False"  
                                   ShowColumnHeaders="True"  
                                   ShowGroupPanel="False"  
                                   AllowEditing="True"  
                                   ShowHorizontalLines="True"  
                                   ShowVerticalLines="True"  
                                   ShowSearchPanelMode="Always" 
                                   SearchPanelHorizontalAlignment="Stretch" 
                                   EnableImmediatePosting="True"
                                   ImmediateUpdateRowPosition="False"
                                   FilterRowDelay="500"
                                   AllowColumnMoving="True"
                                   NavigationStyle="Cell"
                                   ShowAutoFilterRow="True"            
                                   ShowFixedTotalSummary="True"
                                   ShowTotalSummary="True"
                                   ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"
                                   ShowFilterPopup="{DXEvent Handler='@args.PopupBaseEdit.PopupWidth=200'}"   
                                   RowDetailsVisibilityMode="Visible"
                                   AllowConditionalFormattingMenu="True"  
                                   UIHelper:ERMWorkOperationViewMultipleCellEditHelper.IsEnabled="True"
                                   IsColumnChooserVisible="{Binding IsColumnChooserVisibleForGrid,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                    <!--FocusedRow="{Binding SelectedWorkOperationsList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"-->
                                    <dxg:TableView.Resources>
                                        <DataTemplate x:Key="WorkOperationsListPrintHeaderTemplate">
                                            <Grid Width="{Binding UsablePageWidth}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="130" />
                                                </Grid.ColumnDefinitions>
                                                <dxe:TextEdit Text=" " Width="{Binding UsablePageWidth}" Grid.ColumnSpan="3" IsPrintingMode="True" Background="#333E5E" HorizontalAlignment="Stretch" 
                                                      VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" Height="50" />
                                                <dxe:TextEdit Text="Work Operations Report" IsPrintingMode="True" HorizontalAlignment="Stretch" 
                                                      VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" />
                                                <Image Source="/Emdep.Geos.Modules.ERM/Assets/Images/GeosReportLogo.png" Height="50" Width="80"  dxp:ExportSettings.TargetType="Image" Grid.Column="2" />
                                            </Grid>
                                        </DataTemplate>

                                        <DataTemplate x:Key="WorkOperationsListPrintFooterTemplate">
                                            <dxe:TextEdit HorizontalContentAlignment="Center" 
                                                  Width="{Binding Path=UsablePageWidth, Mode=OneWay}" 
                                                  dxp:ExportSettings.TargetType="PageNumber" 
                                                  dxp:PageNumberExportSettings.Kind="NumberOfTotal" 
                                                  dxp:PageNumberExportSettings.Format="Page {0} of {1}"/>
                                        </DataTemplate>

                                    </dxg:TableView.Resources>
                                    <dxmvvm:Interaction.Behaviors>
                                        <dxmvvm:EventToCommand EventName="ShowFilterPopup"
                                               Command="{Binding CustomShowFilterPopupCommand}"
                                               PassEventArgsToCommand="True"/>

                                        <dxmvvm:EventToCommand Command="{Binding TableViewLoadedCommand}" EventName="Loaded" PassEventArgsToCommand="True" />
                                       
                                    </dxmvvm:Interaction.Behaviors>
                                </dxg:TableView>
                            </dxg:GridControl.View>
                            
                        </dxg:GridControl>
                    </Grid>
                </dxdo:LayoutPanel>
            </dxdo:LayoutGroup>

            <!--region #1-->
            <dxdo:DockLayoutManager.AutoHideGroups>

                <!--Create one AutoHideGroup on the Left-->

                <!--Work Operation-->
                <dxdo:AutoHideGroup DockType="Left" AutoHideSize="300,200">
                    <dxdo:LayoutPanel Caption="{DynamicResource WorkOperations}" ItemWidth="300">
                        <dxdo:LayoutPanel.ControlBoxContentTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="1" ShowGridLines="False" Grid.Column="2" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    </Grid>
                            </DataTemplate>


                        </dxdo:LayoutPanel.ControlBoxContentTemplate>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>


                            <dxg:TreeListControl x:Name="GridWorkOperationMenulist" Grid.Row="0" MaxHeight="1000"
                                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="None" 
                                                 ItemsSource="{Binding DataContext.WorkOperationMenulist, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                 SelectedItem="{Binding DataContext.SelectedWorkOperationMenulist,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                 SelectionMode="Row" 
                                                 >

                                <dxg:TreeListControl.Columns>
                                    <dxg:TreeListColumn Width="*" FieldName="NameWithWorkOperationCount" FixedWidth="True" ReadOnly="True" FilterPopupMode="CheckedList"/>

                                </dxg:TreeListControl.Columns>
                                <dxg:TreeListControl.View>
                                    <dxg:TreeListView Name="GridParentMenuTreeList" 
                                                      ShowTotalSummary="False"
                                                      AllowRecursiveNodeChecking="False"
                                                      ShowSearchPanelMode="Always"
                                                      ShowColumnHeaders="False"
                                                      ShowIndicator="False"
                                                      VerticalScrollbarVisibility="Visible"
                                                      ParentFieldName="ParentName" 
                                                      KeyFieldName="KeyName"
                                                      FilterMode="Extended"
                                                      SearchPanelHorizontalAlignment="Stretch"
                                                      AllowDragDrop="False"
                                                      AutoExpandAllNodes="True"
                                                      NavigationStyle="Row"
                                                      FocusedRow="{Binding Path=SelectedWorkOperationMenulist, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

                                        <dxmvvm:Interaction.Behaviors>
                                            <dxmvvm:EventToCommand Command="{Binding TreeListViewLoadedCommand}" EventName="Loaded" PassEventArgsToCommand="True" />
                                            
                                        </dxmvvm:Interaction.Behaviors>
                                    </dxg:TreeListView>
                                </dxg:TreeListControl.View>
                                <dxmvvm:Interaction.Behaviors>

                                    <dxmvvm:EventToCommand Command="{Binding DataContext.SelectStageCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                           EventName="MouseLeftButtonDown" PassEventArgsToCommand="True">
                                    </dxmvvm:EventToCommand>

                                </dxmvvm:Interaction.Behaviors>

                            </dxg:TreeListControl>
                        </Grid>
                    </dxdo:LayoutPanel>
                </dxdo:AutoHideGroup>

            </dxdo:DockLayoutManager.AutoHideGroups>
            <!--endregion #1-->

        </dxdo:DockLayoutManager>
    </Grid>
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding TableViewUnloadedCommand}" EventName="Unloaded" PassEventArgsToCommand="True" />
    </dxmvvm:Interaction.Behaviors>
</UserControl>
