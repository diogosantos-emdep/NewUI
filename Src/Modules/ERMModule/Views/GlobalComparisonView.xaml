                    <DockPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,5,5">
                        <TextBlock  Margin="3,0,7,0" Text="{DynamicResource Stage}"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource TextBlock14Style}"/>
                    </DockPanel>
                    <dxe:ComboBoxEdit
    Grid.Row="0"
    Grid.Column="2"
    Margin="0,0,5,5"
    Width="120"
    Name="Status2"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    ScrollViewer.VerticalScrollBarVisibility="Auto"
    TextTrimming="CharacterEllipsis"
    TextWrapping="Wrap"
    Style="{DynamicResource ComboBoxEditStyle}"
    IsTextEditable="False"
    ItemsSource="{Binding StagesList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    DisplayMember="StageCode"
    ValueMember="IdStage"
    EditValue="{Binding SelectedStage,
                        Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}">

                        <dxmvvm:Interaction.Triggers>
                            <dxmvvm:EventToCommand 
            EventName="PopupClosed"
            Command="{Binding DataContext.ChangeStageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding ElementName=Status2, Path=EditValue}" />
                        </dxmvvm:Interaction.Triggers>
                    </dxe:ComboBoxEdit>

                    <!-- Plant -->
            <DockPanel Grid.Column="3" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,5,5">
                <Image  Style="{DynamicResource WarehouseImageStyle}" Width="24" Height="24" Margin="0,0,3,5"></Image>
                <TextBlock  Margin="3,0,7,0" Text="{DynamicResource GridColPlant}"
                               HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource TextBlock14Style}"/>
            </DockPanel>
            <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="4"   Margin="0,0,5,5"
                                      Width="120" Name="CbePlant" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"  TextTrimming="CharacterEllipsis" 
                                      TextWrapping="Wrap"  Style="{DynamicResource ComboBoxEditStyle}" 
                                      IsTextEditable="False"  DisplayMember="Name" 
                                      ItemsSource ="{Binding Source={x:Static ERMApplication:ERMCommon.Instance}, Path=UserAuthorizedPlantsList ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
