<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SCM.Views.SearchFiltersManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SCM.Views"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" 
            >
	<!--[rdixit][GEOS2-4973][14.12.2023]-->
	<dxwui:WinUIDialogWindow.InputBindings>
		<KeyBinding Key="Escape" Command="{Binding CancelButtonCommand}"/>

	</dxwui:WinUIDialogWindow.InputBindings>
	<!--[GEOS2-5826][shweta.thube][22.07.2024]-->
	<dxwui:WinUIDialogWindow.TitleStyle>
		<Style TargetType="ContentControl">
			<Setter Property="ContentTemplate">
				<Setter.Value>
					<DataTemplate>
						<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="1035"/>
							</Grid.ColumnDefinitions>

							<TextBlock Text="{Binding DataContext.WindowHeader,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}" Grid.Column="0" Style="{DynamicResource CustomTitleStyle}" />

							<Button  Content=" " Margin ="0,0,-300,0" Grid.Column="1" Height="24" Width="24" HorizontalAlignment="Right"
                                    Command="{Binding DataContext.CloseButtonCommand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}" >
								<Button.ContentTemplate>
									<DataTemplate>
										<Image Style="{ DynamicResource CloseButtonIcon}"  Height="24" Width="24" Margin="-12"
                                               />
									</DataTemplate>
								</Button.ContentTemplate>
							</Button>
						</Grid>
					</DataTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</dxwui:WinUIDialogWindow.TitleStyle>
	<dxwui:WinUIDialogWindow.Resources>
		<Style x:Key="ColorImageStyle" TargetType="Image">
			<Style.Triggers>
				<MultiDataTrigger>
					<MultiDataTrigger.Conditions>
						<Condition Binding="{Binding Id}" Value="12" />
						<Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
					</MultiDataTrigger.Conditions>
					<Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/wt_color_transparent.png" />
				</MultiDataTrigger>
				<MultiDataTrigger>
					<MultiDataTrigger.Conditions>
						<Condition Binding="{Binding Id}" Value="12" />
						<Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="WhiteAndBlue" />
					</MultiDataTrigger.Conditions>
					<Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/bt_color_transparent.png" />
				</MultiDataTrigger>
				<DataTrigger Binding="{Binding Id}" Value="17">
					<Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ic_color_multicolor.png" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</dxwui:WinUIDialogWindow.Resources>
	<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Focusable="False">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="50" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid Grid.Row="0">

					<TextBlock Grid.Column="0" Text="{DynamicResource SCMSearchFilterManagerNoOfPagesTextBlock}" Margin="5,0,130,0" HorizontalAlignment="right" VerticalAlignment="Center" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />

					<dxe:TextEdit Grid.Column="8" HorizontalAlignment="right" VerticalAlignment="Center" Height="30" Width="120" Text="{Binding NumberOfPages,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MaskType="Numeric" dxe:NumericMaskOptions.AlwaysShowDecimalSeparator="False"
								  IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}"
								  Mask="###########0;" MaskUseAsDisplayFormat="True" VerticalContentAlignment="Center" />
				</Grid>
				<Grid Grid.Row="1" Margin="5">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="350" />
						<ColumnDefinition Width="5" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="5" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="5" />
						<ColumnDefinition Width="400" />
					</Grid.ColumnDefinitions>

					<dxlc:LayoutGroup View="GroupBox" IsCollapsed="False" IsCollapsible="False" Grid.Column="0" Grid.ColumnSpan="3" >
						<dxlc:LayoutGroup.HeaderTemplate>
							<DataTemplate>
								<TextBlock Text="{DynamicResource GlobalFilters}" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontWeight="Bold" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
							</DataTemplate>
						</dxlc:LayoutGroup.HeaderTemplate>
						<!--Reference-->
						<dxlc:LayoutGroup View="GroupBox" IsCollapsed="False" IsCollapsible="False" Grid.Column="0">
							<dxlc:LayoutGroup.HeaderTemplate>
								<DataTemplate>
									<TextBlock Text="{DynamicResource SCMSearchFilterManagerReferenceTextBlock}" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontWeight="Bold"
												   Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
								</DataTemplate>
							</dxlc:LayoutGroup.HeaderTemplate>
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="50" />
									<RowDefinition Height="10" />
									<RowDefinition Height="*" />
								</Grid.RowDefinitions>
								<Grid Grid.Row="0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="100" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<!--Pages To Apply-->
									<TextBlock Text="{DynamicResource SCMSearchFilterManagerPagesToApplyTextBlock}" VerticalAlignment="Center" Grid.Column="0" Height="30" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
									<!--Pages To Apply-->
									<dxe:TextEdit VerticalAlignment="Stretch" Height="30" Grid.Column="2" Text="{Binding DataContext.ReferencePagesToApply,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}" VerticalContentAlignment="Center"
												  IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" >
										<Binding Path="ReferencePagesToApply" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" ValidatesOnDataErrors="True">
											<Binding.ValidationRules>
												<Validation:SCMSearchFilterManagerValidation FieldName="ReferencePagesToApply" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True" />
											</Binding.ValidationRules>
										</Binding>
									</dxe:TextEdit>

								</Grid>

								<Separator Grid.Row="1" BorderThickness="1" Margin="-12,0,-12,-12"/>
								
								<Grid Grid.Row="2">
									<Grid.RowDefinitions>
										<RowDefinition Height="30" />
										<RowDefinition Height="*" />
									</Grid.RowDefinitions>
									<!--Similar Characters-->
									<TextBlock Text="{DynamicResource SCMSearchFilterManagerSimilarCharactersTextBlock}" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />

									<!-- Add Button -->
									<Button Content=" " Height="30" Width="30" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0"
											 IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
												Command="{Binding AddSimilarCharactersCommand}" CommandParameter="{Binding ElementName=ReferenceGrid, Path=SelectedItem}">
										<Button.ToolTip>
											<TextBlock Text="{DynamicResource ButtonAddNewReferenceFiler}" />
										</Button.ToolTip>
										<Button.ContentTemplate>
											<DataTemplate>
												<Image Style="{ DynamicResource PCMAddButtonImageStyle}" Height="15" Width="15" Margin="-10" />
											</DataTemplate>
										</Button.ContentTemplate>
									</Button>
									<Grid Grid.Row="1">
										<dxg:GridControl x:Name="ReferenceGrid" ItemsSource="{Binding DataContext.SimilarCharactersList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
															 SelectedItem="{Binding DataContext.SelectedSimilarCharacters,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
														 SelectionMode="Row" MaxHeight="450" Height="450" MinHeight="400">
											<dxg:GridColumn Header="{Binding ReferenceGridColumnCharacterA}" FieldName="CharacterA" Width="80" FixedWidth="True" ReadOnly="{Binding DataContext.IsSCMEditFiltersManager,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
											<dxg:GridColumn Header="{Binding ReferenceGridColumnCharacterB}" FieldName="CharacterB" Width="80" FixedWidth="True" ReadOnly="{Binding DataContext.IsSCMEditFiltersManager,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" />
											<dxg:GridColumn Header="{Binding ReferenceGridColumnDescription}" FieldName="Description" Width="115" FixedWidth="True" ReadOnly="{Binding DataContext.IsSCMEditFiltersManager,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" />
											<dxg:GridColumn MinWidth="30" Width="42" ReadOnly="True" FixedWidth="True" Fixed="Right" FilterPopupMode="CheckedList">
												<dxg:GridColumn.CellTemplate>
													<DataTemplate>
														<Button Name="deleteRowItem" ToolTip="Cut" Command="{Binding DataContext.ReferenceCrossButtonCommand, RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
																IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" >
															<Button.ContentTemplate>
																<DataTemplate>
																	<Image Height="16" Width="16" Style="{ DynamicResource ReferenceCrossStyle}" />
																</DataTemplate>
															</Button.ContentTemplate>
															<Button.Style>
																<Style TargetType="{x:Type Button}">
																	<Style.Triggers>
																		<Trigger Property="IsMouseOver" Value="True">
																			<Setter Property="Cursor" Value="Hand" />
																		</Trigger>
																	</Style.Triggers>
																</Style>
															</Button.Style>
														</Button>
													</DataTemplate>
												</dxg:GridColumn.CellTemplate>
											</dxg:GridColumn>
											<dxg:GridControl.View>
												<dxg:TableView x:Name="ReferenceItemTableView"
																   SearchPanelHorizontalAlignment="Stretch"
																   ShowSearchPanelMode="Always"
																   ShowColumnHeaders="True"
																   HorizontalScrollbarVisibility="Auto"
																   VerticalScrollbarVisibility="Auto"
																   EnableImmediatePosting="True"
																   AllowColumnFiltering="True"
																   ShowGroupPanel="False"
																   ShowIndicator="False"
																   AllowEditing="True"
																   NavigationStyle="Cell"
																   AllowHorizontalScrollingVirtualization="True"
																   AllowColumnMoving="False">
													<dxmvvm:Interaction.Behaviors>
														<dxmvvm:EventToCommand EventName="CellValueChanged"
																				   Command="{Binding DataContext.ReferenceRowUpdatedCommnad,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
																				   CommandParameter="{Binding RowData.Row,ElementName=ReferenceItemTableView}"
																				   PassEventArgsToCommand="True"/>
													</dxmvvm:Interaction.Behaviors>
												</dxg:TableView>
											</dxg:GridControl.View>
										</dxg:GridControl>
									</Grid>
								</Grid>
							</Grid>
						</dxlc:LayoutGroup>
						<!--Appearance-->
						<dxlc:LayoutGroup View="GroupBox" IsCollapsed="False" IsCollapsible="False" Grid.Column="2"  >
							<dxlc:LayoutGroup.HeaderTemplate>
								<DataTemplate>
									<TextBlock Text="{DynamicResource SCMSearchFilterManagerAppearanceTextBlock}" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontWeight="Bold" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
								</DataTemplate>
							</dxlc:LayoutGroup.HeaderTemplate>
							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >															
									<Grid.RowDefinitions>
										<RowDefinition Height="50" />
										<RowDefinition Height="20" />
										<RowDefinition Height="*" />
									</Grid.RowDefinitions>
									<Grid Grid.Row="0" HorizontalAlignment="Stretch">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="100" />
											<ColumnDefinition Width="5" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										<!--Pages To Apply-->
										<TextBlock Text="{DynamicResource SCMSearchFilterManagerPagesToApplyTextBlock}" VerticalAlignment="Center" Grid.Column="0" Height="30" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
										<!--Pages To Apply-->
										<dxe:TextEdit VerticalAlignment="Stretch" Height="30" Grid.Column="2"
														  Text="{Binding DataContext.AppearancePagesToApply,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" VerticalContentAlignment="Center"
														  IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}" >
											<Binding Path="AppearancePagesToApply" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" ValidatesOnDataErrors="True">
												<Binding.ValidationRules>
													<Validation:SCMSearchFilterManagerValidation FieldName="AppearancePagesToApply" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True" />
												</Binding.ValidationRules>
											</Binding>
										</dxe:TextEdit>										
									</Grid>
									<Separator Grid.Row="1" BorderThickness="1" Margin="-12,0,-12,-12"/>
								<Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="false">
									<Grid.RowDefinitions>
										<RowDefinition Height="40" />
										<RowDefinition Height="*" />
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="100" />
										<ColumnDefinition Width="5" />
										<ColumnDefinition Width="130" />
										<ColumnDefinition Width="5" />
										<ColumnDefinition Width="35" />
									</Grid.ColumnDefinitions>
									<TextBlock Text="{DynamicResource SCMSearchFilterManagerColorSimilarityTextBlock}" VerticalAlignment="Bottom" Grid.Column="0" Height="30" Grid.Row="0" Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap" />
									<dxe:ComboBoxEdit Height="30" Grid.Row="0" Grid.Column="2" Name="cmbColor" HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                          TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Style="{DynamicResource ComboBoxEditStyle}"
                                                          IsTextEditable="False" DisplayMember="Name" AutoComplete="True" ApplyItemTemplateToSelectedItem="True"
                                                          IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}"
                                                          ItemsSource="{Binding DataContext.ListColor,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                                          SelectedItem="{Binding DataContext.SelectedColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
										<dxe:ComboBoxEdit.ItemContainerStyle>
											<Style TargetType="dxe:ComboBoxEditItem">
												<Setter Property="HorizontalContentAlignment" Value="Stretch" />
											</Style>
										</dxe:ComboBoxEdit.ItemContainerStyle>
										<dxe:ComboBoxEdit.ItemTemplate>
											<DataTemplate>
												<DockPanel>
													<Ellipse Visibility="{Binding ColorVisibility}" VerticalAlignment="Center" Width="18" Height="18" Margin="3" Fill="{Binding HtmlColor}" />
													<Image Visibility="{Binding ImageVisibility}" Style="{StaticResource ColorImageStyle}" VerticalAlignment="Center" Height="22" Width="22" Margin="3" />
													<TextBlock Text="{Binding Name}" Margin="5,0,0,0" Padding="3">
														<TextBlock.Style>
															<Style TargetType="TextBlock">
																<Style.Triggers>
																	<Trigger Property="IsEnabled" Value="False">
																		<Setter Property="Foreground" Value="Gray" />
																	</Trigger>
																</Style.Triggers>
															</Style>
														</TextBlock.Style>
													</TextBlock>
												</DockPanel>
											</DataTemplate>
										</dxe:ComboBoxEdit.ItemTemplate>
									</dxe:ComboBoxEdit>
									<!-- Add Button -->
									<Button Content=" " Grid.Column="4" Grid.Row="0" Height="30" Width="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0"
                                                IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}"
                                                Command="{Binding AddColorSimilarityButtonCommand}" CommandParameter="{Binding ElementName=ItemListTableView}">
										<Button.ToolTip>
											<TextBlock Text="{DynamicResource ButtonAddNewColorFiler}" />
										</Button.ToolTip>
										<Button.ContentTemplate>
											<DataTemplate>
												<Image Style="{ DynamicResource PCMAddButtonImageStyle}" Height="15" Width="15" Margin="-10" />
											</DataTemplate>
										</Button.ContentTemplate>
									</Button>
									<dxg:GridControl x:Name="ColorGridControl" ItemsSource="{Binding DataContext.ColorSimilarityList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"  
                                                     AllowLiveDataShaping="True" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6"  SelectionMode="Row" MaxHeight="410" Height="410" MinHeight="270"
													 SelectedItem="{Binding DataContext.SelectedColorSimilarity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
												 VerticalAlignment="top" Margin="0,10,-10,10">
										<dxg:GridColumn FieldName="SelectedColor.Name" FilterPopupMode="Default" MinWidth="125" Width="125" FixedWidth="True" >
											<dxg:GridColumn.CellTemplate>
												<DataTemplate>
													<dxe:ComboBoxEdit Height="30" Grid.Row="0" Grid.Column="2" Name="cmbColor" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" TextTrimming="CharacterEllipsis"
                                                                         IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}"
                                                                          TextWrapping="Wrap" Style="{DynamicResource ComboBoxEditStyle}" IsTextEditable="False" DisplayMember="Name" ApplyItemTemplateToSelectedItem="True"
                                                                          SelectedItem="{Binding RowData.Row.SelectedColor,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}" ItemsSource="{Binding RowData.Row.ColorList,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}">
														<dxe:ComboBoxEdit.ItemContainerStyle>
															<Style TargetType="dxe:ComboBoxEditItem">
																<Setter Property="HorizontalContentAlignment" Value="Stretch" />
															</Style>
														</dxe:ComboBoxEdit.ItemContainerStyle>
														<dxe:ComboBoxEdit.ItemTemplate>
															<DataTemplate>
																<DockPanel>
																	<Ellipse Visibility="{Binding ColorVisibility}" VerticalAlignment="Center" Width="18" Height="18" Margin="3" Fill="{Binding HtmlColor}" />
																	<Image Visibility="{Binding ImageVisibility}" Style="{StaticResource ColorImageStyle}" VerticalAlignment="Center" Height="22" Width="22" Margin="3" />
																	<TextBlock Text="{Binding Name}" Margin="5,0,0,0" Padding="3">
																		<TextBlock.Style>
																			<Style TargetType="TextBlock">
																				<Style.Triggers>
																					<Trigger Property="IsEnabled" Value="False">
																						<Setter Property="Foreground" Value="Gray" />
																					</Trigger>
																				</Style.Triggers>
																			</Style>
																		</TextBlock.Style>
																	</TextBlock>
																</DockPanel>
															</DataTemplate>
														</dxe:ComboBoxEdit.ItemTemplate>
														<dxmvvm:Interaction.Triggers>
															<dxmvvm:EventToCommand EventName="EditValueChanged"
                                                            Command="{Binding DataContext.ColorRowUpdatedCommnad, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                                            CommandParameter="{Binding RowData.Row,ElementName=AppearanceItemTableView}" />
														</dxmvvm:Interaction.Triggers>
													</dxe:ComboBoxEdit>
												</DataTemplate>
											</dxg:GridColumn.CellTemplate>
										</dxg:GridColumn>
										<dxg:GridColumn MinWidth="30" Width="40" ReadOnly="True" FixedWidth="True" Fixed="Right" FilterPopupMode="Default" AllowPrinting="False" ShowInColumnChooser="False" AllowMoving="false">
											<dxg:GridColumn.CellTemplate>
												<DataTemplate>
													<Button Name="deleteRowItem" ToolTip="{DynamicResource Delete}" Command="{Binding View.DataContext.AppearanceCrossCommand}"
                                                            IsEnabled="{Binding DataContext.IsSCMEditFiltersManagerBtn,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow, Mode=FindAncestor}}"
                                                             CommandParameter="{Binding ElementName=AppearanceItemTableView}">
														<Button.ContentTemplate>
															<DataTemplate>
																<Image Height="16" Width="16" Style="{ DynamicResource ReferenceCrossStyle}" />
															</DataTemplate>
														</Button.ContentTemplate>
														<Button.Style>
															<Style TargetType="{x:Type Button}">
																<Style.Triggers>
																	<Trigger Property="IsMouseOver" Value="True">
																		<Setter Property="Cursor" Value="Hand" />
																	</Trigger>
																</Style.Triggers>
															</Style>
														</Button.Style>
													</Button>
												</DataTemplate>
											</dxg:GridColumn.CellTemplate>
										</dxg:GridColumn>
										<dxmvvm:Interaction.Behaviors>
											<UIHelper:GridSelectingBehavior />
										</dxmvvm:Interaction.Behaviors>
										<dxg:GridControl.View>
											<dxg:TableView  x:Name="AppearanceItemTableView"
                                                                SearchPanelHorizontalAlignment="Stretch"
                                                                ShowSearchPanelMode="Never"
                                                                ShowColumnHeaders="False"
                                                                HorizontalScrollbarVisibility="Auto"
                                                                VerticalScrollbarVisibility="Auto"
                                                                EnableImmediatePosting="True"
                                                                AllowColumnFiltering="True"
                                                                ShowGroupPanel="False"
                                                                ShowIndicator="False"
                                                                AllowEditing="True"
                                                                AllowHorizontalScrollingVirtualization="True"
                                                                AllowColumnMoving="False"
                                                                NavigationStyle="Cell"
                                                                RowDetailsVisibilityMode="Visible"
                                                                ShowHorizontalLines="True"
                                                                AllowFixedColumnMenu="False"
                                                                ShowTotalSummary="False"
                                                                ShowFixedTotalSummary="False"
                                                                ImmediateUpdateRowPosition="False"
                                                                ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"
                                                                AllowGrouping="False"
                                                                Focusable="False"
                                                                FilterRowDelay="0"
                                                                UseLegacyFilterEditor="True"
                                                                AutoWidth="True">
												<!--<dxmvvm:Interaction.Triggers>
                                                    <dxmvvm:EventToCommand EventName="RowUpdated"                                                         
                                                                           Command="{Binding DataContext.ColorRowUpdatedCommnad, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"                                                       
