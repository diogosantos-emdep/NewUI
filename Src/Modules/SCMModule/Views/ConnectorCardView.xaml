<UserControl x:Class="Emdep.Geos.Modules.SCM.Views.ConnectorCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SCM.Views"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:SCMCommon="clr-namespace:Emdep.Geos.Data.Common.SCM;assembly=Emdep.Geos.Data.Common"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"   
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--[GEOS2-9552][rdixit][19.09.2025]-->
    <UserControl.Resources>
        <Converters:ImageUrlToByteArrayConverter x:Key="ImageUrlToByteArrayConverter"/>
        <Style x:Key="ColorImage" TargetType="Image">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RowData.Row.Color}" Value="Transparent" />
                        <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/wt_color_transparent.png" />
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RowData.Row.Color}" Value="Transparent" />
                        <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="WhiteAndBlue" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/bt_color_transparent.png" />
                </MultiDataTrigger>
                <DataTrigger Binding="{Binding RowData.Row.Color}" Value="MultiColor">
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ic_color_multicolor.png" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible">

            <dxdo:LayoutGroup x:Name="documentContainer" DestroyOnClosingChildren="False" Orientation="Vertical"                
                              ItemsSource="{Binding ConnectorSearchList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                 
                              ShowCaption="True" ShowCloseButton="False" AllowContextMenu="True" ShowTabHeaders="True">
                <dxdo:LayoutGroup.ItemCaptionTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" FontWeight="Bold" Margin="5,0"/>
                    </DataTemplate>
                </dxdo:LayoutGroup.ItemCaptionTemplate>
                <dxdo:LayoutGroup.ItemStyle>
                    <Style TargetType="dxdo:LayoutPanel">
                        <Setter Property="ShowCloseButton" Value="False"/>
                        <Setter Property="ShowCollapseButton" Value="False"/>
                    </Style>
                </dxdo:LayoutGroup.ItemStyle>
                <dxdo:LayoutGroup.ItemTemplate>
                    <DataTemplate DataType="{x:Type SCMCommon:SearchConnector}">
                        <dxg:GridControl Name="ConnectorGridControl2" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0"   
                         ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" Loaded="ConnectorGridControl2_Loaded"
                         ItemsSource="{Binding ConnectorList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                         SelectedItem="{Binding SelectedConnector,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            <dxg:GridControl.Resources>
                                <DataTemplate x:Key="cardTemplate">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" >
                                        <dxe:ImageEdit VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,2,2,2"  IsReadOnly="True"                                                      
                               Width="{Binding DataContext.CardImageSize,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                    
                               Height="{Binding DataContext.CardImageSize,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  >
                                            <!--[GEOS2-6881][rdixit][23.01.2025]-->
                                            <!--[GEOS2-6631][rdixit][14.04.2025]-->
                                            <dxe:ImageEdit.Style>
                                                <Style TargetType="dxe:ImageEdit">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=DataContext.ConnectorsImagePath,Converter={StaticResource ImageUrlToByteArrayConverter},UpdateSourceTrigger=PropertyChanged ,ConverterParameter='image/png'}" Value="{x:Null}">
                                                            <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ImageEditLogo.png" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Source" Value="{Binding Path=DataContext.ConnectorsImagePath,Converter={StaticResource ImageUrlToByteArrayConverter},UpdateSourceTrigger=PropertyChanged ,ConverterParameter='image/png'}" />
                                                </Style>
                                            </dxe:ImageEdit.Style>
                                            <dxe:ImageEdit.ToolTip>
                                                <Image Source="{Binding Path=DataContext.ConnectorsImagePath,Converter={StaticResource ImageUrlToByteArrayConverter},UpdateSourceTrigger=PropertyChanged ,ConverterParameter='image/png'}"                               
                                                       VerticalAlignment="Center" Height="200" Width="300" Margin="2,0,0,0" />
                                            </dxe:ImageEdit.ToolTip>
                                            <dxmvvm:Interaction.Behaviors>
                                                <dxmvvm:EventToCommand EventName="MouseDown" CommandParameter="{Binding ElementName=ConnectorGridControl2}"                       
                                               Command="{Binding DataContext.ImageClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}" PassEventArgsToCommand="True"/>
                                            </dxmvvm:Interaction.Behaviors>
                                        </dxe:ImageEdit>
                                    </StackPanel>
                                </DataTemplate>
                            </dxg:GridControl.Resources>
                            <dxg:GridColumn FieldName="Ref" Visible="False" />
                            <dxg:GridControl.View>
                                <dxg:CardView Name="ConnectorCardView1"                               
                                              ShowSearchPanelMode="Always"                               
                                              SearchColumns="Ref"                                                             
                                              ShowColumnHeaders="False" 
                                              ShowDragDropHint="False"                                                                                                       
                                              ShowTargetInfoInDragDropHint="False"                                                                
                                              PrintAllGroups="True"                                                               
                                              PrintAutoCardWidth="True"                                                                                                                
                                              ShowGroupPanel="False"                                                                    
                                              ShowCardExpandButton="False"                                                                                                 
                                              CardLayout="Rows"                                                                                                        
                                              CardHeaderBinding="{Binding Data.Ref}"                                                                 
                                              ShowTotalSummary="False"                                                               
                                              NavigationStyle="Row"                                                                 
                                              VerticalAlignment="Stretch"  
                                              HorizontalAlignment="Stretch"                                                                   
                                              ShowFixedTotalSummary="False"                                                                  
                                              SearchPanelPosition="OverGroupPanel"                                                                                                
                                              CardAlignment="Near"                                                                  
                                              Padding="10"                                                                 
                                              BorderBrush="Transparent"                                                                                                    
                                              BorderThickness="2"                                                                                                     
                                              CardMargin="10"  
                                              SearchPanelHorizontalAlignment="Stretch"                                                                   
                                              CardTemplate = "{DynamicResource cardTemplate}"                                                                
                                              AllowPaging="{Binding DataContext.AllowPaging,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                                                
                                              PageSize="{Binding DataContext.ResultPages,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                              
                                              CurrentPageIndex="0"                              
                                              PagerNumericButtonCount="5">
                                    <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                    <dxg:CardView.CardHeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">                                    
                                                <Hyperlink x:Name="hyperlink" TargetName="_blank" Command="{Binding DataContext.EditConnectorReferenceCommand, UpdateSourceTrigger=PropertyChanged,                                   
                                                    Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"  CommandParameter="{Binding ElementName=ConnectorCardView1}">                                                   
                                                    <InlineUIContainer>                                                           
                                                        <TextBlock Text="{Binding Data.Ref}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline"/>                                                      
                                                    </InlineUIContainer>                                                  
                                                </Hyperlink>                                                  
                                            </TextBlock>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="dxg:DataViewBase.IsFocusedCell" Value="True">
                                                    <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </dxg:CardView.CardHeaderTemplate>
                                    <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                </dxg:CardView>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </DataTemplate>
                </dxdo:LayoutGroup.ItemTemplate>
            </dxdo:LayoutGroup>
        </ScrollViewer>
    </Grid>
</UserControl>
