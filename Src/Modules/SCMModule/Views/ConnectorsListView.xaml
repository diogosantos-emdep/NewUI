<UserControl x:Class="Emdep.Geos.Modules.SCM.Views.ConnectorsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SCM.Views"
             xmlns:SCMCommon="clr-namespace:Emdep.Geos.Data.Common.SCM;assembly=Emdep.Geos.Data.Common"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.SCM.ViewModels"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--[GEOS2-9552][rdixit][19.09.2025]-->
    <UserControl.Resources>
        <Converters:ImageUrlToByteArrayConverter x:Key="ImageUrlToByteArrayConverter" />
        <Converters:ConnectorBackgroundConverter x:Key="ConnectorBackgroundConverter"/>
        <Style x:Key="ColorImage" TargetType="Image">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RowData.Row.Color}" Value="Transparent" />
                        <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/wt_color_transparent.png" />
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RowData.Row.Color}" Value="Transparent" />
                        <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="WhiteAndBlue" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/bt_color_transparent.png" />
                </MultiDataTrigger>
                <DataTrigger Binding="{Binding RowData.Row.Color}" Value="MultiColor">
                    <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ic_color_multicolor.png" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="TableAndCardGrid" >
        <ScrollViewer VerticalScrollBarVisibility="Visible">

            <dxdo:LayoutGroup x:Name="documentContainer"
                    DestroyOnClosingChildren="False"
                    Orientation="Vertical"
                    ItemsSource="{Binding ConnectorSearchList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ShowCaption="True"
                    ShowCloseButton="False"
                    AllowContextMenu="True"
                    ShowTabHeaders="True">
                <dxdo:LayoutGroup.ItemCaptionTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" FontWeight="Bold" Margin="5,0"/>
                    </DataTemplate>
                </dxdo:LayoutGroup.ItemCaptionTemplate>
                <dxdo:LayoutGroup.ItemStyle>
                    <Style TargetType="dxdo:LayoutPanel">
                        <Setter Property="ShowCloseButton" Value="False"/>
                        <Setter Property="ShowCollapseButton" Value="False"/>
                    </Style>
                </dxdo:LayoutGroup.ItemStyle>
                <dxdo:LayoutGroup.ItemTemplate>
                    <DataTemplate DataType="{x:Type SCMCommon:SearchConnector}">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <dxg:GridControl x:Name="ConnectorGridControl1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0"  Loaded="ConnectorGridControl1_Loaded"                                                                 
                            ItemsSource="{Binding ConnectorList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  MaxHeight="700"                                                                   
                            SelectedItem="{Binding SelectedConnector,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"                                 
                            SelectionMode="Row" Width="Auto" ImplyNullLikeEmptyStringWhenFiltering="True" AllowLiveDataShaping="True">
                                <dxg:GridControl.Style>
                                    <Style TargetType="dxg:GridControl">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTableView,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Value="true">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Style>
                                <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                <dxg:GridColumn Header="{DynamicResource SCMReference}" FieldName="Ref" FilterPopupMode="CheckedList" AllowMoving="False" MinWidth="142"  MaxWidth="142" ReadOnly="True" FixedWidth="True"     
                                         CellStyle="{DynamicResource FocusedHyperlinkCellStyle}">
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">                                                 
                                         <Hyperlink x:Name="hyperlink" TargetName="_blank"                                                                                                                    
                                                    Command="{Binding DataContext.EditConnectorReferenceCommand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=UserControl}}"                 
                                                    CommandParameter="{Binding ElementName=ConnectorTableView}">                                                                                                                                                                                    
                                             <InlineUIContainer>                                                                                                
                                                 <TextBlock Text="{Binding Data.Ref}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline"/>           
                                             </InlineUIContainer>                                                                          
                                         </Hyperlink>                                   
                                     </TextBlock>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="dxg:DataViewBase.IsFocusedCell" Value="True">
                                                    <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                <dxg:GridColumn Header="{DynamicResource SCMWays}"  FixedWidth="True" AllowMoving="False" MinWidth="95" MaxWidth="95" Width="95" FieldName="NumWays" FilterPopupMode="CheckedList" ReadOnly="True"/>
                                <dxg:GridColumn Header="{DynamicResource SCMFamily}" FieldName="Family" Width="142" FilterPopupMode="CheckedList" ReadOnly="True"/>
                                <dxg:GridColumn Header="{DynamicResource SCMSubfamily}" FieldName="SubFamily" Width="142" FilterPopupMode="CheckedList" ReadOnly="True"/>
                                <dxg:GridColumn Header="{DynamicResource SCMTerminal}" FieldName="Terminal" Width="142" FilterPopupMode="CheckedList" ReadOnly="True">
                                    <!--[GEOS2-6073][rdixit][29.11.2024]-->
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Height="28" Width="28" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding RowData.Row.Terminal}" Value="Female" />
                                                                    <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/FemaleUser_White_32x32.png" />
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding RowData.Row.Terminal}" Value="Female" />
                                                                    <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="WhiteAndBlue" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/FemaleUser_Blue_32x32.png" />
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding RowData.Row.Terminal}" Value="Male" />
                                                                    <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="BlackAndBlue" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/MaleUser_White_32x32.png" />
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding RowData.Row.Terminal}" Value="Male" />
                                                                    <Condition Binding="{Binding Path=(dx:ThemeManager.TreeWalker).ThemeName, RelativeSource={RelativeSource Self}}" Value="WhiteAndBlue" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/MaleUser_Blue_32x32.png" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn Header="{DynamicResource SCMImage}" FieldName="ConnectorsImageInBytes" Width="82" MaxWidth="60" FilterPopupMode="CheckedList"  ReadOnly="True">
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <!--[GEOS2-6073][rdixit][29.11.2024]-->
                                            <Image VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxHeight="60" MinHeight="60">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RowData.Row.ConnectorsImageInBytes}" Value="{x:Null}">
                                                                <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ImageEditLogo.png" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Source" Value="{Binding RowData.Row.ConnectorsImageInBytes}" />
                                                    </Style>
                                                </Image.Style>
                                                <Image.ToolTip>
                                                    <Image Source="{Binding RowData.Row.ConnectorsImageInBytes}"                                                
                                                    VerticalAlignment="Center" Height="200" Width="300" Margin="2,0,0,0" />
                                                </Image.ToolTip>
                                                <dxmvvm:Interaction.Behaviors>
                                                    <dxmvvm:EventToCommand EventName="MouseDown" CommandParameter="{Binding ElementName=ConnectorGridControl1}"                                   
                                                                    Command="{Binding DataContext.ImageClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"                                   
                                                                    PassEventArgsToCommand="True"/>
                                                </dxmvvm:Interaction.Behaviors>
                                            </Image>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn Header="{DynamicResource SCMColor}" FieldName="Color" Width="142" FilterPopupMode="CheckedList" ReadOnly="True">
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Grid  VerticalAlignment="Center" Margin="3,0,2,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Width="20" Grid.Column="0"  Height="20" Fill="{Binding RowData.Row.Color, Converter={StaticResource ConnectorBackgroundConverter}}">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="{Binding RowData.Row.ColorVisibility}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RowData.Row.Color}" Value="Transparent">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding RowData.Row.Color}" Value="MultiColor">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>

                                                    <Image Grid.Column="0" Visibility="{Binding ImageVisibility}" Style="{StaticResource ColorImage}" VerticalAlignment="Center" Height="20" Width="20"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding RowData.Row.Color}" Margin="3,0,0,0" HorizontalAlignment="Left">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter Property="Foreground" Value="Gray" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </DockPanel>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn Header="{DynamicResource SCMLocation}" FixedWidth="True"  MinWidth="142" AllowMoving="False"  FieldName="Location" MaxWidth="142" Width="142" FilterPopupMode="CheckedList" ReadOnly="True"/>
                                <dxg:GridColumn Header="{DynamicResource SCMDescription}" FieldName="Description" Width="*" MinWidth="142"  FilterPopupMode="CheckedList" ReadOnly="True"/>
                                <dxg:GridControl.TotalSummary>
                                    <dxg:GridSummaryItem x:Name="summary" FieldName="Ref" SummaryType="Count" DisplayFormat="Total Count: {0}" Visible="True" Alignment="Left"/>
                                </dxg:GridControl.TotalSummary>
                                <dxg:GridControl.View>
                                    <dxg:TableView x:Name="ConnectorTableView"                                                                                
                                               NavigationStyle="Cell"                                       
                                               RowDetailsVisibilityMode="Visible"                                      
                                               ShowHorizontalLines="True"                                      
                                               ShowSearchPanelMode="Always"                                                                                               
                                               ShowColumnHeaders="True"                                           
                                               AutoWidth="False"                                       
                                               AllowFixedColumnMenu="False"                                                                                               
                                               VerticalScrollbarVisibility="Visible"   
                                               ShowTotalSummary="True"    
                                               ShowFixedTotalSummary="True"
                                               ShowSearchPanelCloseButton="True"                                                                                                 
                                               SearchPanelHorizontalAlignment="Stretch"                                                                                                 
                                               ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"                                      
                                               AllowGrouping="True"                                                                                                   
                                               ShowGroupPanel="False"                                           
                                               ShowIndicator="False"   
                                               AllowPaging="{Binding DataContext.AllowPaging,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               PageSize="{Binding DataContext.ResultPages,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                                                            
                                               CurrentPageIndex="0"    
                                               PagerNumericButtonCount="5">

                                    </dxg:TableView>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                            <dxg:GridControl Name="ConnectorGridControl2" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0"      
                                             ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" Loaded="ConnectorGridControl1_Loaded"   
                                             ItemsSource="{Binding ConnectorList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"    
                                             SelectedItem="{Binding SelectedConnector,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                <dxg:GridControl.Style>
                                    <Style TargetType="dxg:GridControl">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTableView,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Value="false">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Style>
                         
                           
                                <dxg:GridColumn FieldName="Ref" Visible="False" />
                                <dxg:GridControl.View>
                                    <dxg:CardView Name="ConnectorCardView1"                                                      
                                                  ShowSearchPanelMode="Always"                                                      
                                                  SearchColumns="Ref"                                                                                     
                                                  ShowColumnHeaders="False"                        
                                                  ShowDragDropHint="False"                                                                                                                               
                                                  ShowTargetInfoInDragDropHint="False"                                                                                       
                                                  PrintAllGroups="True"                                                                                       
                                                  PrintAutoCardWidth="True"                                                                                                                                        
                                                  ShowGroupPanel="False"                                                      
                                                  ShowCardExpandButton="False"                                                                                                                         
                                                  CardLayout="Rows"                                                                                                                                
                                                  CardHeaderBinding="{Binding Data.Ref}"                                                                                         
                                                  ShowTotalSummary="False"                                                                                       
                                                  NavigationStyle="Row"                                                                                        
                                                  VerticalAlignment="Stretch"                         
                                                  HorizontalAlignment="Stretch"                                                                                          
                                                  ShowFixedTotalSummary="False"                                                                                         
                                                  SearchPanelPosition="OverGroupPanel"                                                                                                                       
                                                  CardAlignment="Near"                                                                                         
                                                  Padding="10"                                                                                        
                                                  BorderBrush="Transparent"                                                                                                                            
                                                  BorderThickness="2"                                                                                                                             
                                                  CardMargin="10"                          
                                                  SearchPanelHorizontalAlignment="Stretch"                                                                                                                                                                                                                               
                                                  AllowPaging="{Binding DataContext.AllowPaging,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                                                                        
                                                  PageSize="{Binding DataContext.ResultPages,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                                      
                                                  CurrentPageIndex="0"                                                      
                                                  PagerNumericButtonCount="5">
                                        <dxg:CardView.Resources>
                                            <Style TargetType="dxg:GridCard">
                                                <Setter Property="Width" Value="{Binding DataContext.CardImageSize,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                <Setter Property="Height" Value="{Binding DataContext.CardImageSize,RelativeSource={RelativeSource AncestorType=UserControl},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                            </Style>
                                        </dxg:CardView.Resources>

                                        <dxg:CardView.CardTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Image VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="2,2,2,2" Stretch="Fill" >
                                                        <!--[GEOS2-6881][rdixit][23.01.2025]-->
                                                        <!--[GEOS2-6631][rdixit][14.04.2025]-->
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Row.ConnectorsImageInBytes}" Value="{x:Null}">
                                                                        <Setter Property="Source" Value="/Emdep.Geos.Modules.SCM;component/Assets/Images/ImageEditLogo.png" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                                <Setter Property="Source" Value="{Binding Row.ConnectorsImageInBytes}" />
                                                            </Style>
                                                        </Image.Style>
                                                        <Image.ToolTip>
                                                            <Image Source="{Binding Row.ConnectorsImageInBytes}"  VerticalAlignment="Center" Height="200" Width="300" Margin="2,0,0,0" />
                                                        </Image.ToolTip>
                                                        <dxmvvm:Interaction.Behaviors>
                                                            <dxmvvm:EventToCommand EventName="MouseDown" CommandParameter="{Binding ElementName=ConnectorGridControl2}"                       
                                                                                   Command="{Binding DataContext.ImageClickCommand,RelativeSource={RelativeSource AncestorType=UserControl}}" PassEventArgsToCommand="True"/>
                                                        </dxmvvm:Interaction.Behaviors>
                                                    </Image>
                                                </StackPanel>
                                            </DataTemplate>
                                        </dxg:CardView.CardTemplate>
                                        <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                        <dxg:CardView.CardHeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">                                                              
                                                    <Hyperlink x:Name="hyperlink" TargetName="_blank" Command="{Binding DataContext.EditConnectorReferenceCommand, UpdateSourceTrigger=PropertyChanged,                                                                 
                                                        Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"  CommandParameter="{Binding ElementName=ConnectorCardView1}">                                                                                 
                                                        <InlineUIContainer>                                                                                            
                                                            <TextBlock Text="{Binding Data.Ref}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline"/>                                                                                   
                                                        </InlineUIContainer>                                                                            
                                                    </Hyperlink>                                                                       
                                                </TextBlock>
                                                <DataTemplate.Triggers>
                                                    <Trigger Property="dxg:DataViewBase.IsFocusedCell" Value="True">
                                                        <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="hyperlink" Property="Foreground" Value="OrangeRed" />
                                                    </Trigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </dxg:CardView.CardHeaderTemplate>
                                        <!--[pramod.misal][15-03-2024][GEOS2-5377] START-->
                                    </dxg:CardView>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </Grid>
                    </DataTemplate>
                </dxdo:LayoutGroup.ItemTemplate>
            </dxdo:LayoutGroup>
        </ScrollViewer>
    </Grid>
</UserControl>
