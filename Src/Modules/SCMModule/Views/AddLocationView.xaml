<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SCM.Views.AddLocationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.SCM.Views"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:Interactive="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Converter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"                         
             xmlns:Validation="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"  
             xmlns:SCMApplication="clr-namespace:Emdep.Geos.Modules.SCM.Common_Classes"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d" Title="{Binding WindowHeader,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
             Style="{DynamicResource WinUIDialogWindowStyle}">

    <!--[rushikesh.gaikwad][GEOS2-5752][05.08.2024]-->

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding LocationViewEscapeButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid Margin="0,-50,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <!--<RowDefinition Height="40"/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!--<Label Content="{Binding WindowHeader}" HorizontalAlignment="Left" Style="{StaticResource LabelTitleStyle}" 
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />-->

        <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource AddLocationsPlant}" Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>


        <dxe:ComboBoxEdit Name="Cbeplant" Style="{DynamicResource ComboBoxEditStyle}" Grid.Row="1" Grid.Column="1" Width="200" Height="30"
                                      VerticalAlignment="Center" HorizontalAlignment="Left" IsTextEditable="False" 
                                    ItemsSource ="{Binding PlantList,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
                                    SelectedItem="{Binding SelectedPlant,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                    DisplayMember="Alias" ShowError="False" ShowErrorToolTip="False" IsEnabled="{Binding IsPlantSelectionEnabled}">
           
        </dxe:ComboBoxEdit>
        <Label Grid.Row="2" Grid.Column="0" Content="{DynamicResource AddLocations}" Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>

        <dxe:TextEdit Text="{Binding Location, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,0" Grid.Row="2" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" 
                      AllowNullInput="True" InvalidValueBehavior="AllowLeaveEditor" 
                       IsReadOnly="{Binding IsReadOnlyField,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" >

        </dxe:TextEdit>


        <Label Grid.Row="3" Grid.Column="0" Content="{DynamicResource AddLocationsWithCables}" Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>

        <dxe:TextEdit Text="{Binding Withcables, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,0" Grid.Row="3" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" 
                      AllowNullInput="True" InvalidValueBehavior="AllowLeaveEditor"
                       IsReadOnly="{Binding IsReadOnlyField,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">

        </dxe:TextEdit>

        <Label Grid.Row="4" Grid.Column="0" Content="{DynamicResource AddLocationsWithoutCables}" Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>


        <dxe:TextEdit Text="{Binding Withoutcables, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,0" Grid.Row="4" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" 
                      AllowNullInput="True" InvalidValueBehavior="AllowLeaveEditor"
                       IsReadOnly="{Binding IsReadOnlyField,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">

        </dxe:TextEdit>

        <Label Grid.Row="5" Grid.Column="0" Content="{DynamicResource OnlyDamaged}" Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>

        <!--<dxe:CheckEdit IsChecked="{Binding Onlydamaged, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Stretch" 
                                                                       IsReadOnly="{Binding DataContext.IsBasicConnectorEditReadOnly, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"                                                                        
                                                                       IsEnabled="{Binding DataContext.SelectedConnectorSearch.IsSealingEnabled,RelativeSource={RelativeSource AncestorType=UserControl}}"                                                               
                                                                       IsChecked="{Binding DataContext.SelectedConnectorSearch.IsUnSealed,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,
                                                            RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="Checked"                                    
                 Command="{Binding DataContext.UnSealedCheckedCommand,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:CheckEdit>-->

        <dxe:CheckEdit 
    IsChecked="{Binding Onlydamaged, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
    Grid.Row="5" 
    Grid.Column="1" 
    VerticalAlignment="Center"  
    HorizontalAlignment="Stretch" 
    IsReadOnly="{Binding DataContext.IsBasicConnectorEditReadOnly, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"                                                                        
    IsEnabled="{Binding DataContext.SelectedConnectorSearch.IsSealingEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"                                                               
>
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand 
            EventName="Checked"                                    
            Command="{Binding DataContext.UnSealedCheckedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
        </dxe:CheckEdit>


        <StackPanel Grid.Row="6"
                    HorizontalAlignment="Left" 
                    Orientation="Horizontal"
                    Margin="114,10,0,0"
                    Width="227" Grid.ColumnSpan="2">

            <Button Content="{DynamicResource AcceptButton}"
                    Command="{Binding AddLocationAccept}"
                    Height="30"
                    Width="100"
                    Margin="0,0,10,0"
                    Style="{DynamicResource Button16Style}"
                    VerticalAlignment="Bottom"
                    IsEnabled="{Binding IsAcceptButtonEnabled}" />
         


            <Button Content="{DynamicResource AddLocationCancel}"
                    Command="{Binding DataContext.CancelButtonCommand, RelativeSource={RelativeSource AncestorType=dx:DXWindow, Mode=FindAncestor}}"
                    Height="30"
                    Width="100"
                    Margin="10,0,0,0"
                    Style="{DynamicResource Button16Style}"
                    VerticalAlignment="Bottom" />
        </StackPanel>

    </Grid>
    <!--[shweta.thube][GEOS2-6630][04.04.2025]-->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="KeyDown">
            <behaviors:InvokeDelegateCommandAction Command="{Binding CommandTextInput}" CommandParameter="{Binding Path=InvokeParameter, RelativeSource={RelativeSource Self}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
</dxwui:WinUIDialogWindow>
