                                    <Style TargetType="{x:Type dxe:TextEdit}">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <MultiBinding Converter="{StaticResource CellBackroundColorConvertorSAMForWorkPlanningDates}">
                                                    <Binding Path="View.DataContext.GeosAppSettingList"/>
                                                    <Binding Path="RowData"/>
                                                    <Binding Path="Column"/>
                                                    <Binding Path="Data"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Data.IsItLoggedTimeRow}" Value="1">
