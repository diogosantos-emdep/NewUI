<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.SAM.Views.MyPreferencesView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                        xmlns:local="clr-namespace:Emdep.Geos.Modules.SAM.Views"
                        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
                        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                        mc:Ignorable="d" 
                        d:DesignHeight="500" d:DesignWidth="900"
                        Title="{DynamicResource SAMMyPreferences}"
                         ShowTitle="True"
                        TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding MyPreferencesViewCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="245"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
			<Label Grid.Row="0" Content="{DynamicResource MyPreferencesView_Dashboard}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"></Label>
            <GroupBox Grid.Column="0" Grid.Row="1">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="22"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Height="0" Content="{DynamicResource SAMMyPreferences}" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="30"></Label>
                    <Label Grid.Column="0" Grid.Row="3" Content="{DynamicResource MyPreferencesAutoRefresh}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"></Label>
                    <Border  Width="70" Height="30" Grid.Column="2" Grid.Row="3">
                        <dxe:ToggleSwitch VerticalAlignment="Center"  Style="{DynamicResource ToggleSwitchlForegroundStyle}"
                                     IsThreeState="False"
                                    IsChecked="{Binding DataContext.IsAutoRefresh,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                    <!--CheckedStateContent="On" UncheckedStateContent="Off" ToggleSwitchWidth="50" ToggleSwitchHeight="30" ContentPlacement="Inside"-->
                    <!--ToggleSwitch-->
                    <!--<Border  Width="70" Height="30" Grid.Column="2" Grid.Row="0">
            <dxe:ToggleSwitch IsChecked="False" IsThreeState="False" Style="{DynamicResource ToggleSwitchlForegroundStyle}" VerticalContentAlignment="Center"></dxe:ToggleSwitch>
        </Border>-->
                    <Label Grid.Column="0" Grid.Row="4" Content="{DynamicResource MyPreferencesAutoRefreshExplain}" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="14"></Label>
                    <Label Grid.Column="0" Grid.Row="6" Content="{DynamicResource MyPreferencesRefreshInterval}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"
               Visibility="{Binding DataContext.RefreshIntervalVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></Label>
                    <!--Spin Edit-->
                    <dxe:SpinEdit Grid.Column="2" Grid.Row="7" VerticalAlignment="Bottom" 
                                      Width="70" IsFloatValue="False" Height="30" IsTextEditable="False"
                                      Increment="5" MinValue="5" MaxValue="240" 
                                      Value="{Binding DataContext.AutoRefreshInterval,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Visibility="{Binding DataContext.RefreshIntervalVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></dxe:SpinEdit>
                    <Label Grid.Column="0" Grid.Row="7" Content="{DynamicResource MyPreferencesRefreshIntervalExplain}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14"
               Visibility="{Binding DataContext.RefreshIntervalVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></Label>
                    <Label Grid.Column="4" Grid.Row="7" Content="{DynamicResource MyPreferencesMin}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14"
               Visibility="{Binding DataContext.RefreshIntervalVisibility,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></Label>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{DynamicResource SAM_LabelPrinter}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"></Label>
            <GroupBox Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{DynamicResource SAM_PrinterName}" 
                                   HorizontalAlignment="Left"   VerticalAlignment="Bottom" 
                                   Style="{StaticResource TextBlock14Style}"/>
                    <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1" 
                                          HorizontalAlignment="Center" 
                                          ShowError="False" ShowErrorToolTip="False" 
                                          Style="{DynamicResource ComboBoxEditStyle}"
                                          Width="200" Height="30" VerticalAlignment="Top" 
                                          ItemsSource="{Binding PrinterList}"
                                          IsTextEditable="False" 
                                          SelectedItem="{Binding DefaultLabelPrinter,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" 
                                   Text="{DynamicResource SAM_PrinterModel}"
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                   Style="{StaticResource TextBlock14Style}"/>
                    <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="1"
                                          HorizontalAlignment="Center"  
                                          ShowError="False" ShowErrorToolTip="False" 
                                          Style="{DynamicResource ComboBoxEditStyle}"
                                          Width="200" Height="30" 
                                          VerticalAlignment="Top" 
                                          ItemsSource="{Binding ModelList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsTextEditable="False"  
                                          DisplayMember="Value" ValueMember="IdLookupValue" 
                                          SelectedItem="{Binding SelectedModel,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }"></dxe:ComboBoxEdit>
                    <TextBlock Grid.Row="7" Grid.Column="1" 
                                   Text="{DynamicResource SAM_PrinterPort}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                   Style="{StaticResource TextBlock14Style}"/>
                    <dxe:ComboBoxEdit Grid.Row="8" Grid.Column="1" 
                                          HorizontalAlignment="Center"  
                                          ShowError="False" ShowErrorToolTip="False" 
                                          Style="{DynamicResource ComboBoxEditStyle}"
                                          Width="200" Height="30" 
                                          VerticalAlignment="Top" 
                                          ItemsSource="{Binding ParallelPortList}"  
                                          SelectedItem="{Binding SelectedParallelPort,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }"
                                          IsTextEditable="False"/>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="3" ShowGridLines="False" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="3" Grid.Column="0"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Right"
                    Content="{DynamicResource MyPreferencesAcceptButton}"
                    Command="{Binding DataContext.MyPreferencesViewAcceptButtonCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                    Height="30"
                    Width="100" />
            <Button Grid.Row="3" Grid.Column="2"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Left"
                    Content="{DynamicResource AddCatalogueCancelButton}"
                    Command="{Binding MyPreferencesViewCancelButtonCommand}"
                    Height="30"
                    Width="100" />
        </Grid>
    </Grid>
    
</dxwui:WinUIDialogWindow>
