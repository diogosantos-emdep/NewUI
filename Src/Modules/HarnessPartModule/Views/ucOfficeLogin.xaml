<UserControl x:Class="Emdep.Geos.Modules.HarnessPart.Views.ucOfficeLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
                xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
              xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" FontFamily="calibri" Foreground="White"
             d:DesignHeight="350" d:DesignWidth="350" RenderTransformOrigin="0.5,0.5" Background="#333333" >

    <Grid  Height="350" Width="350" VerticalAlignment="Center"  HorizontalAlignment="Center" >

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center" >
            <Ellipse  
                 Stroke="White" StrokeThickness="1"
                 Height="100" Width="100"  ToolTip="An author." HorizontalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Emdep.Geos.Modules.HarnessPartcomponent/Image/LoginUser.png" Stretch="Fill" />
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>
        <Label Content="Login Name" FontFamily="calibri" Grid.Column="0"  Grid.Row="1"  />
        <dxe:TextEdit  Grid.Column="1"  Grid.Row="1"  SelectionStart="0"   Name="txtlogin"  NullText="Enter your login..." HorizontalAlignment="Right"  DisplayFormatString="       "   Width="246" Margin="0,0,2,0"  ></dxe:TextEdit>


        <Label Content="Password" FontFamily="calibri"  Grid.Column="0" Grid.Row="3"    />
        <dxe:PasswordBoxEdit NullText="Enter your Password..."   Width="246" Grid.Column="1"  Grid.Row="3"    />

        <dxe:CheckEdit Content="Remember me in this computer "  FontFamily="calibri" Grid.Column="1"  Grid.Row="5" ></dxe:CheckEdit>

        <Button  Content="Forgot your Password" Name="btnforgotpass" Cursor="Hand" FontFamily="calibri"  Grid.Column="1"  Grid.Row="7"  FontSize="16" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="#2AB7FF" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="OrangeRed" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>


        <Button Content="Accept"   Height="30" FontFamily="calibri" Width="76"  Grid.Column="1"  Grid.Row="9" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="btnAccept"  />
        <Button Content="Close"   Height="30"   FontFamily="calibri" Width="76" Grid.Column="1"  Grid.Row="9"  HorizontalAlignment="Right" VerticalAlignment="Bottom" />


    </Grid>
</UserControl>
