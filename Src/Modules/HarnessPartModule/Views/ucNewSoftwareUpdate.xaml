<UserControl
    x:Class="Emdep.Geos.Modules.HarnessPart.Views.ucNewSoftwareUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
    Height="286" Width="auto" x:Name="objucNewSoftwareUpdate" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
  KeyUp="objucNewSoftwareUpdate_KeyUp"  FontFamily="Calibri" FontSize="14">
    <UserControl.Background>
        <SolidColorBrush Color="#333333" />
        <!--<SolidColorBrush Color="#4d4d4d " Opacity="0.95"/>-->

    </UserControl.Background>
    <Grid Margin="7,0,0,0"   Height="266" Width="493">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="110"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67"></ColumnDefinition>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="8" HorizontalAlignment="Stretch" Height="100"   VerticalAlignment="Top" Width="61" Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/download81.png" Margin="0,10,0,0"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Update available" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" Width="150" Foreground="White" ></Label>
        <Label Grid.Row="1" Grid.Column="1" Content="An updated version of the application is available for download" FontSize="13"  HorizontalAlignment="Stretch" Margin="10,-2,0,0" Width="396" Grid.ColumnSpan="2" Foreground="White" ></Label>

        <!--<Label Grid.Column="1" Grid.Row="3" Content="Application:" HorizontalAlignment="Right" Margin="0,0,3,0" Width="78"></Label>
        <Label Grid.Column="2" Grid.Row="3" Content="HarnessPart" HorizontalAlignment="Left" Margin="3,0,0,0" Width="79"></Label>-->

        <Label Grid.Column="1" Grid.Row="4" Content="Installed Version:" HorizontalAlignment="Right" Margin="0,0,3,0" Width="107" Foreground="White" ></Label>
        <Label Grid.Column="2" Grid.Row="4" Content="2015.01.23" HorizontalAlignment="Left" Margin="3,0,0,0" Width="74" Foreground="White"></Label>

        <Label Grid.Column="1" Grid.Row="5" Content="Update Version:" HorizontalAlignment="Right" Margin="0,0,3,0" Width="101" Foreground="White"></Label>
        <Label Grid.Column="2" Grid.Row="5" Content="2015.05.27" HorizontalAlignment="Left" Margin="3,0,0,0" Width="74" Foreground="White"></Label>

        <Button Content="Download now" x:Name="btnDownloadnow" Click= "Downloadnow_Click"  Height="30" Width="130" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1"  Grid.Row="6" Margin="0,0,0,20" />
        <Button Content="Download later" x:Name="btnDownloadlater"   Height="30"  Width="130" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Grid.Column="2"  Grid.Row="6" Margin="0,0,0,20"  />

        <StackPanel Name="downloadpanel"  Grid.ColumnSpan="3" Grid.Row="6" Margin="-1,8,0,-37" Visibility="Hidden" >
            <dxe:ProgressBarEdit Name="progressBarEdit1"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Width="465" Height="26"
                             Minimum="0" Maximum="100" Value="75" ContentDisplayMode="Value" Foreground="#FFFCF5F5" DisplayFormatString="{}{0}%" Margin="14,0" />
            <DockPanel Width="344" HorizontalAlignment="Right" Margin="0,6,57,0" Height="70" >
                <Button x:Name="BtnDone"   Content="Done"  Height="30" Width="130" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" />
                <Button   Click="BtnCancel_Click" Content="Cancel" Height="30"  Width="131" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,20"   />
            </DockPanel>
        </StackPanel>

        <!--<DockPanel Grid.Row="7" Grid.ColumnSpan="2">
            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="15" Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/direction_Right.png" />-->
        <Border x:Name="stackBorder"  BorderThickness="0,1,0,0" BorderBrush="#747373"  Grid.Row="7" Grid.ColumnSpan="3" >
            <StackPanel Margin="0,6,0,10">
                <Button  Content="Release Notes" x:Name="btnRelease"   HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30"  Width="110" BorderThickness="0"  ></Button>
            </StackPanel>
        </Border>
        <!--</DockPanel>-->
    </Grid>
</UserControl>
