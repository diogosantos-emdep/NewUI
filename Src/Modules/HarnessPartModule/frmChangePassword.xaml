<dxwui:WinUIDialogWindow 
    x:Class="Emdep.Geos.Modules.HarnessPart.frmChangePassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
    Height="210" Width="310" x:Name="objEditProfile" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    KeyUp="objEditProfile_KeyUp" WindowStyle="None" 
    FontFamily="Calibri" FontSize="14">
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
          <!--<Label Grid.Row="0" Content="Change Password" Foreground="Black" Background="WhiteSmoke"  HorizontalContentAlignment="Center"  HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="13" FontWeight="Bold"></Label>-->
        <!--<StackPanel  Grid.Row="0" Orientation="Vertical">   </StackPanel>-->

        <Label Grid.Row="0" FontSize="28" FontWeight="Bold" Content="Change Password" HorizontalAlignment="Left" VerticalAlignment="Center" ></Label>
        <dxlc:LayoutControl Orientation="Vertical" VerticalAlignment="Top" Grid.Row="1" >
                <dxlc:LayoutItem Label="Old Password" HorizontalAlignment="Left" ElementSpace="10" >
                    <dxe:PasswordBoxEdit   Width="162"></dxe:PasswordBoxEdit>
                </dxlc:LayoutItem>

            <dxlc:LayoutItem Label="New Password" HorizontalAlignment="Left" ElementSpace="10" >
                    <dxe:PasswordBoxEdit   Width="162"></dxe:PasswordBoxEdit>
                </dxlc:LayoutItem>

            <dxlc:LayoutItem Label="Confirm Password" HorizontalAlignment="Left" ElementSpace="10" >
                    <dxe:PasswordBoxEdit   Width="162"></dxe:PasswordBoxEdit>
                </dxlc:LayoutItem>

            </dxlc:LayoutControl>
     

        <StackPanel  Grid.Row="2"  HorizontalAlignment="Center" Orientation="Horizontal" >
            <Button Content="Save" Height="30" Width="100" Margin="0,0,10,0"  Click="Button_Click"  />
            <Button Content="Cancel"  Height="30"  Width="100" Margin="10,0,0,0"  Click="Button_Click_1" />
            <!--<Button Content="Cancle" Click="Button_Click_2"></Button>-->
        </StackPanel>
    </Grid>
</dxwui:WinUIDialogWindow>
