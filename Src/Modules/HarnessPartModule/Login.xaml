<Window xmlns:Views="clr-namespace:Emdep.Geos.Modules.HarnessPart.Views"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"     
    
	xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
	xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"	
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"	
	xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
	x:Class="Emdep.Geos.Modules.HarnessPart.Login"
	WindowStyle="None"
	Height="822" Width="982" WindowStartupLocation="CenterScreen" WindowState="Maximized" 
	Margin="0,0,0,0" BorderThickness="0,0,0,0"  Background="#1B1B1B">

    <Window.Resources>
        <DataTemplate x:Key="ItemHeaderTemplate">
            <Grid>
                <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/OfficeLogin.png" Stretch="None" Width="95" HorizontalAlignment="Left"  RenderTransformOrigin="3,0" />
                <TextBlock Text="OFFICE " HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="calibri "  FontSize="20" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ItemHeaderTemplateproduction">
            <Grid>
                <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/ProductionLogin.png" Stretch="None" Width="150" HorizontalAlignment="Left"  RenderTransformOrigin="3,0" />
                <TextBlock Text="PRODUCTION" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="calibri "  FontSize="20" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ItemHeaderTemplatepageheader">
            <Grid>
                <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/Emdep_logo.png"  Height="50" />
            </Grid>
        </DataTemplate>
    </Window.Resources>


    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        <Grid.Background>
            <ImageBrush ImageSource="Image/world3.png" Stretch="Uniform"    />
        </Grid.Background>
        <Grid  VerticalAlignment="Top"  HorizontalAlignment="Center">
            <Grid.RowDefinitions>

                <RowDefinition Height="40*"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>


            <Canvas Grid.Row="2"  VerticalAlignment="Top" HorizontalAlignment="Center" Background="Red" >
                <Rectangle
					StrokeThickness="1"
					Height="290" Width="300" Canvas.Left="-142"   >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/Emdep.Geos.Modules.HarnessPartcomponent/Image/Geos_logo_white.png" Stretch="Uniform"   />
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0"  >
            <!--<Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter Property="Opacity" Value="0"></Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"></Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>          
            <StackPanel  Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right"  >               
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <Grid   VerticalAlignment="Top"   Height="20" Width="20" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" >
          
                        <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/minimize.png"/>
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="Transparent"/>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>

                    <Grid   VerticalAlignment="Top"   Height="20" Width="20" Grid.Row="0"  Grid.Column="2" HorizontalAlignment="Center">
                        <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/restore.png"/>
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="Transparent"/>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>


                    <Grid   VerticalAlignment="Top"   Height="20" Width="20" Grid.Row="0"  Grid.Column="3" HorizontalAlignment="Center" >
                        <Image Source="/Emdep.Geos.Modules.HarnessPartcomponent/Image/close.png"  MouseLeftButtonUp="Image_MouseLeftButtonUp_1" />
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <!--<Setter Property="Background" Value="Transparent" />-->
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="Transparent"/>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                        </Trigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>
                </Grid>
            </StackPanel>
            <dxwui:PageView x:Name="PageView1"   AnimationType="SlideHorizontal" Grid.Row="1" Grid.RowSpan="1"   HeaderTemplate="{Binding Source={StaticResource ItemHeaderTemplatepageheader}}"  
				BorderThickness="0,0,0,0"	FontSize="20" FontFamily="Calibri" FontWeight="ExtraBold"  Padding="0,0,0,0" Margin="0,0,0,0"  ShowBackButton="True" >

                <dxwui:PageViewItem x:Name="PageViewItem1"   Padding="0,0,0,0" Margin="0,0,0,0" HeaderTemplate="{Binding Source={StaticResource ItemHeaderTemplate}}"   >
                    <Views:ucOfficeLogin  x:Name="usr1" Height="350" />
                </dxwui:PageViewItem>
                <dxwui:PageViewItem  x:Name="PageViewItem2" HeaderTemplate="{Binding Source={StaticResource ItemHeaderTemplateproduction}}" Margin="0,0,0,0" UseLayoutRounding="True" >
                    <Views:ucProductionLogin Height="350"  x:Name="Productionusr" />
                </dxwui:PageViewItem>
                <dxwui:PageViewItem  x:Name="test" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0,0,0,0" Margin="0,0,0,0" >
                    <Views:ucForgottenPassword   Height="350" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="usr3"/>
                </dxwui:PageViewItem>
                <dxwui:PageViewItem  x:Name="test1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0,0,0,0" Margin="0,0,0,0">
                    <Views:ucNewPassword Height="350" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="usr4"/>

                </dxwui:PageViewItem>
            </dxwui:PageView>
        </Grid>
        <Grid  VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="1" Background="Aqua" VerticalAlignment="Bottom" HorizontalAlignment="Center" x:Name="CanvasExit"  Visibility="Hidden"     >
                <Image   Canvas.Top="-120">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="/Emdep.Geos.Modules.HarnessPartcomponent/Image/shutdown.png"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/Emdep.Geos.Modules.HarnessPartcomponent/Image/shutdownBlue.png"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Canvas>
        </Grid>
        <Label    Content="version 0.85.4 Copyright  2003-2015 EMDEP Development team." VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>


</Window>
