<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.StockAvailabilityView" Name="StockAvailabilityViewOne"             
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"             
                         xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"            
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"             
                         xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.Warehouse.ViewModels"            
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"            
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"          
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"            
                         xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"            
                         mc:Ignorable="d">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding CancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>
    <dxwui:WinUIDialogWindow.TitleStyle>
        <Style TargetType="ContentControl">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid ShowGridLines="False" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock Margin="0,10,0,0" Text="{DynamicResource StockAvailability}" Style="{DynamicResource CustomTitleStyle}"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </dxwui:WinUIDialogWindow.TitleStyle>
    <dxwui:WinUIDialogWindow.Resources>
        <Style TargetType="dxg:GridCardHeaderControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Background="#FF515151" Height="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Converters:ByteToYesNoConverter x:Key="ByteToYesNoConverter"/>

        <DataTemplate x:Key="readonlyCardTemplate">
            <Grid Height="110">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3.5*"/>
                    <RowDefinition Height="6.5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border Grid.ColumnSpan="3" Background="Gray" BorderBrush="LightGray" BorderThickness="0,0,0,1" >
                    <Grid>
                        <TextBlock Text="{Binding Path=Row.Name}" Padding="5,5,5,0" HorizontalAlignment="Left" Foreground="White" FontSize="16" FontWeight="Bold" />
                        <TextBlock Padding="5,0,5,0" Name="IsRegionalTextBlock" Tag="{Binding Path= Row.IsRegional, Converter={StaticResource ByteToYesNoConverter}}"
                                Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="Tag" Value="Yes">
                                            <Setter Property="Text" Value="(Regional)" />
                                        </Trigger>

                                        <Trigger Property="Tag" Value="No">
                                            <Setter Property="Text" Value="" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Background="Gray" BorderBrush="LightGray" BorderThickness="0,0,1,0" >
                    <StackPanel Orientation="Horizontal">

                        <Grid x:Name="ForeCast" Margin="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{DynamicResource StockAvailabilityViewForecast}" Padding="5,5,5,0"
                               HorizontalAlignment="Left" Foreground="White" FontWeight="Bold"/>

                            <!--up-->
                            <Image Grid.Row="2" Grid.Column="0" Style="{DynamicResource ArticleDetailsForeCastUpImage}" Width="20" Height="20" VerticalAlignment="Center" />
                            <TextBlock Padding="5,0,5,0" Grid.Row="2" Grid.Column="1" Text="{Binding Row.POForecastStock}" 
                            TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" 
                            HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>

                            <!--Down-->
                            <Image Grid.Row="3" Grid.Column="0" Style="{DynamicResource ArticleDetailsForeCastDownImage}" Width="20" Height="20"  VerticalAlignment="Center" />
                            <TextBlock Padding="5,0,5,0" Name="txtWO" Grid.Row="3" Grid.Column="1" Text="{Binding Row.OTForecastStock}" 
                            TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" 
                            HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" Background="Gray" BorderBrush="LightGray" BorderThickness="0,0,1,0" >
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{DynamicResource StockAvailabilityViewPickingMonth}"  Padding="5,5,5,0"
                               HorizontalAlignment="Left" Foreground="White" FontWeight="Bold"/>

                            <TextBlock Grid.Row="2" Text="{Binding Row.MonthStock}" Padding="5,0,5,0"
                               HorizontalAlignment="Right" Foreground="White" FontWeight="Bold" FontSize="20"/>

                        </Grid>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Value="Red">
                                            <Condition.Binding>
                                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                    <Binding Path="Row.ArticleCurrentStock" />
                                                    <Binding Path="Row.ArticleMinimumStock" />
                                                </MultiBinding>
                                            </Condition.Binding>
                                        </Condition>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="Red" />
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Value="Green">
                                            <Condition.Binding>
                                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                    <Binding Path="Row.ArticleCurrentStock" />
                                                    <Binding Path="Row.ArticleMinimumStock" />
                                                </MultiBinding>
                                            </Condition.Binding>
                                        </Condition>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="Green" />
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Value="Yellow">
                                            <Condition.Binding>
                                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                    <Binding Path="Row.ArticleCurrentStock" />
                                                    <Binding Path="Row.ArticleMinimumStock" />
                                                </MultiBinding>
                                            </Condition.Binding>
                                        </Condition>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="Yellow" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{DynamicResource StockAvailabilityViewStock}" Padding="5,5,5,0"
                               HorizontalAlignment="Left" FontWeight="Bold" Style="{DynamicResource ArticleCurrentStockColorsStyle}">
                    </TextBlock>
                    <TextBlock Grid.Row="2" Padding="5,0,5,0" Text="{Binding Row.ArticleCurrentStock}" 
                               HorizontalAlignment="Right" FontWeight="Bold" FontSize="20"
                               Style="{DynamicResource ArticleCurrentStockColorsStyle}">
                    </TextBlock>
                </Grid>

            </Grid>
        </DataTemplate>

        <Style TargetType="TextBlock" x:Key="ArticleCurrentStockColorsStyle">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Value="Red">
                            <Condition.Binding>
                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                    <Binding Path="Row.ArticleCurrentStock" />
                                    <Binding Path="Row.ArticleMinimumStock" />
                                </MultiBinding>
                            </Condition.Binding>
                        </Condition>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Value="Green">
                            <Condition.Binding>
                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                    <Binding Path="Row.ArticleCurrentStock" />
                                    <Binding Path="Row.ArticleMinimumStock" />
                                </MultiBinding>
                            </Condition.Binding>
                        </Condition>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="Green" />
                    <Setter Property="Foreground" Value="White" />
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Value="Yellow">
                            <Condition.Binding>
                                <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                    <Binding Path="Row.ArticleCurrentStock" />
                                    <Binding Path="Row.ArticleMinimumStock" />
                                </MultiBinding>
                            </Condition.Binding>
                        </Condition>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="Yellow" />
                    <Setter Property="Foreground" Value="Black" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </dxwui:WinUIDialogWindow.Resources>
    <Grid Name="GridMain" Height="{Binding DialogHeight}" Width="{Binding DialogWidth}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock FontSize="15" Text="{DynamicResource ArticleDetailsViewInformationReference}" Margin="0,0,0,0" />
            <TextBlock FontSize="15" Text="{Binding ArticleReference}" Margin="5,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="3" Grid.Column="0" FontSize="15" Text="{DynamicResource StockAvailabilityViewAvailableWarehouses}" Margin="0,0,0,5"  />


        <dxdo:DockLayoutManager Name="dockManager1" Margin="0 0 0 0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch">
            <dxdo:LayoutGroup x:Name="rootMainGroup" Orientation="Horizontal">
                <dxdo:LayoutPanel x:Name="documentGroup1" ShowCaption="False" ShowCloseButton="False">
                    <Border Name="BorderOfGridControl" Grid.Row="4" Style="{DynamicResource BorderStyle}">
                        <dxg:GridControl  Name="GridControlWarehousesArticleStockList" 
                                          ItemsSource="{Binding DataContext.WarehousesArticleStockList,UpdateSourceTrigger=PropertyChanged,                                        
                                          Mode=TwoWay, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                            <dxg:GridControl.View>
                                <dxg:CardView Name="CardViewName" ShowSearchPanelMode="Never"                             
                                              ShowColumnHeaders="False" ShowDragDropHint="False"                             
                                              ShowFilterPanelMode="Never"                              
                                              ShowTargetInfoInDragDropHint="False"                             
                                              CardTemplate="{StaticResource readonlyCardTemplate}"                             
                                              ShowGroupPanel="False"                            
                                              ShowCardExpandButton="False"                             
                                              HorizontalAlignment="Left"                             
                                              VerticalAlignment="Top"                             
                                              CardLayout="Rows">
                                </dxg:CardView>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Border>
                </dxdo:LayoutPanel>
            </dxdo:LayoutGroup>
            <!--[rdixit][GEOS2-8200][18.09.2025]-->
            <dxdo:DockLayoutManager.AutoHideGroups>
                <dxdo:AutoHideGroup DockType="Left" Expanded="True" AutoHideSize="300,200" Grid.Row="4" Grid.Column="0">
                    <dxdo:LayoutPanel ItemWidth="290" Caption="{DynamicResource Warehouses}" ShowCloseButton="False" AutoHidden="False">
                        <dxdo:LayoutPanel.ControlBoxContentTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="1" ShowGridLines="False" Grid.Column="2" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content=" " Grid.Row="1" Grid.Column="2" Background="Gray" HorizontalContentAlignment="Center"                     
                                            Command="{Binding DataContext.ExpandAndCollapsWarehousesCommand, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"                     
                                            CommandParameter="{Binding ElementName=MenutreeListView}">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <Image  Height="14" Width="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsExpand, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" Value="True">
                                                                    <Setter Property="Source" Value="{DynamicResource WMSExpandButtonImage}" />
                                                                    <Setter Property="ToolTip" Value="Expand" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DataContext.IsExpand, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" Value="False">
                                                                    <Setter Property="Source" Value="{DynamicResource WMSCollapsButtonImage}" />
                                                                    <Setter Property="ToolTip" Value="Collapse" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </dxdo:LayoutPanel.ControlBoxContentTemplate>
                        <Grid ShowGridLines="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <dxg:TreeListControl x:Name="GridMenuList" Grid.Row="0" MaxHeight="1000"                     
                                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"      
                                                 AllowUpdateTwoWayBoundPropertiesOnSynchronization="True"                        
                                                 ItemsSource="{Binding DataContext.RegionCountryWarehouseMenuList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                                <dxg:TreeListControl.Columns>
                                    <dxg:TreeListColumn Width="*" FieldName="NameWithCount" FixedWidth="True" ReadOnly="True">
                                        <dxg:TreeListColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding RowData.Row.NameWithCount}" VerticalAlignment="Center" Margin="2,0,5,0" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </dxg:TreeListColumn.CellTemplate>
                                    </dxg:TreeListColumn>
                                </dxg:TreeListControl.Columns>
                                <dxg:TreeListControl.View>
                                    <dxg:TreeListView Name="MenutreeListView"                                    
                                                      ShowTotalSummary="False"
                                                      ParentFieldName="ParentKey"                                    
                                                      KeyFieldName="Key"                                                     
                                                      ShowFixedTotalSummary="True"
                                                      EnableSelectedRowAppearance="True"                                      
                                                      AllowRecursiveNodeChecking="True"
                                                      ShowSearchPanelMode="Always"
                                                      ShowColumnHeaders="False"
                                                      ShowIndicator="False"
                                                      ShowVerticalLines="False"
                                                      VerticalScrollbarVisibility="Visible"
                                                      SearchPanelHorizontalAlignment="Stretch"
                                                      ShowHorizontalLines="False"                                          
                                                      AutoExpandAllNodes="True"                                                   
                                                      AllowBandMultiRow="False"
                                                      NavigationStyle="Cell"
                                                      AllowDragDrop="False"
                                                      EditorShowMode="MouseDown"
                                                      ImmediateUpdateCheckBoxState="True"
                                                      ShowCheckboxes="True"           
                                                      CheckBoxFieldName="IsChecked"
                                                      FilterRowDelay="0">

                                        <!--<dxmvvm:Interaction.Behaviors>
                                            <dxmvvm:EventToCommand EventName="NodeCheckStateChanged" Command="{Binding CheckBoxSelectedCommand}" 
                                                                   CommandParameter="{Binding ElementName=GridMenuList}" PassEventArgsToCommand="True"/>
                                        </dxmvvm:Interaction.Behaviors>-->
                                    </dxg:TreeListView>
                                </dxg:TreeListControl.View>
                            </dxg:TreeListControl>
                        </Grid>
                    </dxdo:LayoutPanel>
                </dxdo:AutoHideGroup>
            </dxdo:DockLayoutManager.AutoHideGroups>
        </dxdo:DockLayoutManager>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal"
                    Margin="0,10,0,10"
                    Width="290">

            <Button Content="{DynamicResource SearchButton}"
                            Command="{Binding SearchButtonCommand}"
                            CommandParameter="{Binding ElementName=AvailableWarehouseListBox}"
                            Height="30"
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="40 0 0 0"
                            Style="{DynamicResource Button16Style}"/>
            
            
            <Button Content="{DynamicResource CancelButton}"
                    Command="{Binding CancelButtonCommand}" 
                    Height="30"
                    Width="100"
                    Margin="20,0,0,0"
                    Style="{DynamicResource Button16Style}"
                    VerticalAlignment="Bottom" />

        </StackPanel>
    </Grid>
</dxwui:WinUIDialogWindow>
