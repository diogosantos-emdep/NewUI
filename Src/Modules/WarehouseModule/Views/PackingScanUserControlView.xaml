                                    <dxga:StateIndicatorControl.Model>
                                        <dxga:LampStateIndicatorModel />
                                    </dxga:StateIndicatorControl.Model>
                                </dxga:StateIndicatorControl>
                            </Grid>

                            <!--actual Weight-->
                            <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" >

                                <dxga:DigitalGaugeControl Grid.Row="0" Name="FourteenSegmentsGauge"
                                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                                      TextHorizontalAlignment="Right" TextVerticalAlignment="Center"
                                                      Text="{Binding ScaleWeightValue,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"  EnableAnimation="False">
                                    <dxga:DigitalGaugeControl.Model>
                                        <dxga:DigitalDefaultModel InnerPadding="0"/>
                                    </dxga:DigitalGaugeControl.Model>
                                    <dxga:DigitalGaugeControl.SymbolView>
                                        <dxga:FourteenSegmentsView>
                                            <dxga:FourteenSegmentsView.Presentation>
                                                <dxga:DefaultFourteenSegmentsPresentation FillActive="{DynamicResource WarehouseInitialLocationBackground}" />
                                            </dxga:FourteenSegmentsView.Presentation>
                                        </dxga:FourteenSegmentsView>
                                    </dxga:DigitalGaugeControl.SymbolView>
                                </dxga:DigitalGaugeControl>
                            </Border>

                            <!--Estimated Weight-->
                            <TextBlock Grid.Row="4" 
                                   Text="{DynamicResource EstimatedWeight}" 
                                   HorizontalAlignment="Stretch" 
                                   TextAlignment="Left" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="{StaticResource FontSize19}" />

                            <!--Estimated actual Weight-->
                            <Border Grid.Row="6" BorderThickness="1" BorderBrush="Gray">
                                <Viewbox HorizontalAlignment="Right" VerticalAlignment="Stretch">
                                    <TextBlock Text="{Binding EstimatedWeight,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged ,Converter={StaticResource WeightToWeightUnitConverter}}" 
                                       HorizontalAlignment="Stretch" 
                                       TextAlignment="Right" 
                                       FontSize="{StaticResource FontSize35}" 
                                       Foreground="White"
                                       VerticalAlignment="Stretch">
                                    </TextBlock>
                                </Viewbox>
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBoxWeightTolerance,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Value="true">
                                                <Setter Property="Background" Value="Green"></Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsBoxWeightTolerance,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Value="false">
                                                <Setter Property="Background" Value="Red"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>

                        <!--WeightMachine Image-->
                        <Image Grid.Column="4" HorizontalAlignment="Stretch" 
                           Source="{DynamicResource WeightMachineImageStyle}"                
                           VerticalAlignment="Stretch"/>

                    </Grid>
                </Grid>
               
            </Grid>

        </Grid>
       

        
    </Grid>
</UserControl>
