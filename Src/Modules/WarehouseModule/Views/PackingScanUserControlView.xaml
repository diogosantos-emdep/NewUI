<UserControl x:Class="Emdep.Geos.Modules.Warehouse.Views.PackingScanUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
              xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion" 
             xmlns:DataCommon="clr-namespace:Emdep.Geos.Data.Common;assembly=Emdep.Geos.Data.Common"
             xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges" 
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:dxat="http://schemas.devexpress.com/winfx/2008/xaml/accordion/themekeys"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d" 
             Style="{DynamicResource UserControlStyle}"
             Focusable="True" IsTabStop="True"  
             UIHelper:FocusExtension.IsFocused="{Binding FocusUserControl}">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <behaviors:InvokeDelegateCommandAction Command="{Binding CommandKeyDown}" CommandParameter="{Binding Path=InvokeParameter, RelativeSource={RelativeSource Self}}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <UIHelper:ChildrenSelectorHelper x:Key="childrenSelector" />
        <Converters:WeightToWeightUnitConverter x:Key="WeightToWeightUnitConverter"/>

        <Style TargetType="dxlc:GroupBox" >
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <system:Double x:Key="FontSize24">24</system:Double>
        <system:Double x:Key="FontSize23">23</system:Double>
        <system:Double x:Key="FontSize19">19</system:Double>
        <system:Double x:Key="FontSize35">35</system:Double>


        <DataTemplate x:Key="rowIndicatorContentTemplate">
            <Border x:Name="errorIndicatorBorder" Background="Transparent">
                <ContentControl Name="iconPresenter">
                    <Border />
                </ContentControl>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IndicatorState}" Value="Focused">
                    <Setter Property="ContentTemplate" Value="{dxi:ThemeResource {dxgt:RowIndicatorThemeKey ResourceKey=FocusedIconTemplate}}" TargetName="iconPresenter" />
                    <Setter Property="ContentTemplate" TargetName="iconPresenter">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{DynamicResource IndicatorImageStyle}" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <Style x:Key="HideButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowRight.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowLeft.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HideButtonStyleForLeftToggleButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowLeft.png"
                                   Visibility="Visible"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HideButtonStyleForRightToggleButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowRight.png"
                                   Visibility="Visible"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HideButtonStyle2" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowDown.png"  
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/ArrowUp.png"  
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="childrenPathTemplate">
            <TextBlock Text="Boxes" Height="150" Width="200"></TextBlock>
        </DataTemplate>

        <ControlTemplate x:Key="DigitalGaugeControlTemplate">
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
                            <GradientStop Color="Transparent" Offset="1"/>
                            <GradientStop Color="Transparent" Offset="0"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>
        </ControlTemplate>


        <DataTemplate x:Key="cardHeaderTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4,0,0,0" Text="{Binding Path=Data.WorkOrder}" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="readonlyCardTemplate">

            <!--Margin="-12,-11,-12,-12"-->
            <Grid Background="{Binding Path=Row.TotalCountColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Margin="5,0,5,0" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"
                                   Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/HeaderBox.png"  Visibility="Visible"
                                   />

                <TextBlock Grid.Column="2" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="Black" FontSize="15" Text="{Binding Path=Row.TotalItemCounted}"/>

                <TextBlock Margin="5,0,5,0" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="Black" FontSize="30" Text="{Binding Path=Row.TotalCountPercentage}"/>

            </Grid>
        </DataTemplate>


        <ControlTemplate x:Key="{dxgt:CardViewThemeKey ResourceKey=ControlTemplate, ThemeName=MetropolisLight}">
            <ScrollViewer x:Name="scr3" CanContentScroll="true" VerticalScrollBarVisibility="Hidden"
                                                     HorizontalScrollBarVisibility="Hidden" BorderThickness="0"
                                             Focusable="False"
                                             Template="{DynamicResource {dxgt:CardViewThemeKey ResourceKey=ScrollViewerTemplate, ThemeName=MetropolisLight}}"
                                                                 dxg:GridControl.CurrentView="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                             />
        </ControlTemplate>


    </UserControl.Resources>

    <Grid Focusable="True" ShowGridLines="False" UIHelper:FocusExtension.IsFocused="{Binding FocusUserControl}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="150"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>

            <ColumnDefinition Width="45*"></ColumnDefinition>
            
            <!--<ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="45*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="50*" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>-->
            
            <!--<ColumnDefinition Width="3"></ColumnDefinition>-->
            
            <!--<ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="{x:Type ColumnDefinition}">
                        <Setter Property="Width" Value="45*"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                <Setter Property="Width" Value="50*" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>-->
            
        </Grid.ColumnDefinitions>

        <!--Boxes-->
        <dxlc:LayoutGroup Grid.Column="0" View="GroupBox" 
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              IsCollapsible="False" IsCollapsed="False" Visibility="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <dxlc:LayoutGroup.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left">
                            <TextBlock FontWeight="Bold" 
                                       FontSize="{StaticResource FontSize24}" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left">
                                <Run Text="{DynamicResource Boxes}"></Run>
                                <Run Text=":"></Run>
                                <Run Text="{Binding DataContext.TotalPackingBoxCount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:LayoutGroup}}"></Run>
                            </TextBlock>
                        </Viewbox>
                    </Grid>
                </DataTemplate>
            </dxlc:LayoutGroup.HeaderTemplate>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="95*"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="5*"></RowDefinition>
                </Grid.RowDefinitions>

                <dxa:AccordionControl Name="accordionControl" 
                                      SelectionUnit="SubItem"  
                                      ItemsSource="{Binding PackingCompanyList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedItem}" 
                                      ChildrenSelector="{StaticResource childrenSelector}"
                                      ExpandMode="SingleOrNone" 
                                      Grid.Row="0"
                                      HorizontalAlignment="Stretch" 
                                      ShowSearchControl="False">
                    <dxa:AccordionControl.Resources>
                        <DataTemplate DataType="{x:Type DataCommon:PackingCompany}">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Right" Style="{StaticResource TextBlock18Style}" Text="{Binding PackingBoxes.Count,StringFormat=[\{0\}]}"/>
                                <TextBlock Text="{Binding ShortName}" Style="{StaticResource TextBlock18Style}"/>
                            </DockPanel>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type DataCommon:PackingBox}">
                            <Border BorderThickness="0.5" BorderBrush="Gray">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="2"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="2"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="2"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="3"></RowDefinition>

                                    </Grid.RowDefinitions>

                                    <Image Style="{DynamicResource DeleteImageStyle}" Grid.Row="0" Height="18" Width="18"
                                           HorizontalAlignment="Right" Margin="0 5 5 0" 
                                           ToolTip="{DynamicResource DeletePackingBox}">
                                        <dxmvvm:Interaction.Triggers>
                                            <dxmvvm:EventToCommand EventName="MouseDown" UseDispatcher="True"
                                                                   Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl},Path=DataContext.DeleteButtonCommand}"
                                                                   CommandParameter="{Binding DataContext.SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl}}">
                                            </dxmvvm:EventToCommand>
                                        </dxmvvm:Interaction.Triggers>
                                    </Image>
                                    <!--//Shubham[skadam]  GEOS2-4421 Do not mix different carriage methods in a box (1/2) 19 06 2023
                                    //Shubham[skadam]  GEOS2-4422 Do not mix different carriage methods in a box (2/2) 19 06 2023-->
                                    <TextBlock Grid.Row="0" Margin="0,5,0,0" TextAlignment="Center" Text="{Binding CountryGroup.Name}" 
                                               Background="{Binding CountryGroup.HtmlColor}" 
                                               Foreground="{Binding CountryGroup.HtmlColor, Converter={Converters:ForegroundColorConverter}}" 
                                               Style="{StaticResource TextBlock18Style}" Visibility="{Binding IsVisibleCountryGroup}" HorizontalAlignment="Center"
                                               FontWeight="Bold" Width="70"/>
                                    
                                    <Image Grid.Row="0" Height="18" Width="18"
                                           HorizontalAlignment="Left" Margin="5 5 5 0" >
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="0">
                                                        <Setter Property="Source" Value="{DynamicResource OpenBoxImageSource}"></Setter>
                                                        <Setter Property="ToolTip" Value="Open"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="1">
                                                        <Setter Property="Source" Value="{DynamicResource ClosedBoxImageSource}"></Setter>
                                                        <Setter Property="ToolTip" Value="Closed"/>
                                                    </DataTrigger>

                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                        <dxmvvm:Interaction.Triggers>
                                            <dxmvvm:EventToCommand EventName="MouseDown" UseDispatcher="True"
                                                                   Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl},Path=DataContext.OpenCloseBoxCommand}"
                                                                   CommandParameter="{Binding DataContext.SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxa:AccordionControl}}">
                                            </dxmvvm:EventToCommand>
                                        </dxmvvm:Interaction.Triggers>
                                    </Image>

                                    <TextBlock Grid.Row="1" Text="BOX NUMBER" Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="2" Text="{Binding BoxNumber}" Style="{StaticResource TextBlock18Style}" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap"/>
                                    <Grid  Grid.Row="4" HorizontalAlignment="Center" Margin="5" >                                        
                                        <Image>
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="0">
                                                            <Setter Property="Source" Value="{DynamicResource OpenBoxImage}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsClosed,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="1">
                                                            <Setter Property="Source" Value="{DynamicResource ClosedBoxImage}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <Image Height="30" Width="40" VerticalAlignment="Top" Margin="0,5">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsStackable,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="0">
                                                            <Setter Property="Source" Value="{DynamicResource StackableRedImage}"/>
                                                            <Setter Property="ToolTip" Value="Not Stackable"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsStackable,UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}" Value="1">
                                                            <Setter Property="Source" Value="{DynamicResource StackableGreenImage}"/>
                                                            <Setter Property="ToolTip" Value="Stackable"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Grid>
                                    <!--//Shubham[skadam]  GEOS2-4421 Do not mix different carriage methods in a box (1/2) 19 06 2023
                                    //Shubham[skadam]  GEOS2-4422 Do not mix different carriage methods in a box (2/2) 19 06 2023-->
                                    <!--<TextBlock Grid.Row="6" Text="{DynamicResource TotalItems}" Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="7" Style="{StaticResource TextBlock18Style}" HorizontalAlignment="Center" FontWeight="Bold" 
                                               Text="{Binding ItemsInBox,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                    </TextBlock>-->

                                    <TextBlock Grid.Row="6" Text="{DynamicResource TotalItems}" Margin="5 0 5 0" 
                                               Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Left" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="6" Style="{StaticResource TextBlock12Style}" Margin="10 0 15 0" HorizontalAlignment="Right" FontWeight="Bold" 
                                               Text="{Binding ItemsInBox,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                                    </TextBlock>
                                    
                                    <!--<TextBlock Grid.Row="9" Margin="1,1,1,1" TextAlignment="Center" Text="{Binding CountryGroup.Name}" 
                                               Background="{Binding CountryGroup.HtmlColor}"
                                               Foreground="{Binding CountryGroup.HtmlColor, Converter={Converters:ForegroundColorConverter}}" 
                                               Style="{StaticResource TextBlock18Style}" Visibility="{Binding IsVisibleCountryGroup}"
                                               HorizontalAlignment="Center" FontWeight="Bold" Width="200"/>-->
                                    <TextBlock Grid.Row="9" Text="{DynamicResource PackingBox_Shipping}"  Margin="5 0 5 0" 
                                               Style="{StaticResource TextBlock12Style}" HorizontalAlignment="Left" FontWeight="SemiBold"/>
                                    <!--<TextBlock Grid.Row="9" HorizontalAlignment="Right" Margin="10 0 10 0" TextAlignment="Center" FontWeight="SemiBold"
                                               Text="{Binding CarriageMethod}"  />-->
                                    <!-- Background="SkyBlue"      BorderBrush="Black"  -->
                                    <Border CornerRadius="50" Grid.Row="9" HorizontalAlignment="Right" TextBlock.TextAlignment="Center"
                                    Width="20"
                                    Height="20"
                                    Margin="10 0 10 0"
                                    Padding="0,0,0,0"
                                    BorderThickness="1">
                                        <!--<TextBlock  FontWeight="SemiBold"  Text="{Binding CarriageMethod}" HorizontalAlignment="Center" />-->
                                        <TextBlock  FontWeight="SemiBold"  Text="{Binding CarriageMethod}" HorizontalAlignment="Center">
                                            <!--<TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CarriageMethod}" Value="{x:Null}">
                                                            <Setter Property="TextBlock.Foreground" Value="" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Background" Value="SkyBlue" />
                                                    <Setter Property="Border.BorderBrush" Value="Black" />
                                                </Style>
                                            </TextBlock.Style>-->
                                        </TextBlock>
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="Border.BorderBrush" Value="Black" />
                                                <!--<Setter Property="Background" Value="SkyBlue" />-->
                                                <Setter Property="Background" Value="{Binding CarriageMethodHtmlColor}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CarriageMethod}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                        <!--<Setter Property="Background" Value="Red" />-->
                                                        <!--<Setter Property="BorderBrush" Value="" />-->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </dxa:AccordionControl.Resources>

                    <dxmvvm:Interaction.Triggers>
                        <dxmvvm:EventToCommand EventName="SelectedItemChanged"
                                               Command="{Binding SelectedItemChangedCommand}"
                                               PassEventArgsToCommand="True">
                        </dxmvvm:EventToCommand>
                        <dxmvvm:EventToCommand EventName="MouseDoubleClick"
                                       Command="{Binding EditBoxCommand}"
                                       PassEventArgsToCommand="True" />
                        <dxmvvm:EventToCommand EventName="ItemExpanded"
                                               Command="{Binding ItemExpandedCommand}"
                                               PassEventArgsToCommand="True">
                        </dxmvvm:EventToCommand>
                    </dxmvvm:Interaction.Triggers>
                </dxa:AccordionControl>

                <Button Grid.Row="2" ToolTip="Add New Box" Margin="5"
                        Command="{Binding AddButtonCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <Image Style="{DynamicResource AddNewButtonImageStyle}"  Height="15" Width="15" Margin="-10"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>

        </dxlc:LayoutGroup>

        <ToggleButton x:Name="expandButton" Width="20" Grid.Column="1"
                          Command="{Binding HidePanelCommand}"  
                          Style="{StaticResource HideButtonStyle}" IsChecked="True" VerticalAlignment="Center">
        </ToggleButton>

        <Grid Grid.Column="2" ShowGridLines="False">
            <Grid.RowDefinitions>
                <!--<RowDefinition Height="100"/>--> <!--0-->
                
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style TargetType="{x:Type RowDefinition}">
                            <Setter Property="Height" Value="100" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHeaderVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsHeaderVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="Hidden">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>

                <RowDefinition Height="30" />
                <!--1-->
                <RowDefinition Height="*" /> <!--2-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="{x:Type ColumnDefinition}">
                            <Setter Property="Width" Value="45*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                    <Setter Property="Width" Value="50*" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="{x:Type ColumnDefinition}">
                            <Setter Property="Width" Value="45*"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBoxesVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Value="Collapsed">
                                    <Setter Property="Width" Value="50*" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>


            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0" Grid.Column="0" ShowGridLines="False" Grid.ColumnSpan="4" Margin="16,0,0,5"  Visibility="{Binding IsHeaderVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>


                <Border  Grid.Row="0" Grid.Column="0" BorderThickness="0.2" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                        <!--BackwardCommand Btn-->
                        <ToggleButton Grid.Column="0"   Visibility="{Binding IsToggleButtonVisible,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
