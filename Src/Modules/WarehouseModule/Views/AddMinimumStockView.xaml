<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.AddMinimumStockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:WarehouseCommon="clr-namespace:Emdep.Geos.Modules.Warehouse;assembly=Emdep.Geos.Modules.Warehouse"
             xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Title="{Binding WindowHeader,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
             Style="{DynamicResource WinUIDialogWindowStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding AddLocationsMinimumStockViewCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <Grid Margin="0,-50,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
         </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145"/>
            <ColumnDefinition Width="150"/>
       </Grid.ColumnDefinitions> 
        
        <!--Full Name-->
        <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource AddMinimumStockViewFullName}"  Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10"/>
        <dxe:TextEdit  Margin="0,0,0,0" Grid.Row="1" Grid.Column="1" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" 
                      AllowNullInput="True" InvalidValueBehavior="AllowLeaveEditor" Text="{Binding FullName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="True" ></dxe:TextEdit>
        <!--Min Stock-->
        <Label Grid.Row="2" Grid.Column="0" Content="{DynamicResource AddMinimumStockViewMinQuantity}"  Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10" />
        <dxe:SpinEdit Grid.Column="1" Grid.Row="2" IsFloatValue="False"  Width="150" Height="30"  Margin="0" MinValue="0" Increment="1"
                      Value="{Binding MinStock,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" Mask="d0" MaskType="Numeric" AllowRoundOutOfRangeValue="False"
                      IsEnabled="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=IsPermissionEnabled}">
        </dxe:SpinEdit>
        
        <!--Max Stock-->
        <Label Grid.Row="3" Grid.Column="0" Content="{DynamicResource AddMinimumStockViewMaxQuantity}"  Height="30" FontSize="16"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,10" />
        <dxe:SpinEdit Grid.Column="1" Grid.Row="3" IsFloatValue="False"  Width="150" Height="30"  Margin="0" Increment="1"
                      Mask="d0" MaskType="Numeric" Value="{Binding MaxStock,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" AllowRoundOutOfRangeValue="False"
                      IsEnabled="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=IsPermissionEnabled}">
          
        </dxe:SpinEdit>
        
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"   
                    Orientation="Horizontal"
                    Margin="10,0,0,0"
                    Width="250">

            <Button Content="{DynamicResource HolidaysAcceptButton}"
                    Command="{Binding AddLocationsMinimumStockViewAcceptButtonCommand}"
                    Height="30"
                    Width="100"
                    Margin="0,0,15,0"
                    Style="{DynamicResource Button16Style}"
                    VerticalAlignment="Bottom" 
                    IsEnabled="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=IsPermissionEnabled}"
                    ></Button>

            <Button Content="{DynamicResource HolidaysCancelButton}"
                    Command="{Binding AddLocationsMinimumStockViewCancelButtonCommand}" 
                    Height="30"
                    Width="100"
                    Margin="15,0,0,0"
                    Style="{DynamicResource Button16Style}"
                    VerticalAlignment="Bottom" />
        </StackPanel>

    </Grid> 

</dxwui:WinUIDialogWindow> 
