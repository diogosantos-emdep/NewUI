<UserControl x:Class="Emdep.Geos.Modules.Warehouse.Views.WarehouseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:WarehouseCommon ="clr-namespace:Emdep.Geos.Modules.Warehouse"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
             mc:Ignorable="d" 
             Style="{DynamicResource UserControlStyle}"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Converters:WeightToWeightUnitConverter x:Key="WeightToWeightUnitConverter"/>
        <Converters:ByteToYesNoConverter x:Key="ByteToYesNoConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="{DynamicResource WarehouseHeader}" Style="{StaticResource LabelTitleStyle}" Grid.Row="0" Grid.Column="0"/>

            <DockPanel Grid.Row="0" Grid.Column="1">

                <Grid HorizontalAlignment="Right" Width="Auto" Height="45" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>

                    <!-- Waresouse combobox section -->
                    <DockPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" >
                        <Image Style="{DynamicResource WarehouseImageStyle}" Width="24" Height="24" Margin="7,0,3,0" />
                        <TextBlock Text="{DynamicResource Warehouse}"  FontWeight="Bold" Margin="5,2,5,0" VerticalAlignment="Bottom" />
                    </DockPanel>

                    <dxe:ComboBoxEdit Name="CbeWareHouse" Style="{DynamicResource ComboBoxEditStyle}" Grid.Column="1" Width="150" Height="30"
                                      Margin="5,0,5,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsTextEditable="False"
                                      ItemsSource ="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=WarehouseList ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
                                      SelectedItem="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=Selectedwarehouse,UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMember="Name" ShowError="False" ShowErrorToolTip="False" >

                        <dxmvvm:Interaction.Triggers>
                            <dxmvvm:EventToCommand EventName="EditValueChanged"
                                               Command="{Binding CommandWarehouseEditValueChanged}" CommandParameter="{Binding ElementName=CbeWareHouse,Path=SelectedItem}"
                                              />
                        </dxmvvm:Interaction.Triggers>
                    </dxe:ComboBoxEdit>

                    <!-- Refresh Button -->

                    <Button Content=" " Grid.Row="0" Grid.Column="2" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding RefreshWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=WarehouseTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonRefresh}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource WareHouseRefreshButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Print Button -->

                    <Button Content=" " Grid.Row="0" Grid.Column="3" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding PrintWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=WarehouseTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonPrint}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource PrinterButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Export Button -->

                    <Button Content=" " Grid.Row="0" Grid.Column="4" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding ExportWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=WarehouseTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonExportToExcel}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource ExcelExportButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Transfer Material Button -->

                    <Button Content=" " Grid.Column="5" Focusable="False" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding CommandTransferMaterial}" Margin="0,0,5,5"
                             IsEnabled="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=IsPermissionEnabled}"
                            CommandParameter="{Binding ElementName=WarehouseTableView}">
                        <Button.ToolTip>
                            <TextBlock Text="Transfer Material"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource WareHouseTransferButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Print Warehouse Locations -->
                    <Button Content=" " Grid.Column="6" Focusable="False" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding CommandPrintLocation}" Margin="0,0,5,5"
                            CommandParameter="{Binding ElementName=WarehouseTableView}">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource WarehouseLocationPrint}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource WareHousePrintLocationButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Inventory Button -->
                    <Button Content=" " Grid.Column="7" Focusable="False" 
                            Height="40" Width="40"  IsEnabled="{Binding IsInventoryEnable,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            HorizontalAlignment="Right"
                            Command="{Binding WarehouseInventoryClickCommand}" CommandParameter="{Binding ElementName=WarehouseTableView}"
                            Padding="-4"
                            Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource WarehouseInventory}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource WareHouseInventoryButtonImageStyle}" 
                                       Height="28" Width="28"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!--Article label Print Button -->

                    <Button Content=" " Grid.Column="8" Focusable="False" 
                            Height="40" Width="40"  
                            HorizontalAlignment="Right"
                            Command="{Binding CommandPrintArticleLabel}" 
                            CommandParameter="{Binding ElementName=WarehouseTableView}"
                            Padding="-4"
                            Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource PrintArticleLabel}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource PrintArticleLabelButtonImageStyle}" 
                                       Height="28" Width="28"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                </Grid>
            </DockPanel>
        </Grid>

        <dxg:GridControl Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                         ItemsSource="{Binding ArticlesList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                         FilterString="{Binding MyFilterString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                         TextSearch.Text="{Binding MyFilterString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                         AllowLiveDataShaping="True" 
                         SelectedItem="{Binding SelectedArticle,Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"
                         SelectionMode="Row" ImplyNullLikeEmptyStringWhenFiltering="True">
                      

            <dxg:GridColumn Header="{DynamicResource WarehouseGridColReference}" FieldName="Reference" FilterPopupMode="CheckedList" MinWidth="100" Width="250" ReadOnly="True">
                <dxg:GridColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                             <Hyperlink x:Name="hyperlink" 
                                               TargetName="_blank"
                                               Command="{Binding DataContext.WarehouseViewReferenceHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                               CommandParameter="{Binding ElementName=WarehouseTableView}" Style="{DynamicResource hyperlinkGridStyle}">
                                        <InlineUIContainer>
                                            <TextBlock Text="{Binding Data.Reference}"  Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline"/>
                                        </InlineUIContainer>
                                    </Hyperlink>
                        </TextBlock>
                    </DataTemplate>
                </dxg:GridColumn.CellTemplate>
            </dxg:GridColumn>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColDescription}" FieldName="Description" MinWidth="200" Width="400" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColCategory}" FieldName="ArticleCategory.Name" MinWidth="200" Width="200" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColLocation}" FieldName="MyWarehouse.Location" MinWidth="200" Width="200" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <!--<dxg:GridColumn Header="{DynamicResource WarehouseGridColWeight}" FieldName="Weight" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True"/>-->
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColWeight}" FieldName="Weight" Name="Weight" 
                                    UnboundType="Decimal" MinWidth="110" FilterPopupMode="CheckedList">
                <dxg:GridColumn.EditSettings>
                    <dxe:TextEditSettings DisplayTextConverter="{StaticResource WeightToWeightUnitConverter}"/>
                </dxg:GridColumn.EditSettings>
            </dxg:GridColumn>

            <dxg:GridColumn Header="{DynamicResource WarehouseGridColType}" FieldName="ArticlesType.Name" 
                            MinWidth="100" Width="100" 
                            ShowInColumnChooser="True" Visible="False" 
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList" ReadOnly="True"/>

            <dxg:GridColumn Header="{DynamicResource WarehouseGridColFamily}" FieldName="Family.Value" 
                            MinWidth="100" Width="100"
                            ShowInColumnChooser="True" Visible="False" 
                            ColumnFilterMode="DisplayText" FilterPopupMode="CheckedList" ReadOnly="True"/>

            <dxg:GridColumn Header="{DynamicResource WarehouseGridColObsolete}" 
                            MinWidth="80" Width="80"
                            ReadOnly="True"
                            ShowInColumnChooser="True" Visible="False"
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList"
                            Binding="{Binding IsObsolete, Converter={StaticResource ByteToYesNoConverter}, Mode=TwoWay}">
            </dxg:GridColumn>

            <dxg:GridColumn Header="{DynamicResource WarehouseGridColSerialNumber}"
                            MinWidth="110" Width="110"
                            ReadOnly="True"
                            ShowInColumnChooser="True" Visible="False"
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList"
                            Binding="{Binding RegisterSerialNumber, Converter={StaticResource ByteToYesNoConverter}, Mode=TwoWay}">
            </dxg:GridColumn>

            <dxg:GridColumn Header="{DynamicResource inspection}"
                            MinWidth="110" Width="110"
                            ReadOnly="True"
                            ShowInColumnChooser="True" Visible="False"
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList"
                            Binding="{Binding IsInspectionRequired, Converter={StaticResource ByteToYesNoConverter}, Mode=TwoWay}">
            </dxg:GridColumn>
            <dxg:GridColumn Header="{DynamicResource CountAfterPicking}"
                            MinWidth="110" Width="110"
                            ReadOnly="True"
                            ShowInColumnChooser="True" Visible="False"
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList"
                            Binding="{Binding IsCountRequiredAfterPicking, Converter={StaticResource ByteToYesNoConverter}, Mode=TwoWay}">
            </dxg:GridColumn>
            
            <dxg:GridColumn Header="{DynamicResource LockedStock}"
                MinWidth="110" Width="110"
                ReadOnly="True"
                ShowInColumnChooser="True" Visible="False"
                ColumnFilterMode="DisplayText"
                FilterPopupMode="CheckedList"
                FieldName="MyWarehouse.LockedStock">
            </dxg:GridColumn>

            <dxg:GridColumn Header="{DynamicResource Observationss}"
                           MinWidth="200" Width="400"
                            ReadOnly="True"
                            ShowInColumnChooser="True" Visible="False"
                            ColumnFilterMode="DisplayText"
                            FilterPopupMode="CheckedList"
                           FieldName="MyWarehouse.InternalNotes">
            </dxg:GridColumn>
            


            <dxg:GridColumn Header="{DynamicResource WarehouseGridColLength}" FieldName="Length" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColWidth}" FieldName="Width" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColHeight}" FieldName="Height" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColStock}" FieldName="MyWarehouse.CurrentStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True">
                <dxg:GridColumn.CellTemplate>
                    <DataTemplate>
                        <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Label Width="Auto" Content="{Binding RowData.Row.MyWarehouse.CurrentStock}" HorizontalAlignment="Stretch" 
                                   VerticalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="0 0 5 0" >
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Value="Red">
                                                        <Condition.Binding>
                                                            <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                            </MultiBinding>
                                                        </Condition.Binding>
                                                    </Condition>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="Red" />
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Value="Green">
                                                        <Condition.Binding>
                                                            <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                            </MultiBinding>
                                                        </Condition.Binding>
                                                    </Condition>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="Green" />
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Value="Yellow">
                                                        <Condition.Binding>
                                                            <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                            </MultiBinding>
                                                        </Condition.Binding>
                                                    </Condition>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="Yellow" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </Border>
                    </DataTemplate>
                </dxg:GridColumn.CellTemplate>
            </dxg:GridColumn>
            <dxg:GridColumn Header="{DynamicResource WarehousePriceValue}" 
                            FieldName="PriceWithSelectedCurrencySymbol" SortFieldName="Price"
                            FilterPopupMode="CheckedList" MinWidth="120" 
                            Width="150" ReadOnly="True"   AllowMoving="false" ShowInColumnChooser="False"
                            Visible="{Binding DataContext.IsValueColumnVisible,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <dxg:GridColumn.EditSettings>
                    <dxe:TextEditSettings HorizontalContentAlignment="Right"/>
                </dxg:GridColumn.EditSettings>
               
            </dxg:GridColumn>


            <dxg:GridColumn Header="{DynamicResource WarehouseGridColMinStock}" FieldName="MyWarehouse.MinimumStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True"/>
            <dxg:GridColumn Header="{DynamicResource WarehouseGridColMaxStock}" FieldName="MyWarehouse.MaximumStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True"/>

            <dxg:GridColumn Header="{DynamicResource SleepDays}" FieldName="ArticleSleepDays" FilterPopupMode="CheckedList" MinWidth="50" Width="70" ReadOnly="True" FixedWidth="True"
                            Fixed="Right" AllowEditing="False"
                            AllowMoving="false" ShowInColumnChooser="False">
                <dxg:GridColumn.CellTemplate>
                    <DataTemplate>
                        <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <TextBlock x:Name="ArticleSleepDate" Text="{Binding RowData.Row.ArticleSleepDays}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Value="false">
                                                        <Condition.Binding>
                                                            <MultiBinding Converter="{Converters:CellForeColorConverter}">
                                                                <Binding  Path="RowData.Row.ArticleSleepDays"/>
                                                                <Binding Source="{x:Static WarehouseCommon:WarehouseCommon.Instance}" Path="ArticleSleepDays" />
                                                            </MultiBinding>
                                                        </Condition.Binding>
                                                    </Condition>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="Red" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </dxg:GridColumn.CellTemplate>
            </dxg:GridColumn>
            <dxg:GridControl.TotalSummary>
                <dxg:GridSummaryItem x:Name="summary" FieldName="Name" SummaryType="Count" DisplayFormat="Total Count: {0}" Visible="True"   Alignment="Left"/>
            </dxg:GridControl.TotalSummary>
            <dxmvvm:Interaction.Behaviors>
                <UIHelper:GridSelectingBehavior />
            </dxmvvm:Interaction.Behaviors>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="WarehouseTableView"   
                               NavigationStyle="Row"
                               RowDetailsVisibilityMode="Visible"
                               ShowHorizontalLines="True"
                               ShowSearchPanelMode="Always"
                               ShowColumnHeaders="True"
                               IsColumnChooserVisible="True"
                               VerticalScrollbarVisibility="Visible"
                               AllowFixedColumnMenu="False"
                               ShowFixedTotalSummary="True" 
                               SearchPanelHorizontalAlignment="Stretch"
                               ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"
                               FocusedRow="{Binding SelectedArticle,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                               AllowGrouping="False"
                               ShowGroupPanel="False" SearchColumns="Reference;Description"
                               ShowIndicator="False" AutoWidth="True"
                               FilterEditorShowOperandTypeIcon="True" 
                               AllowColumnFiltering="True">

                    <dxg:TableView.Resources>
                        <DataTemplate x:Key="WarehouseArticleListReportPrintHeaderTemplate">
                            <Grid Width="{Binding UsablePageWidth}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="130" />
                                </Grid.ColumnDefinitions>
                                <dxe:TextEdit Text=" " Width="{Binding UsablePageWidth}" Grid.ColumnSpan="3" IsPrintingMode="True" Background="#333E5E" HorizontalAlignment="Stretch" 
                                                      VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" Height="50" />
                                <dxe:TextEdit Text="Warehouse Articles Stock Report" IsPrintingMode="True" HorizontalAlignment="Stretch" 
                                                      VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" />
                                <Image Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/GeosReportLogo.png" Height="50" Width="80"  dxp:ExportSettings.TargetType="Image" Grid.Column="2" />
                            </Grid>
                        </DataTemplate>

                        <DataTemplate x:Key="WarehouseArticleListReportPrintFooterTemplate">
                            <dxe:TextEdit HorizontalContentAlignment="Center" 
                                                  Width="{Binding Path=UsablePageWidth, Mode=OneWay}" 
                                                  dxp:ExportSettings.TargetType="PageNumber" 
                                                  dxp:PageNumberExportSettings.Kind="NumberOfTotal" 
                                                  dxp:PageNumberExportSettings.Format="0.0%"/>
                        </DataTemplate>
                    </dxg:TableView.Resources>
                   
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:EventToCommand EventName="ShowFilterPopup"
                                               Command="{Binding CustomShowFilterPopupCommand}"
                                               PassEventArgsToCommand="True"/>
                  
                        <dxmvvm:EventToCommand Command="{Binding TableViewLoadedCommand}"
                                                   EventName="Loaded"
                                                   PassEventArgsToCommand="True" />
                    </dxmvvm:Interaction.Behaviors>

                    <dxg:TableView.RowStyle>
                        <Style TargetType="{x:Type dxg:RowControl}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Row.IsObsolete}" Value="1">
                                    <Setter Property="FontStyle" Value="Italic"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </dxg:TableView.RowStyle>

                </dxg:TableView>
                
            </dxg:GridControl.View>
          

        </dxg:GridControl>

    </Grid>
</UserControl>
