<dxwui:WinUIDialogWindow  x:Class="Emdep.Geos.Modules.Warehouse.Views.EditProductInspectionView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
                         xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                         xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                        
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
                         xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.Warehouse.ViewModels"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                         xmlns:behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
                         xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
                           xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters" 
                         xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
                         xmlns:WarehouseCommon="clr-namespace:Emdep.Geos.Modules.Warehouse;assembly=Emdep.Geos.Modules.Warehouse"
                         xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                           xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                          xmlns:dxeh="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
                         xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                         xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
                         xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                         xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:Interactive="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                            xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges" 
                         mc:Ignorable="d"
                         d:DesignHeight="700" d:DesignWidth="1200"
                         Height="{Binding SystemParameters.PrimaryScreenHeight}" 
                         Width="{Binding SystemParameters.PrimaryScreenWidth}"
                         Template="{StaticResource Maximized_DXDialogWindow}"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         VerticalContentAlignment="Stretch"
             IsEnabled="True"
             Style="{DynamicResource WinUIDialogTitleStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding EditProductInspectionCancelButtonCommand}" />
    </dxwui:WinUIDialogWindow.InputBindings>
    <!--[rdixit][GEOS2-4209][16.03.2023]-->
    <dxwui:WinUIDialogWindow.Resources>
        <Converters:WeightToWeightUnitConverter x:Key="WeightToWeightUnitConverter"/> <!--[rdixit][GEOS2-5851][23.01.2025]-->
        <ControlTemplate x:Key="DigitalGaugeControlTemplate">
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
                            <GradientStop Color="Transparent" Offset="1"/>
                            <GradientStop Color="Transparent" Offset="0"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </ControlTemplate>
    </dxwui:WinUIDialogWindow.Resources>
    <dxwui:WinUIDialogWindow.TitleStyle >
        <Style TargetType="ContentControl">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--[rdixit][GEOS2-4209][16.03.2023]-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition>
                                    <RowDefinition.Style>
                                        <Style TargetType="RowDefinition">
                                            <Setter Property="RowDefinition.Height" Value="0" />
                                            <Style.Triggers>
                                                <DataTrigger Value="Visible" Binding="{Binding DataContext.ReadMeEntriesTitleVisibility,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                                                    <Setter Property="RowDefinition.Height" Value="50" />
                                                </DataTrigger>
                                                <DataTrigger Value="Collapsed" Binding="{Binding DataContext.ReadMeEntriesTitleVisibility,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}">
                                                    <Setter Property="RowDefinition.Height" Value="0" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RowDefinition.Style>
                                </RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0"
                                VerticalAlignment="Top" Margin="10,0,0,0"
                                       Text="{DynamicResource ProductInspectionHeader}"
                                       HorizontalAlignment="Left"
                                       Style="{DynamicResource CustomTitleStyle}" >
                            </TextBlock>
                            <dxga:DigitalGaugeControl Grid.Column="0" Grid.Row="1" Name="digitalGaugeControl" Visibility="{Binding DataContext.ReadMeEntriesTitleVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                      HorizontalAlignment="Center" SymbolCount="{Binding DataContext.SymbolCount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                                      Text="{Binding DataContext.ReadMeEntriesTitle,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" EnableAnimation="True" >
                                <dxga:DigitalGaugeControl.Layers>
                                    <dxga:DigitalGaugeLayer>
                                        <dxga:DigitalGaugeLayer.Presentation>
                                            <dxga:CustomDigitalGaugeLayerPresentation GaugeLayerTemplate="{StaticResource DigitalGaugeControlTemplate}"/>
                                        </dxga:DigitalGaugeLayer.Presentation>
                                    </dxga:DigitalGaugeLayer>
                                </dxga:DigitalGaugeControl.Layers>
                                <dxga:DigitalGaugeControl.SymbolView>
                                    <dxga:MatrixView5x8 Height="Auto" Width="Auto" Animation="{Binding MatrixView5x8Animation}">
                                        <dxga:MatrixView5x8.Presentation>
                                            <dxga:DefaultMatrix5x8Presentation FillActive="{DynamicResource WarehouseInitialLocationBackground}"/>
                                        </dxga:MatrixView5x8.Presentation>
                                    </dxga:MatrixView5x8>
                                </dxga:DigitalGaugeControl.SymbolView>
                                <dxga:DigitalGaugeControl.Model>
                                    <dxga:DigitalDefaultModel InnerPadding="0"/>
                                </dxga:DigitalGaugeControl.Model>
                            </dxga:DigitalGaugeControl>

                        </Grid>

                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </dxwui:WinUIDialogWindow.TitleStyle>


    <Grid>
        <dxlc:LayoutControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">


            <dxlc:LayoutGroup Orientation="Vertical">
                <Grid Height="Auto" Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="105"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <dxlc:LayoutGroup Orientation="Horizontal" Grid.Row="0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <!--Reference-->
                            <dxlc:LayoutGroup Grid.Column="0" Margin="2"  Header="{DynamicResource ProductInspectationViewGridColREFERENCE}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">

                                <TextBlock Margin="4 0 0 0" FontSize="23"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                             <Hyperlink x:Name="hyperlink" 
                                        TargetName="_blank"
                                        Foreground="SkyBlue"
                                        Command="{Binding DataContext.EditProductInspectionReferenceHyperLinkCommand,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                        CommandParameter="{Binding ElementName=ProductInspectionTableView}" >
                                        <InlineUIContainer>
                                            <TextBlock 
                                            Text="{Binding DataContext.Reference,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                               Foreground="SkyBlue"
                                                ToolTip="{Binding DataContext.Reference,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}" />
                                        </InlineUIContainer>
                                    </Hyperlink>

                        </TextBlock>



                            </dxlc:LayoutGroup>
                            <!--end-->

                            <!--Supplier-->
                            <dxlc:LayoutGroup Grid.Column="1" Margin="2"  Header="{DynamicResource ProductInspectionViewGridColSupplier}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                <TextBlock FontSize="23" Text="{Binding DataContext.Supplier,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                            ToolTip="{Binding DataContext.Supplier,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="Wrap"  >
                                   
                                </TextBlock>



                            </dxlc:LayoutGroup>
                            <!--end-->

                            <!--Delivery Note-->
                            <dxlc:LayoutGroup Grid.Column="2" Margin="2" Header="{DynamicResource ProductInspectationViewGridColDeliveryNote}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                <TextBlock Margin="4 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                             <Hyperlink x:Name="DNhyperlink"  FontSize="23"
                                        TargetName="_blank"
                                        Foreground="SkyBlue"
                                        Command="{Binding DataContext.EditProductInspectionDeliveryNoteHyperLinkCommand,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                        CommandParameter="{Binding ElementName=ProductInspectionTableView}" >
                                        <InlineUIContainer>
                                            <TextBlock Text="{Binding DataContext.DeliveryNote,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}" 
                                                       Foreground="SkyBlue" />
                                        </InlineUIContainer>
                                    </Hyperlink>
                        </TextBlock>


                            </dxlc:LayoutGroup>
                            <!--end-->

                            <!--Quantity-->
                            <dxlc:LayoutGroup Grid.Column="3" Margin="2"  Header="{DynamicResource ProductInspectationViewGridColQuantity}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                <TextBlock FontSize="23" Text="{Binding DataContext.Quantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                       VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />


                            </dxlc:LayoutGroup>
                            <!--end-->
                        </Grid>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <dxlc:LayoutGroup Orientation="Vertical" Grid.Column="0"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                                <!--Inspection Points-->
                                <dxlc:LayoutGroup Orientation="Vertical" Margin="2" Header="{DynamicResource ProductInspectionPointViewGridColInspectionPoints}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                    <Grid>
                                        <Grid.RowDefinitions >
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <dxg:GridControl Name="gridControl"
                                                     Margin="5"
                                                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                     ItemsSource="{Binding EditProductInspectionArticlesList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" FontSize="23"
                                                     ShowBorder="True" EnableSmartColumnsGeneration="True" SelectionMode="Row">
                                            <dxg:GridColumn  Header="{DynamicResource ProductInspectationViewGridColDesc}"  FieldName="Description" FilterPopupMode="CheckedList"/>
                                            <dxg:GridColumn Header="{DynamicResource ProductInspectationViewGridColStatus}" FieldName="Status.IdLookupValue" MinWidth="140" MaxWidth="150"  FilterPopupMode="CheckedList">
                                                <dxg:GridColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel  Orientation = "Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                            <Button Command="{Binding DataContext.ProductInspectationMouseClickActionB_RightCommand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
                                                                            CommandParameter="{Binding RowData.Row}">
                                                                <Image  Height="35" Width="35" Margin="5 5 5 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                    <Image.Style>
                                                                        <Style>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1721">
                                                                                    <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationWaitingforInspectionRight}" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1722">
                                                                                    <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationPassed}" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1723">
                                                                                    <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationWaitingforInspectionRight}" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </Button>
                                                                <Button Command="{Binding DataContext.ProductInspectationMouseClickActionB_WrongCommand,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
                                                                            CommandParameter="{Binding RowData.Row}">
                                                                <Image  Height="35" Width="35" Margin="5 5 5 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                <Image.Style>
                                                                    <Style>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1721">
                                                                                <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationWaitingforInspectionWrong}" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1722">
                                                                                <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationWaitingforInspectionWrong}" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding RowData.Row.Status.IdLookupValue}" Value="1723">
                                                                                <Setter Property="Image.Source" Value="{DynamicResource ProductInspectationRejected}" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </dxg:GridColumn.CellTemplate>

                                            </dxg:GridColumn>
                                            <dxg:GridControl.View>
                                                <dxg:TableView  AutoWidth="True" ShowFilterPanelMode="Never" AllowSorting="False" ShowIndicator="False"  
                           ShowGroupPanel="False" ShowAutoFilterRow="False" AllowColumnFiltering="False" AllowEditing="False" AllowFilterEditor="False"  
                           AllowGrouping="False" AllowMasterDetail="False" SearchString="{Binding SearchedString, UpdateSourceTrigger=PropertyChanged}"  
                           AllowScrollToFocusedRow="False">
                                                    <dxmvvm:Interaction.Behaviors>
                                                        <!--<dxmvvm:EventToCommand 
                                                        EventName="MouseDoubleClick" Command="{Binding DataContext.ProductInspectationMouseDoubleClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"  
                                                        PassEventArgsToCommand="True"/>-->
                                                        <dxmvvm:EventToCommand 
                                                        EventName="PreviewMouseDown" Command="{Binding DataContext.ProductInspectationMouseDoubleClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"  
                                                        PassEventArgsToCommand="True"/>
                                                    </dxmvvm:Interaction.Behaviors>
                                                </dxg:TableView >
                                            </dxg:GridControl.View>
                                        </dxg:GridControl>
                                    </Grid>

                                </dxlc:LayoutGroup>
                                <!--end-->

                                <dxlc:LayoutGroup Orientation="Horizontal" MaxHeight="120">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!--Quantity Inspected-->
                                        <dxlc:LayoutGroup Grid.Column="0" Margin="2" Orientation="Vertical" Header="{DynamicResource ProductInspectationViewGridColQuantityInspected}"  MaxHeight="120"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                            <dxe:SpinEdit x:Name="PART_Editor" HorizontalAlignment="Stretch" AllowRoundOutOfRangeValue="True" FontSize="23"
                                                  Increment="1" MinValue="0" Mask="N0" MaskType="Numeric" IsFloatValue="False" Value="{Binding DataContext.QuantityInspected,RelativeSource={RelativeSource AncestorType=dxlc:LayoutGroup},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                                    MaskUseAsDisplayFormat="True" AllowSpinOnMouseWheel="True" />
                                            <!--<dxe:SpinEdit.Style>
                                                    <Style TargetType="dxe:SpinEdit">
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True" Binding="{Binding DataContext.TempQuantityInspected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}">
                                                                <Setter Property="dxe:SpinEdit.Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Value="False" Binding="{Binding DataContext.TempQuantityInspected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}">
                                                                <Setter Property="dxe:SpinEdit.Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </dxe:SpinEdit.Style>
                                            </dxe:SpinEdit>-->

                                        </dxlc:LayoutGroup>
                                        <!--end-->
                                        <!--Comments-->
                                        <dxlc:LayoutGroup Grid.Column="1" Margin="2" Header="{DynamicResource ProductInspectionPointViewGridColComment}"  MaxHeight="120"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False">
                                            <dxe:TextEdit  Text="{Binding DataContext.Comments,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}" 
                                                           FontSize="23" 
                                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch"/>
                                            <!--<dxe:ComboBoxEdit Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="9" HorizontalAlignment="Stretch" ShowNullText="True" FontSize="23"
                                                                    Name="ReworkCause"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" IsTextEditable="False" DisplayMember="ReworkCause" ApplyItemTemplateToSelectedItem="True"
                                                                    Style="{DynamicResource ComboBoxEditStyle}" IsSynchronizedWithCurrentItem="True"             
                                                                    ItemsSource="{Binding DataContext.ReworkCauses,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                                                    SelectedItem="{Binding DataContext.SelectedReworkCauses, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}">
                                            </dxe:ComboBoxEdit>-->
                                        </dxlc:LayoutGroup>
                                        <!--end-->
                                    </Grid>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutGroup>
                            <!--Information-->
                            <dxlc:LayoutGroup Orientation="Horizontal" Margin="2" Grid.Column="1">
                                <dxlc:LayoutGroup Orientation="Vertical" Header="{DynamicResource ProductInspectionPointViewGridColInformation}"
                                                View="GroupBox"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                IsCollapsible="False"
                                                IsCollapsed="False"
                                          >


                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="110"/>
                                        </Grid.RowDefinitions>
                                        <dxlc:LayoutGroup Grid.Row="0">

                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup Grid.Row="0">
                                            <Label FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                                   Content="{Binding DataContext.ArticleDescription, RelativeSource={RelativeSource AncestorType= dxwui:WinUIDialogWindow},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                   ToolTip="{Binding DataContext.ArticleDescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                       />
                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup Grid.Row="1">
                                            <!--<Label Content="{Binding DataContext.ArticleDescription, RelativeSource={RelativeSource AncestorType= dxwui:WinUIDialogWindow},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>-->
                                            <dxe:ImageEdit
                                    ShowBorder="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ShowLoadDialogOnClickMode="Never" ShowMenu="False"
                                    Source="{Binding DataContext.InformationImage, RelativeSource={RelativeSource AncestorType= dxwui:WinUIDialogWindow},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup Orientation="Horizontal" Grid.Row="2" MaxHeight="110">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <dxlc:LayoutGroup Grid.Column="0" Margin="2" View="GroupBox" MaxHeight="110">
                                                    <dxlc:LayoutGroup.GroupBoxStyle>
                                                        <Style TargetType="dxlc:GroupBox">
                                                            <Setter Property="TitleVisibility" Value="Collapsed"/>
                                                        </Style>
                                                    </dxlc:LayoutGroup.GroupBoxStyle>
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="40"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <Label VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{DynamicResource ProductInspectionPointViewGridColWeight}" Grid.Row="0">

                                                        </Label>
                                                        <!--[rdixit][GEOS2-5851][23.01.2025]-->
                                                        <dxe:TextEdit FontSize="23" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                                                      Text="{Binding DataContext.Weight,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource WeightToWeightUnitConverter},RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"  
                                                                      ToolTip="{Binding DataContext.Weight,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource WeightToWeightUnitConverter},RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}" 
                                                                      Grid.Row="1"/>

                                                    </Grid>
                                                </dxlc:LayoutGroup>
                                                <dxlc:LayoutGroup Grid.Column="1" Margin="2" View="GroupBox" MaxHeight="110">
                                                    <dxlc:LayoutGroup.GroupBoxStyle>
                                                        <Style TargetType="dxlc:GroupBox">
                                                            <Setter Property="TitleVisibility" Value="Collapsed"/>
                                                        </Style>
                                                    </dxlc:LayoutGroup.GroupBoxStyle>
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="40"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <Label Content="{DynamicResource ProductInspectionPointViewGridColSize}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0">

                                                        </Label>
                                                        <TextBlock FontSize="23" Text="{Binding DataContext.Size,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                                                   ToolTip="{Binding DataContext.Size,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type dxlc:LayoutGroup}}}"
                                                                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>

                                                    </Grid>
                                                </dxlc:LayoutGroup>
                                            </Grid>
                                        </dxlc:LayoutGroup>
                                    </Grid>


                                </dxlc:LayoutGroup>
                            </dxlc:LayoutGroup>
                            <!--end-->
                        </Grid>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Horizontal" Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>


                            </Grid.ColumnDefinitions>

                            <Button 
                                    Grid.Column="1"
                                    
                      
                        Margin="0,0,0,0"
                        IsEnabled="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=IsPermissionEnabled}"
                        VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                        Command="{Binding EditProductInspectionAcceptButtonCommand}"
                        Content="Accept"/>
                            <Button  Grid.Column="2" Content="{DynamicResource Cancel}" 
                        Margin="0,0,0,0"
                        Command="{Binding EditProductInspectionCancelButtonCommand}" 
                       
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"/>

                        </Grid>
                    </dxlc:LayoutGroup>
