                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                        <Condition Binding="{Binding Row.JanuaryCircleVisibility}" Value="Visible"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderBrush" Value="Gray"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Background="{Binding Row.JanuaryBackColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue=gray}">
                                        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Visibility="{Binding Row.JanuaryShowButton, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Margin="0,0,0,0" Padding="0,0,0,0" FontSize="12"  Height="40"
        Background="{Binding Row.JanuaryButtonBackgroundColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Foreground="{Binding Row.JanuaryButtonForegroundColor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        FontWeight="{Binding Row.JanuaryFontWeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        TextAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Row.JanuaryWeekend, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                       VerticalAlignment="Center" Margin="0,10,5,0"/>
                            <Grid Width="70" Height="30" VerticalAlignment="Center" Margin="0,5,0,0" Visibility="{Binding Row.JanuaryCircleVisibility}">
                                <Ellipse Width="29" Height="29" Fill="{Binding Row.JanuaryFirstEllipseHtmlColor}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="22,0,0,0" Visibility="{Binding Row.JanuaryFirstEllipseVisibility}"/>
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="31,-2,0,0"  Visibility="{Binding Row.JanuaryFirstEllipseVisibility}"
                                           FontSize="14" Foreground="White" FontWeight="Bold" Text="{Binding Row.JanuaryFirstEllipse}"/>
                                <Ellipse Width="29" Height="29" Fill="{Binding Row.JanuarySecondEllipseHtmlColor}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="39,0,0,0" Visibility="{Binding Row.JanuarySecondEllipseVisibility}"/>
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="49,-2,0,0"  Visibility="{Binding Row.JanuarySecondEllipseVisibility}"
