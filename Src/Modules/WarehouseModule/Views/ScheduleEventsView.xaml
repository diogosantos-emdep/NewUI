                                Command="{Binding SaveDetailsCommand}"/>
                            <Button Content="Cancel" Style="{StaticResource PopupButtonStyle}"
                                Command="{Binding ClosePopupCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>
