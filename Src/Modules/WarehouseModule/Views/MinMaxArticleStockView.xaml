<UserControl x:Class="Emdep.Geos.Modules.Warehouse.Views.MinMaxArticleStockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:WarehouseCommon ="clr-namespace:Emdep.Geos.Modules.Warehouse"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
             xmlns:dxeh="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
             xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"

             mc:Ignorable="d" 
             Style="{DynamicResource UserControlStyle}"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Converters:WeightToWeightUnitConverter x:Key="WeightToWeightUnitConverter"/>
        <Converters:ByteToYesNoConverter x:Key="ByteToYesNoConverter"/>
        <Converters:EditGridCellDataToStringConverter x:Key="EditGridCellDataToStringConverter"/>
        <Converters:StockComparisonConverter x:Key="StockComparisonConverter"/>
    </UserControl.Resources>

        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Resources>
            <Style x:Key="myGroupBoxStyle" TargetType="{x:Type dxlc:GroupBox}">
                <Setter Property="MaximizeElementVisibility" Value="Visible" />
                <Setter Property="Width" Value="280" />
                <Setter Property="Height" Value="140" />
            </Style>
            <Style TargetType="{x:Type ve:AutoHideTray}">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <ve:psvStackPanel HorizontalAlignment="Right" />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Label Content="{DynamicResource Minmaxarticlestockview_MinMaxarticlestock}" Style="{StaticResource LabelTitleStyle}" Grid.Row="0" Grid.Column="0"/>

            
            <DockPanel Grid.Row="0" Grid.Column="1">

                <Grid HorizontalAlignment="Right" Width="Auto" Height="45" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>


                    
                <!-- Waresouse combobox section -->
                    <DockPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" >
                        <Image Style="{DynamicResource WarehouseImageStyle}" Width="24" Height="24" Margin="7,0,3,0" />
                        <TextBlock Text="{DynamicResource Warehouse}"  FontWeight="Bold" Margin="5,2,5,0" VerticalAlignment="Bottom" />
                    </DockPanel>

                    <dxe:ComboBoxEdit Name="CbeWareHouse" Style="{DynamicResource ComboBoxEditStyle}" Grid.Column="1" Width="150" Height="30"
                                      Margin="5,0,5,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsTextEditable="False"
                                      ItemsSource ="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=WarehouseList ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
                                      SelectedItem="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=Selectedwarehouse,UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMember="Name" ShowError="False" ShowErrorToolTip="False" >

                        <dxmvvm:Interaction.Triggers>
                            <dxmvvm:EventToCommand EventName="EditValueChanged"
                                               Command="{Binding CommandWarehouseEditValueChanged}" CommandParameter="{Binding ElementName=CbeWareHouse,Path=SelectedItem}"
                                              />
                        </dxmvvm:Interaction.Triggers>
                    </dxe:ComboBoxEdit>

                    <!-- Refresh Button -->

                <Button Content=" " Grid.Row="0" Grid.Column="2" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding RefreshWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=MinMaxArticleStockTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonRefresh}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource WareHouseRefreshButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Print Button -->

                <Button Content=" " Grid.Row="0" Grid.Column="3" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding PrintWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=MinMaxArticleStockTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonPrint}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource PrinterButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Export Button -->

                <Button Content=" " Grid.Row="0" Grid.Column="4" Height="40" Width="40" HorizontalAlignment="Right"  Command="{Binding ExportWarehouseArticleViewCommand}" CommandParameter="{Binding ElementName=MinMaxArticleStockTableView}" Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonExportToExcel}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource ExcelExportButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!--Save Button -->

                    <Button Content=" " Grid.Column="8" Focusable="False" 
                            Height="40" Width="40"  
                            HorizontalAlignment="Right"
                            Command="{Binding SaveArticleStockCommand}" 
                            CommandParameter="{Binding ElementName=WarehouseTableView}"
                            Padding="-4"
                            Margin="0,0,5,5">
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource Minmaxarticlestockview_Save}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource SaveButtonImageStyle}" 
                                       Height="28" Width="28"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                <dxg:GridControl Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed"
                 ItemsSource="{Binding DataContext.ArticlesList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                 FilterString="{Binding DataContext.MyFilterString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                 TextSearch.Text="{Binding DataContext.MyFilterString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 AllowLiveDataShaping="True"
                 SelectionMode="None" ImplyNullLikeEmptyStringWhenFiltering="True">

                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColReference}" FieldName="Reference" FilterPopupMode="CheckedList" MinWidth="100" Width="200" ReadOnly="True">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                     <Hyperlink x:Name="hyperlink" 
                                       TargetName="_blank"
                                       Command="{Binding DataContext.WarehouseViewReferenceHyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                       CommandParameter="{Binding ElementName=WarehouseTableView}" Style="{DynamicResource hyperlinkGridStyle}">
                                <InlineUIContainer>
                                    <TextBlock Text="{Binding Data.Reference}"  Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline"/>
                                </InlineUIContainer>
                            </Hyperlink>
                </TextBlock>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColDescription}" FieldName="Description" MinWidth="200" Width="400" FilterPopupMode="CheckedList" ReadOnly="True"/>
                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColFamily}" FieldName="Family.Value" 
          MinWidth="200" Width="100"
          ShowInColumnChooser="False" Visible="true" 
          ColumnFilterMode="DisplayText" FilterPopupMode="CheckedList" ReadOnly="True"/>
                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColCategory}" FieldName="ArticleCategory.Name" MinWidth="200" Width="200" FilterPopupMode="CheckedList" ReadOnly="True"/>
                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColObsolete}" 
           MinWidth="80" Width="80"
           ReadOnly="True"
           ShowInColumnChooser="False" Visible="True"
           ColumnFilterMode="DisplayText"
           FilterPopupMode="CheckedList"
           Binding="{Binding IsObsolete, Converter={StaticResource ByteToYesNoConverter}, Mode=TwoWay}">
                    </dxg:GridColumn>

                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColType}" FieldName="ArticlesType.Name" 
                    MinWidth="90" Width="100" 
                    ShowInColumnChooser="False" Visible ="True" 
                    ColumnFilterMode="DisplayText"
                    FilterPopupMode="CheckedList" ReadOnly="True"/>

                    <dxg:GridColumn Header="{DynamicResource WarehouseGridColStock}" FieldName="MyWarehouse.CurrentStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="true">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Label Width="Auto" Content="{Binding RowData.Row.MyWarehouse.CurrentStock}" HorizontalAlignment="Stretch" 
                           VerticalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="0 0 5 0" >
                                        <Label.Style>
                                            <Style TargetType="Label">
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Value="Red">
                                                                <Condition.Binding>
                                                                    <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                        <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                        <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                                    </MultiBinding>
                                                                </Condition.Binding>
                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="Red" />
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Value="Green">
                                                                <Condition.Binding>
                                                                    <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                        <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                        <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                                    </MultiBinding>
                                                                </Condition.Binding>
                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="Green" />
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Value="Yellow">
                                                                <Condition.Binding>
                                                                    <MultiBinding Converter="{Converters:CellBackgroundColorConverter}">
                                                                        <Binding Path="RowData.Row.MyWarehouse.CurrentStock" />
                                                                        <Binding Path="RowData.Row.MyWarehouse.MinimumStock" />
                                                                    </MultiBinding>
                                                                </Condition.Binding>
                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="Yellow" />
                                                        <Setter Property="Foreground" Value="Black" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Label.Style>
                                    </Label>
                                </Border>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn Header="{DynamicResource WarehousePriceValue}" 
                    FieldName="PriceWithSelectedCurrencySymbol" SortFieldName="Price"
                    FilterPopupMode="CheckedList" MinWidth="120" 
                    Width="150" AllowMoving="false" ShowInColumnChooser="False" ReadOnly="True">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ., Converter={StaticResource EditGridCellDataToStringConverter}, Mode=TwoWay}" TextAlignment="Right" Margin="0,0,5,0"/>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>

                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Transport}" FieldName="" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True">
                        <!--<dxg:GridColumn.CellTemplate>
            <DataTemplate>
                <dxe:ComboBoxEdit Name="StructureDocumentsEditor" ItemsSource="{Binding DataContext.LogisticList, RelativeSource={RelativeSource AncestorType=dxg:GridControl},UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch" IsTextEditable="False" ValidateOnTextInput="False" ValidateOnEnterKeyPressed="True" InvalidValueBehavior="AllowLeaveEditor"
                                          DisplayMember="Value" ValueMember="IdLookupValue" 
                                          AutoComplete="False" ImmediatePopup="True" IncrementalFiltering="True" 
                                  SelectedItem="{Binding RowData.Row.TransportType ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"  >                
                </dxe:ComboBoxEdit>
            </DataTemplate>
        </dxg:GridColumn.CellTemplate>-->
                    </dxg:GridColumn>
                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Freq/Y}" FieldName="MyWarehouse.Frequency" MinWidth="100" Width="100" FilterPopupMode="CheckedList" ReadOnly="True" />


                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Minstock}" FieldName="MyWarehouse.MinimumStock" MinWidth="100" Width="150" AllowEditing="true">
                        <dxg:GridColumn.CellStyle>
                            <Style TargetType="dxg:LightweightCellEditor">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource StockComparisonConverter}">
                                                <Binding Path="RowData.Row.MyWarehouse.MinimumStock"/>
                                                <Binding Path="RowData.Row.MyWarehouse.DynamicMinimumStock"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#ADD8E6"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </dxg:GridColumn.CellStyle>

                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" Mask="d"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>

                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Maxstock}" FieldName="MyWarehouse.MaximumStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="False" AllowEditing="true">
                        <dxg:GridColumn.CellStyle>
                            <Style TargetType="dxg:LightweightCellEditor">
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource StockComparisonConverter}">
                                                <Binding Path="RowData.Row.MyWarehouse.MaximumStock"/>
                                                <Binding Path="RowData.Row.MyWarehouse.DynamicMinimumStock"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="#ADD8E6"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </dxg:GridColumn.CellStyle>
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" Mask="d"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>

                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Dynamicmin}" FieldName="MyWarehouse.DynamicMinimumStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True" >
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" Mask="d"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn Header="{DynamicResource Minmaxarticlestockview_Dynamicmax}" FieldName="MyWarehouse.DynamicMaximumStock" FilterPopupMode="CheckedList" MinWidth="100" Width="150" ReadOnly="True" >
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" Mask="d"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>

                    <dxg:GridColumn Header="{DynamicResource SleepDays}" FieldName="ArticleSleepDays" FilterPopupMode="CheckedList" MinWidth="50" Width="70" ReadOnly="True" FixedWidth="True"
                    Fixed="Right" AllowEditing="False"
                    AllowMoving="false" ShowInColumnChooser="False">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <TextBlock x:Name="ArticleSleepDate" Text="{Binding RowData.Row.ArticleSleepDays}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Value="false">
                                                                <Condition.Binding>
                                                                    <MultiBinding Converter="{Converters:CellForeColorConverter}">
                                                                        <Binding  Path="RowData.Row.ArticleSleepDays"/>
                                                                        <Binding Source="{x:Static WarehouseCommon:WarehouseCommon.Instance}" Path="ArticleSleepDays" />
                                                                    </MultiBinding>
                                                                </Condition.Binding>
                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridControl.TotalSummary>
                        <dxg:GridSummaryItem x:Name="summary" FieldName="Name" SummaryType="Count" DisplayFormat="Total Count: {0}" Visible="True"   Alignment="Left"/>
                    </dxg:GridControl.TotalSummary>
                    <dxmvvm:Interaction.Behaviors>
                        <UIHelper:GridSelectingBehavior />
                    </dxmvvm:Interaction.Behaviors>
                    <dxg:GridControl.View>
                        <dxg:TableView x:Name="MinMaxArticleStockTableView"   
                       NavigationStyle="Cell"
                       RowDetailsVisibilityMode="Visible"
                       ShowHorizontalLines="True"
                       ShowSearchPanelMode="Always"
                       ShowColumnHeaders="True"                               
                       IsColumnChooserVisible="False"
                       VerticalScrollbarVisibility="Visible"
                       AllowFixedColumnMenu="False"
                       ShowFixedTotalSummary="True" 
                       SearchPanelHorizontalAlignment="Stretch"
                       ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"                               
                       AllowGrouping="False"
                       ShowGroupPanel="False" SearchColumns="Reference;Description"
                       ShowIndicator="False" AutoWidth="True"
                       FilterEditorShowOperandTypeIcon="True"
                       ShowCheckBoxSelectorColumn="False"                                                              
                       CheckBoxSelectorColumnWidth="45"
                       EnableImmediatePosting="True"
                       ShowCheckBoxSelectorInGroupRow="False"
                       AllowColumnFiltering="true" AllowEditing="True">
                            <dxg:TableView.Resources>
                                <DataTemplate x:Key="MinMaxArticleListReportPrintHeaderTemplate">
                                    <Grid Width="{Binding UsablePageWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="130" />
                                        </Grid.ColumnDefinitions>
                                        <dxe:TextEdit Text=" " Width="{Binding UsablePageWidth}" Grid.ColumnSpan="3" IsPrintingMode="True" Background="#333E5E" HorizontalAlignment="Stretch" 
                                              VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" Height="50" />
                                        <dxe:TextEdit Text="Min &amp; Max Articles Stock Report" IsPrintingMode="True" HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" Padding="12" Foreground="#FFFFFFFF" Style="{DynamicResource TextEdit20Style}" FontWeight="Bold" />
                                        <Image Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/GeosReportLogo.png" Height="50" Width="80"  dxp:ExportSettings.TargetType="Image" Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                                <DataTemplate x:Key="MinMaxArticleListReportPrintFooterTemplate">
                                    <dxe:TextEdit HorizontalContentAlignment="Center" 
                          Width="{Binding Path=UsablePageWidth, Mode=OneWay}" 
                          dxp:ExportSettings.TargetType="PageNumber" 
                          dxp:PageNumberExportSettings.Kind="NumberOfTotal" 
                          dxp:PageNumberExportSettings.Format="Page {0} of {1}" />
                                </DataTemplate>
                            </dxg:TableView.Resources>
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EventToCommand EventName="ShowFilterPopup"
                                       Command="{Binding CustomShowFilterPopupCommand}"
                                       PassEventArgsToCommand="True"/>

                                <dxmvvm:EventToCommand Command="{Binding TableViewLoadedCommand}"
                                           EventName="Loaded"
                                           PassEventArgsToCommand="True" />
                            </dxmvvm:Interaction.Behaviors>

                            <dxg:TableView.RowStyle>
                                <Style TargetType="{x:Type dxg:RowControl}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Row.IsObsolete}" Value="1">
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxg:TableView.RowStyle>

                        </dxg:TableView>

                    </dxg:GridControl.View>


                </dxg:GridControl>
            </Grid>
            </DockPanel>

        <dxlc:FlowLayoutControl Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                AllowLayerSizing="False"
                AllowMaximizedElementMoving="False"
                Background="Transparent"
                BreakFlowToFit="True"
                DragScrolling="True"
                MaximizedElementPosition="Right"
                VerticalAlignment="Stretch"
                Orientation="Horizontal"
                Padding="0"
                StretchContent="False">
            <dxmvvm:Interaction.Behaviors>
                <UIHelper:FlowLayoutControlForMinimiseMaximise />
            </dxmvvm:Interaction.Behaviors>

            <dxlc:GroupBox x:Name="WoDetails" Selector.IsSelected="True"
                           Style="{StaticResource myGroupBoxStyle}">
                <dxlc:GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel Margin="-5,0,0,0">
                            <TextBlock Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="{DynamicResource Information}" />
                        </DockPanel>
                    </DataTemplate>
                </dxlc:GroupBox.HeaderTemplate>
                <dxlc:GroupBox.ContentTemplate>
                    <DataTemplate>
                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="Auto"/>                                <ColumnDefinition Width="*"/>                            </Grid.ColumnDefinitions>                            <Grid.RowDefinitions>                                <RowDefinition Height="*"/>                                <RowDefinition Height="*"/>                                <RowDefinition Height="*"/>                            </Grid.RowDefinitions>                            <Label Content="{DynamicResource Transportfrequencyyearviewminimized_Plant}" Grid.Row="0" Grid.Column="0" Margin="3,0,0,0" Padding="2"  FontWeight="Bold" />                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="3,0,0,0" Padding="2"  Text="{Binding DataContext.SummarySitePlant.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"/>                            <Label Content="{DynamicResource Transportfrequencyyearviewminimized_Country}" Grid.Row="1" Grid.Column="0" Margin="3,0,0,0" Padding="2"  FontWeight="Bold"/>                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="2,0,0,0" Height="24">
                                <Image Source="{Binding DataContext.SummarySitePlant.CountryIconUrl, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    VerticalAlignment="Center" 
                                    Height="24" 
                                    Width="24"  
                                    Margin="2,0,0,0" />
                                <TextBlock Text="{Binding DataContext.SummarySitePlant.CountryName, RelativeSource={RelativeSource AncestorType=UserControl}}"  
                                        VerticalAlignment="Center" 
                                        Margin="5,0,0,0" />
                            </StackPanel>                            <Label Content="{DynamicResource Transportfrequencyyearviewminimized_Transport}" Grid.Row="2" Grid.Column="0" Margin="3,0,0,0" Padding="2"  FontWeight="Bold"/>                            <TextBlock Grid.Row="2" Grid.Column="1" Margin="3,0,0,0" Padding="2" Text="{Binding DataContext.SummaryFrequencies, RelativeSource={RelativeSource AncestorType=UserControl}}"  TextWrapping="WrapWithOverflow" Width="Auto" TextTrimming="CharacterEllipsis" />                        </Grid>
                    </DataTemplate>
                </dxlc:GroupBox.ContentTemplate>

                <dxlc:GroupBox.MaximizedContentTemplate>
                    <DataTemplate>
                        <dxg:GridControl Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                         ItemsSource="{Binding DataContext.ArticlesList,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                         FilterString="{Binding DataContext.MyFilterString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" 
