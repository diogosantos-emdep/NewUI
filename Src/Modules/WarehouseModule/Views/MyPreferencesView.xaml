                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--Scale Model-->
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource ScaleModel}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                   Style="{StaticResource TextBlock16Style}"/>

                        <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                          HorizontalAlignment="Left" 
                                          ShowError="False" ShowErrorToolTip="False" 
                                          Style="{DynamicResource ComboBoxEditStyle}"
                                          Width="215" Height="30" 
                                          VerticalAlignment="Center" 
                                          ItemsSource="{Binding ScaleModelList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsTextEditable="False"
                                          SelectedItem="{Binding SelectedScaleModel,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }">
                        </dxe:ComboBoxEdit>

                        <!--COM Settings-->
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   Text="{DynamicResource COMSettings}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                   Style="{StaticResource TextBlock16Style}"/>

                        <!--Port Name-->
                        <TextBlock Text="{DynamicResource PortName}" Grid.Row="6" Grid.Column="1" 
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock14Style}">
                        </TextBlock>
                        <dxe:ComboBoxEdit Grid.Row="6" Grid.Column="2" 
                                          Height="30" Width="140" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center"
                                          ShowError="False" ShowErrorToolTip="False"
                                          IsTextEditable="False"
                                          ItemsSource="{Binding PortList}"
                                          SelectedItem="{Binding SelectedPort,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                          >
                            <dxe:ComboBoxEdit.Style>
                                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScaleModel}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False" ></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:ComboBoxEdit.Style>

                        </dxe:ComboBoxEdit>

                        <!--Baud Rate-->
                        <TextBlock Text="{DynamicResource BaudRate}" Grid.Row="8" Grid.Column="1"
                                   Style="{StaticResource TextBlock14Style}"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" >
                        </TextBlock>

                        <dxe:ComboBoxEdit Grid.Row="8" Grid.Column="2" 
                                          Height="30" Width="140" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center"
                                          ShowError="False" ShowErrorToolTip="False"
                                          IsTextEditable="False"
                                          ItemsSource="{Binding SupportedBaudRates}"
                                          SelectedItem="{Binding SelectedBaudRate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">

                            <dxe:ComboBoxEdit.Style>
                                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScaleModel}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False" ></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:ComboBoxEdit.Style>
                        </dxe:ComboBoxEdit>

                        <!--Parity-->
                        <TextBlock Text="{DynamicResource Parity}" Grid.Row="10" Grid.Column="1" 
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock14Style}">
                        </TextBlock>
                        <dxe:ComboBoxEdit Grid.Row="10" Grid.Column="2" Width="140"
                                      ShowError="False" ShowErrorToolTip="False" 
                                      Height="30" VerticalAlignment="Center" 
                                      IsTextEditable="False" HorizontalAlignment="Left" 
                                      ItemsSource="{Binding ParityList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedParity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      >
                            <dxe:ComboBoxEdit.Style>
                                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScaleModel}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False" ></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:ComboBoxEdit.Style>
                        </dxe:ComboBoxEdit>

                        <!--Data Bits-->
                        <TextBlock Text="{DynamicResource DataBits}" 
                                   Grid.Row="12" Grid.Column="1" 
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock14Style}">
                        </TextBlock>
                        <dxe:ComboBoxEdit Grid.Row="12" Grid.Column="2" 
                                          Height="30" Width="140" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center"
                                          ShowError="False" ShowErrorToolTip="False"
                                          IsTextEditable="False"
                                          ItemsSource="{Binding SupportedDataBits}"
                                          SelectedItem="{Binding SelectedDataBit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            <dxe:ComboBoxEdit.Style>
                                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScaleModel}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False" ></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:ComboBoxEdit.Style>
                        </dxe:ComboBoxEdit>

                        <!--Stop Bits-->
                        <TextBlock Text="Stop Bits"
                               Grid.Row="14" Grid.Column="1" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Style="{StaticResource TextBlock14Style}">
                        </TextBlock>
                        <dxe:ComboBoxEdit Grid.Row="14" Grid.Column="2" 
                                          Height="30" Width="140" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center"
                                          ShowError="False" ShowErrorToolTip="False"
                                          IsTextEditable="False"
                                          ItemsSource="{Binding StopBitsList}"
                                          SelectedItem="{Binding SelectedStopBit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            <dxe:ComboBoxEdit.Style>
                                <Style TargetType="{x:Type dxe:ComboBoxEdit}">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScaleModel}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False" ></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </dxe:ComboBoxEdit.Style>
                        </dxe:ComboBoxEdit>
                    </Grid>
                </Border>
            </Grid>
            <!--#endregion Packing-->

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="{DynamicResource Accept}"
                        Grid.Column="0"
                        Command="{Binding MyPreferencesViewAcceptButtonCommand}"
                        Height="30"
                        Width="100"
                        Style="{DynamicResource Button16Style}"
                        VerticalAlignment="Bottom" />

                <Button Content="{DynamicResource Cancel}"
                        Grid.Column="2"
                        Command="{Binding MyPreferencesViewCancelButtonCommand}" 
                        Height="30"
                        Width="100"
                        Style="{DynamicResource Button16Style}"
                        VerticalAlignment="Bottom" />

            </Grid>



        </Grid>
    </ScrollViewer>
</dxwui:WinUIDialogWindow>