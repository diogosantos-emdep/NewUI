<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Warehouse.Views.MyPreferencesView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"    
                        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
                        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                        xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.Warehouse.ViewModels"
                        xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
                        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                        xmlns:WarehouseCommon ="clr-namespace:Emdep.Geos.Modules.Warehouse"
                        xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                        xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
                        xmlns:sys="clr-namespace:System;assembly=mscorlib"
                        xmlns:io="clr-namespace:System.IO.Ports;assembly=System"
                        mc:Ignorable="d" 
                        Title="{DynamicResource CrmMainViewModelMyPreferences}"
                        TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding MyPreferencesViewCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--#region Warehouse-->

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{DynamicResource MyPreferencesWareHouse}" 
                               HorizontalAlignment="Center"  VerticalAlignment="Center" 
                               FontWeight="Bold" FontSize="20"
                               Style="{StaticResource TextBlock14Style}">
                    </TextBlock>
                    <Border BorderBrush="{DynamicResource BorderBrushColor}" Grid.Row="2" 
                            BorderThickness="1" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource MyPreferencesName}" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                       Style="{StaticResource TextBlock14Style}">
                            </TextBlock>

                            <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1" 
                                              HorizontalAlignment="Center"  
                                              ShowError="False" ShowErrorToolTip="False" 
                                              Style="{DynamicResource ComboBoxEditStyle}"
                                              Width="200" Height="30" 
                                              VerticalAlignment="Top" 
                                              ItemsSource ="{Binding Source={x:Static WarehouseCommon:WarehouseCommon.Instance}, Path=WarehouseList ,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
                                              DisplayMember="Name" IsTextEditable="False" 
                                              SelectedItem="{Binding Selectedwarehouse,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            </dxe:ComboBoxEdit>

                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{DynamicResource Preference_Currency}" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                       Style="{StaticResource TextBlock14Style}">
                            </TextBlock>

                            <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="1" 
                                              HorizontalAlignment="Center"  
                                              ShowError="False" ShowErrorToolTip="False" 
                                              Style="{DynamicResource ComboBoxEditStyle}"
                                              Width="200" Height="30" 
                                              VerticalAlignment="Top" 
                                              ItemsSource ="{Binding Currencies,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"
                                              DisplayMember="Name" IsTextEditable="False" 
                                              SelectedItem="{Binding SelectedCurrency,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            </dxe:ComboBoxEdit>

                        </Grid>
                    </Border>
                </Grid>

                <!--#endregion Warehouse-->

                <!--#region Paper Printer-->

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="{DynamicResource PaperPrinter}" 
                               HorizontalAlignment="Center"  VerticalAlignment="Center" 
                               FontWeight="Bold" FontSize="20"
                               Style="{StaticResource TextBlock14Style}">
                    </TextBlock>

                    <Border BorderBrush="{DynamicResource BorderBrushColor}" 
                            Grid.Row="2"
                            BorderThickness="1"
                            HorizontalAlignment="Center">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{DynamicResource PrinterName}" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                       Style="{StaticResource TextBlock14Style}">
                            </TextBlock>

                            <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1" 
                                              HorizontalAlignment="Center" VerticalAlignment="Top" 
                                              ShowError="False" ShowErrorToolTip="False" 
                                              Style="{DynamicResource ComboBoxEditStyle}"
                                              Width="200" Height="30" 
                                              ItemsSource="{Binding PrinterList}"
                                              IsTextEditable="False" 
                                              SelectedItem="{Binding DefaultPrinter,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            </dxe:ComboBoxEdit>
                        </Grid>
                    </Border>
                </Grid>

                <!--#endregion Paper Printer-->

                <!--#region Picking-->
                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="{DynamicResource Picking}" 
                               HorizontalAlignment="Center"  VerticalAlignment="Center" 
                               FontWeight="Bold" FontSize="20"
                               Style="{StaticResource TextBlock14Style}">
                    </TextBlock>

                    <Border BorderBrush="{DynamicResource BorderBrushColor}" 
                            Grid.Row="2" 
                            BorderThickness="1" HorizontalAlignment="Center">
                        <Grid >
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions >
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{DynamicResource StartTimer}" 
                                       HorizontalAlignment="Left" VerticalAlignment="Center" 
                                       Width="130"
                                       Style="{StaticResource TextBlock14Style}">
                            </TextBlock>
                            <Border  Width="70" Height="30" 
                                     Grid.Column="2" Grid.Row="1"
                                     HorizontalAlignment="Right">
                                <dxe:ToggleSwitch IsChecked="{Binding IsStartTimer}" IsThreeState="False" Style="{DynamicResource ToggleSwitchlForegroundStyle}"></dxe:ToggleSwitch>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
                <!--#endregion Picking-->

            </Grid>

