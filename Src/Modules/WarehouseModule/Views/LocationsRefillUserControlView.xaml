        <!--Width="365"-->
        <Grid ShowGridLines="False" Grid.Row="3" HorizontalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="150" Height="40" 
                    HorizontalAlignment="Center" 
                    Content="{DynamicResource Back}"
                    Command="{Binding BackButtonCommand}" 
                    FontSize="{StaticResource FontSize24}" FontWeight="Bold" IsEnabled="{Binding IsBackButtonEnable}"/>

            <!--Margin="0,0,30,0"-->
            <Button Grid.Column="2" Width="150" Height="40" 
                    HorizontalAlignment="Center" 
                    Content="{DynamicResource LocationsRefillCancel}"
                    Command="{Binding CommandCancelButton}" 
                    FontSize="{StaticResource FontSize24}" FontWeight="Bold" />

            <!--Margin="0,0,30,0"-->
            <Button Grid.Column="4" Width="150" Height="40" HorizontalAlignment="Center"
