<UserControl x:Class="Emdep.Geos.Modules.Warehouse.Views.RefundWorkOrderViewUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Warehouse.Views"
             xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
             xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxeh="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Style="{DynamicResource UserControlStyle}"
             mc:Ignorable="d"  Focusable="True" IsTabStop="True"  
             UIHelper:FocusExtension.IsFocused="{Binding FocusUserControl}"
             Height="{Binding WindowHeight,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">

    <UserControl.Resources>
        <UIConverter:InvertedVisibilityConverter x:Key="invertedVisibilityConverter"/>
        <UIConverter:DetailButtonVisibilityConverter x:Key="detailButtonVisibilityConverter"/>

        <Style TargetType="dxlc:GroupBox" >
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <DataTemplate x:Key="rowIndicatorContentTemplate">
            <Border x:Name="errorIndicatorBorder" Background="Transparent">
                <ContentControl Name="iconPresenter">
                    <Border />
                </ContentControl>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IndicatorState}" Value="Focused">
                    <Setter Property="ContentTemplate" Value="{dxi:ThemeResource {dxgt:RowIndicatorThemeKey ResourceKey=FocusedIconTemplate}}" TargetName="iconPresenter" />
                    <Setter Property="ContentTemplate" TargetName="iconPresenter">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{DynamicResource IndicatorImageStyle}" Width="50" Height="50"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <ControlTemplate x:Key="{dxet:TrackBarEditThemeKey ResourceKey=PanelLeftSideTemplate, IsThemeIndependent=True}">
            <Border Background="{Binding DataContext.TrackBarFgColor,UpdateSourceTrigger=PropertyChanged}" />
        </ControlTemplate>

        <ControlTemplate x:Key="{dxet:TrackBarEditThemeKey ResourceKey=PanelRightSideTemplate, IsThemeIndependent=True}">
            <Border Background="Gray" />
        </ControlTemplate>

        <Style x:Key="{dxet:TrackBarEditThemeKey ResourceKey=PanelRightSideStyle}" TargetType="ContentControl">
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Template" Value="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=PanelRightSideTemplate}}" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
        </Style>

        <Style x:Key="{dxet:TrackBarEditThemeKey ResourceKey=PanelLeftSideStyle}" TargetType="ContentControl">
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Template" Value="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=PanelLeftSideTemplate}}" />
            <Setter Property="UseLayoutRounding" Value="{Binding Path=(dxe:BaseEdit.OwnerEdit).UseLayoutRounding}" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
        </Style>

        <dxe:GridLengthConverter x:Key="GridLengthConverter" />

        <ControlTemplate x:Key="{dxet:TrackBarEditThemeKey ResourceKey=PanelHorizontalTemplate,IsThemeIndependent=True}" TargetType="dxe:RangeEditBasePanel">
            <Grid x:Name="root">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <!--<RowDefinition Height="10" />-->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftButton" Width="Auto" />
                    <ColumnDefinition x:Name="leftColumn" Width="{Binding Path=(dxe:RangeEditBaseInfo.LayoutInfo).LeftSidePosition, Converter={StaticResource GridLengthConverter}}" />
                    <ColumnDefinition x:Name="centerColumn" Width="Auto" />
                    <ColumnDefinition x:Name="rightColumn" Width="{Binding Path=(dxe:RangeEditBaseInfo.LayoutInfo).RightSidePosition, Converter={StaticResource GridLengthConverter}}" />
                    <ColumnDefinition x:Name="rightButton" Width="Auto" />
                </Grid.ColumnDefinitions>
                <ContentControl  x:Name="back" Grid.Row="1"  Height="15" Grid.Column="1" Grid.ColumnSpan="3" 
                                Style="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=HorizontalBackgroundStyle}}" 
                                dxeh:ControlHelper.ShowFocusedState="{Binding Path=(dxe:BaseEdit.OwnerEdit).IsKeyboardFocusWithin}">
                </ContentControl>
                <UIHelper:CustomTickBar x:Name="PART_BottomTick"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Placement="Top"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=TickBarStyle,IsThemeIndependent=True}}"/>

                <RepeatButton x:Name="left" Grid.Column="1" Grid.Row="1" Height="5"
                              Style="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=PanelLeftSideStyle}}" 
                              Command="{Binding Path=(dxe:BaseEdit.OwnerEdit).DecrementLargeCommand}" />
                <Thumb x:Name="PART_Thumb" Grid.Column="2" Grid.Row="1" >
                    <Thumb.Style>
                        <Style TargetType="Thumb">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Ellipse Height="20" Width="20">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding DataContext.TrackBarFgColor,UpdateSourceTrigger=PropertyChanged}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Thumb.Style>
                </Thumb>
                <RepeatButton x:Name="right" Grid.Column="3" Grid.Row="1" Height="5" Margin="0,0,5,0"
                              Style="{DynamicResource {dxet:TrackBarEditThemeKey ResourceKey=PanelRightSideStyle}}" 
                              Command="{Binding Path=(dxe:BaseEdit.OwnerEdit).IncrementLargeCommand}" />
            </Grid>
        </ControlTemplate>

        <Style TargetType="dxg:HeaderContentControl" x:Key="MyHeaderStyle">
            <Setter Property="TextBlock.FontSize" Value="30"/>
        </Style>

        <Style TargetType="dxe:ToggleSwitch">
            <Setter Property="ToggleSwitchWidth" Value="{Binding RelativeSource={RelativeSource Self}, Path=Parent.ActualWidth}"/>
            <Setter Property="ToggleSwitchHeight" Value="{Binding RelativeSource={RelativeSource Self}, Path=Parent.ActualHeight}"/>
            <Setter Property="ContentPlacement" Value="Inside"/>
            <Setter Property="CheckedStateContent" Value="ON"/>
            <Setter Property="UncheckedStateContent" Value="OFF"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="95"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <dxe:TrackBarEdit Grid.Row="0" Minimum="0" Maximum="2" TickFrequency="1" IsReadOnly="True"
                          SmallStep="1" LargeStep="1" Cursor="Arrow"
                          EditValue="{Binding TrackBarEditvalue,UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Stretch"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2.3*"></ColumnDefinition>
                <ColumnDefinition Width="AUTO"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <dxlc:LayoutGroup Header="{DynamicResource RefundWorkOrder}" 
                              HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                              View="GroupBox"
                              IsCollapsible="False" IsCollapsed="False" Grid.Row="0" Grid.Column="0" >
                <dxlc:LayoutGroup.GroupBoxStyle >
                    <Style TargetType="{x:Type dxlc:GroupBox}">
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </dxlc:LayoutGroup.GroupBoxStyle>
                <TextBlock Grid.Row="0" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding PickingOt.Code}" VerticalAlignment="Center" HorizontalAlignment="Stretch" ></TextBlock>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="{DynamicResource RefundWorkOrderViewCustomer}" 
                              HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" 
                              View="GroupBox"
                              Margin="5 0 0 0"
                              IsCollapsible="False" IsCollapsed="False" Grid.Row="0" Grid.Column="1" >
                <dxlc:LayoutGroup.GroupBoxStyle >
                    <Style TargetType="{x:Type dxlc:GroupBox}">
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </dxlc:LayoutGroup.GroupBoxStyle>
                <TextBlock Grid.Row="0" TextAlignment="Center" TextWrapping="Wrap"  FontSize="24" Text="{Binding PickingOt.Quotation.Site.Name}" VerticalAlignment="Center" HorizontalAlignment="Stretch" ></TextBlock>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="{DynamicResource RefundWorkOrderViewProducer}" 
                              HorizontalAlignment="Stretch" 
                              Visibility="{Binding IsProducerVisible}" 
                              View="GroupBox"
                              Margin="5 0 0 0"
                              VerticalAlignment="Stretch"
                              IsCollapsible="False" IsCollapsed="False" Grid.Row="0" Grid.Column="2" >
                <dxlc:LayoutGroup.GroupBoxStyle >
                    <Style TargetType="{x:Type dxlc:GroupBox}">
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </dxlc:LayoutGroup.GroupBoxStyle>

                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{Binding PickingOt.CountryGroup.HtmlColor}" >
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" FontSize="24" Text="{Binding PickingOt.CountryGroup.Name}"
                               VerticalAlignment="Center"
                               Background="{Binding PickingOt.CountryGroup.HtmlColor}" 
                               Foreground="{Binding PickingOt.CountryGroup.HtmlColor,Converter={UIConverter:ForegroundColorConverter}}"/>
                </Grid>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="{DynamicResource RefundWorkOrderViewStatus}" 
                              HorizontalAlignment="Stretch"  
                              VerticalAlignment="Stretch" 
                              View="GroupBox"
                              Margin="5 0 0 0" 
                              IsCollapsible="False" IsCollapsed="False" Grid.Row="0" Grid.Column="3" >
                <dxe:ProgressBarEdit ShowBorder="False" Maximum="100" Minimum="0" HorizontalContentAlignment="Center"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="20" EditValue="{Binding PickingOt.Status}" ContentDisplayMode="Value" DisplayFormatString="{}{0}%"/>
            </dxlc:LayoutGroup>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <dxlc:LayoutGroup Orientation="Vertical" Grid.Row="0">
                <dxlc:LayoutGroup HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  View="GroupBox" IsCollapsible="False" IsCollapsed="False">
                    <Label Margin="-11" Padding="-20" Height="140"
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center" IsEnabled="False"
                            FontSize="120" 
                            Content="{Binding LocationName,UpdateSourceTrigger=PropertyChanged}"
                            FontWeight="Bold"
                            Focusable="False"
                            Foreground="{Binding FgColorLocation,UpdateSourceTrigger=PropertyChanged}"
                            Background="{Binding BgColorLocation,UpdateSourceTrigger=PropertyChanged}"/>

                    <dxlc:LayoutGroup.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{DynamicResource RefundWorkOrderViewPickingPoint}" FontWeight="Bold" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1">
                                    <Image x:Name="errorImage"  Height="24" Width="24" Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/error.png" Visibility="{Binding DataContext.IsWrongLocationErrorVisible,RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" DockPanel.Dock="Left"/>
                                    <TextBlock Name="errorText" Text="{Binding DataContext.WrongLocation, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0,0,0" Foreground="#FF0000" DockPanel.Dock="Right" />
                                </DockPanel>
                            </Grid>
                        </DataTemplate>
                    </dxlc:LayoutGroup.HeaderTemplate>
                </dxlc:LayoutGroup>


                <dxlc:LayoutGroup  View="GroupBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                    <dxlc:LayoutGroup.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{DynamicResource RefundWorkOrderViewItems}" FontWeight="Bold" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1">
                                    <Image x:Name="errorImage"  Height="24" Width="24" Source="/Emdep.Geos.Modules.Warehouse;component/Assets/Images/error.png" 
                                           Visibility="{Binding DataContext.IsWrongItemErrorVisible,RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}"
                                           DockPanel.Dock="Left"/>
                                    <TextBlock Name="errorText" 
                                               Text="{Binding DataContext.WrongItem, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox}}" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center" 
                                               FontWeight="Bold" Margin="5,0,0,0" Foreground="#FF0000" DockPanel.Dock="Right" />
                                </DockPanel>
                            </Grid>
                        </DataTemplate>
                    </dxlc:LayoutGroup.HeaderTemplate>

                    <UIHelper:GridControlWithoutClickEx AllowLiveDataShaping ="True" HorizontalAlignment="Stretch" 
                                                        ItemsSource="{Binding ReferenceArticlesList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                        CurrentItem="{Binding SelectedPickingMaterial, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                        VerticalAlignment="Stretch"
                                                        SelectionMode="None" MaxHeight="800" Width="AUTO">
                        <dxg:GridColumn Header="{DynamicResource RefundWorkOrderViewItemColumn}" 
                                        Width="15*" 
                                        AllowColumnFiltering ="False" 
                                        AllowSorting="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding RowData.Row.RevisionItem.NumItem}" />
                                        <TextBlock Text="{Binding RowData.Row.ProductComponentNumber}" />
                                    </StackPanel>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                            <!--<dxg:GridColumn.EditSettings>   FieldName="RevisionItem.NumItem" 
                                <dxe:TextEditSettings HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </dxg:GridColumn.EditSettings>-->
                        </dxg:GridColumn>

                        <!--<dxg:GridColumn>
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding RowData.Row.Address.AddressName, Mode=OneWay}" />
                                        <TextBlock Text="{Binding RowData.Row.Address.PostalCode, Mode=OneWay}" />
                                    </StackPanel>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>-->

                        <dxg:GridColumn Header="{DynamicResource RefundWorkOrderViewReferenceColumn}" FieldName="Reference" Width="45*" AllowColumnFiltering ="False" AllowSorting="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" Margin="10 0 0 0">
                                        <Hyperlink x:Name="hyperlink"
                                                   TargetName="_blank"
                                                   Command="{Binding DataContext.HyperlinkClickCommand,RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                   CommandParameter="{Binding RowData.Row}" Style="{DynamicResource hyperlinkGridStyle}">
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Data.Reference}" Style="{DynamicResource HyperlinkTextBlock}" TextDecorations="Underline" />
                                            </InlineUIContainer>
                                        </Hyperlink>
                                     </TextBlock>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <dxg:GridColumn Header="{DynamicResource RefundWorkOrderViewDateDNColumn}" Width="27*" AllowColumnFiltering ="False" AllowSorting="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding RowData.Row.UploadedIn, StringFormat=d, ConverterCulture={x:Static sysglb:CultureInfo.CurrentCulture}}" Grid.Row="0" HorizontalAlignment="Left"></TextBlock>
                                        <TextBlock Text="{Binding RowData.Row.WarehouseDeliveryNote.Code}" Grid.Row="1" HorizontalAlignment="Right" FontSize="18" Margin="0 0 5 0"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <dxg:GridColumn Header="{DynamicResource RefundWorkOrderViewOtyColumn}" Width="18*" AllowColumnFiltering ="False" AllowSorting="False">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding RowData.Row.DownloadQuantity}" Grid.Row="0" HorizontalAlignment="Right"></TextBlock>
                                        <TextBlock Text="{Binding RowData.Row.RevisionItem.Quantity}" Grid.Row="1" HorizontalAlignment="Right" FontSize="18" Margin="0 0 5 0"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <UIHelper:GridControlWithoutClickEx.View>
                            <dxg:TableView x:Name="ItemsTableView"
                                           ShowGroupPanel="False"
                                           NavigationStyle="Row"
                                           ShowColumnHeaders="True"
                                           ShowIndicator="False" 
                                           AutoWidth="True" 
                                           RowMinHeight="60" 
                                           FontSize="35" 
                                           IsColumnMenuEnabled="False"
                                           SearchColumns="False"
                                           HorizontalScrollbarVisibility="Auto"
                                           VerticalScrollbarVisibility="Auto"
                                           RowIndicatorContentTemplate="{StaticResource rowIndicatorContentTemplate}"
                                           IndicatorWidth="60" IsEnabled="True"
                                           FocusedRow="{Binding SelectedPickingMaterial, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                           IsDetailButtonVisibleBinding="{Binding Row.ScanSerialNumbers, Converter={StaticResource detailButtonVisibilityConverter}}">
                                <dxg:TableView.RowStyle>
                                    <Style TargetType="dxg:RowControl">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=DataContext.DownloadQuantity}" Value="0">
                                                <Setter Property="Background" Value="Green"/>
                                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                            </DataTrigger>
                                            <Trigger Property="dxg:DataViewBase.IsFocusedRow" Value="True">
                                                <Setter Property="Background" Value="{Binding Path=View.DataContext.OnFocusBgColor,UpdateSourceTrigger=PropertyChanged}" />
                                                <Setter Property="Foreground" Value="{Binding Path=View.DataContext.OnFocusFgColor,UpdateSourceTrigger=PropertyChanged}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:TableView.RowStyle>
                            </dxg:TableView>
                        </UIHelper:GridControlWithoutClickEx.View>

                        <UIHelper:GridControlWithoutClickEx.DetailDescriptor>
                            <dxg:DataControlDetailDescriptor Margin="20 0 0 0" ItemsSourcePath="ScanSerialNumbers" ParentPath="MasterItem" x:Name="detail1">
                                <dxg:DataControlDetailDescriptor.DataControl>
                                    <dxg:GridControl CurrentItem="{Binding SelectedSerialNumber, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                        <dxg:GridColumn Header="{DynamicResource SerialNumbers}" FieldName="Code" AllowSorting="False" AllowColumnFiltering="False" />
                                        <dxg:GridControl.View>
                                            <!--DetailHeaderContent="DataControlDetailDescriptor"-->
                                            <dxg:TableView AutoWidth="True"
                                                           VerticalScrollbarVisibility="Auto" 
                                                           ShowGroupPanel="False" 
                                                           NavigationStyle="Row"
                                                           AllowEditing="False"
                                                           ShowTotalSummary="True"
                                                           ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"
                                                           ColumnHeaderContentStyle="{StaticResource MyHeaderStyle}">
                                                <dxg:TableView.RowStyle>
                                                    <Style TargetType="dxg:RowControl">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=DataContext.IsScanned}" Value="True">
                                                                <Setter Property="Background" Value="Green"/>
                                                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </dxg:TableView.RowStyle>
                                            </dxg:TableView>
                                        </dxg:GridControl.View>
                                    </dxg:GridControl>
                                </dxg:DataControlDetailDescriptor.DataControl>
                            </dxg:DataControlDetailDescriptor>
                        </UIHelper:GridControlWithoutClickEx.DetailDescriptor>
                    </UIHelper:GridControlWithoutClickEx>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Horizontal"  Grid.Row="0"  Grid.Column="2"
                              HorizontalAlignment="Stretch"  
                              VerticalAlignment="Stretch" 
                              Header="{DynamicResource RefundWorkOrderViewInformation}" 
                              View="GroupBox" IsCollapsible="False" IsCollapsed="False">

                <Grid Margin="5,15,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding IsInformationVisible}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock HorizontalAlignment="Stretch" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Center" Width="370" Height="150" Text="{Binding SelectedPickingMaterial.Description}" FontSize="24" FontWeight="Bold" />
                    <Image Source="{Binding ArticleImage,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0"/>

                    <DockPanel Margin="0,2,0,0" Grid.Row="2" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                            <Border Height="80" Width="175" Background="{Binding TotalStockBgColor,UpdateSourceTrigger=PropertyChanged}" BorderThickness="1" BorderBrush="Gray" >
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{DynamicResource RefundWorkOrderViewTotalStock}" TextBlock.Foreground="{Binding TotalStockFgColor}" HorizontalAlignment="Center" Height="30" FontSize="19"/>
                                    <TextBlock Text="{Binding TotalCurrentItemStock,UpdateSourceTrigger=PropertyChanged}" TextBlock.Foreground="{Binding TotalStockFgColor}" Height="50" HorizontalAlignment="Center"  FontSize="35" FontWeight="Bold" />
                                </StackPanel>
                            </Border>
                            <dxe:ProgressBarEdit Minimum="0" Maximum="{Binding ProgressbarArticleStock.ArticleStockForAllLocation,Mode=OneWay}" Value="{Binding ProgressbarArticleStock.AvgStock,Mode=OneWay}" FontSize="15" Width="175" Margin="0,5,0,0" ShowBorder="False" FontWeight="SemiBold"  IsPercent="True" DisplayFormatString="p0" ContentDisplayMode="Value"></dxe:ProgressBarEdit>
                        </StackPanel>
                        <StackPanel  Orientation="Vertical" Margin="5,0,0,0" >
                            <Border Height="80" Width="175" Background="{Binding LocationStockBgColor,UpdateSourceTrigger=PropertyChanged}" BorderThickness="1" BorderBrush="Gray"  Margin="5,0,0,0" >
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{DynamicResource RefundWorkOrderViewLocationStock}" HorizontalAlignment="Center" Height="30" FontSize="19" TextBlock.Foreground="{Binding LocationStockFgColor}"/>
                                    <TextBlock Text="{Binding ProgressbarLocationStock.LocationStock,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Height="50" FontSize="35" FontWeight="Bold" 
                                           TextBlock.Foreground="{Binding LocationStockFgColor}" />
                                </StackPanel>
                            </Border>
                            <dxe:ProgressBarEdit ShowBorder="False"  Width="175" Value="{Binding ProgressbarLocationStock.LocationStock,Mode=OneWay}" Minimum="0"  Maximum="{Binding ProgressbarLocationStock.MaximumStock,Mode=TwoWay}" FontSize="15" FontWeight="SemiBold"  Margin="0,5,-5,0" IsPercent="True" DisplayFormatString="p0" ContentDisplayMode="Value"></dxe:ProgressBarEdit>
                        </StackPanel>
                    </DockPanel>
                </Grid>

                <dxm:MapControl Name="mapControl" Margin="-10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding IsInformationVisible, Converter={StaticResource invertedVisibilityConverter}}">

                    <dxm:MapControl.ScalePanelOptions>
                        <dxm:ScalePanelOptions Visible="False" />
                    </dxm:MapControl.ScalePanelOptions>
                    <dxm:MapControl.ZoomTrackbarOptions>
                        <dxm:ZoomTrackbarOptions Visible="False" />
                    </dxm:MapControl.ZoomTrackbarOptions>
                    <dxm:MapControl.ScrollButtonsOptions>
                        <dxm:ScrollButtonsOptions Visible="False" />
                    </dxm:MapControl.ScrollButtonsOptions>
                    <dxm:MapControl.CoordinatesPanelOptions>
                        <dxm:CoordinatesPanelOptions Visible="False" />
                    </dxm:MapControl.CoordinatesPanelOptions>

                    <dxm:VectorLayer x:Name="DataLayer" EnableSelection="false">
                        <dxm:SvgFileDataAdapter FileUri="{Binding SvgUri, Mode=OneWay , UpdateSourceTrigger=PropertyChanged}" 
                                                BoundaryPoint1="3.0549583994941538,-176.15739521873573" 
                                                BoundaryPoint2="84.893298751861167,4.9498408125624227"/>
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand EventName="DataLoaded" Command="{Binding VectorLayerDataLoadedCommand}"
                                           CommandParameter="{Binding ElementName=mapControl}" />
                        </dxmvvm:Interaction.Behaviors>
                    </dxm:VectorLayer>

                    <dxm:VectorLayer x:Name="vectorLayer">

                        <dxm:ListSourceDataAdapter DataSource="{Binding MapItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EventToCommand EventName="CustomizeMapItem" Command="{Binding CustomizeMapItemCommand}" PassEventArgsToCommand="True" />
                            </dxmvvm:Interaction.Behaviors>

                            <dxm:ListSourceDataAdapter.Mappings>
                                <dxm:MapItemMappingInfo Latitude="Latitude" Longitude="Longitude" />
                            </dxm:ListSourceDataAdapter.Mappings>

                            <dxm:ListSourceDataAdapter.ItemSettings>
                                <dxm:MapRectangleSettings />
                            </dxm:ListSourceDataAdapter.ItemSettings>
                        </dxm:ListSourceDataAdapter>
                    </dxm:VectorLayer>
                </dxm:MapControl>
            </dxlc:LayoutGroup>
        </Grid>

        <StackPanel Grid.Row="3"  Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Width="150" Height="45" HorizontalAlignment="Center" Command="{Binding CommandBackButton}" FontSize="25" FontWeight="Bold" Focusable="False"  Margin="0,0,60,0" Content="{DynamicResource RefundWorkOrderViewBack}" IsEnabled="{Binding IsBackButtonEnable,UpdateSourceTrigger=PropertyChanged}"/>
            <Button Width="150" Height="45" HorizontalAlignment="Center" Command="{Binding CommandCancelButton}" FontSize="25" FontWeight="Bold" Focusable="False" Margin="0,0,30,0" Content="{DynamicResource RefundWorkOrderViewCancel}"/>
            <Button Width="150" Height="45" HorizontalAlignment="Center" Command="{Binding CommandSkipButton}" CommandParameter="{Binding ElementName=ItemsTableView}" 
                    FontSize="25" FontWeight="Bold" Margin="30,0,0,0" Focusable="False" IsEnabled="{Binding IsSkipButtonEnable,UpdateSourceTrigger=PropertyChanged}" Content="{DynamicResource RefundWorkOrderViewSkip}"/>
        </StackPanel>
    </Grid>

</UserControl>
