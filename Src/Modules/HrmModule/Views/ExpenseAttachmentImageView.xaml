<Window x:Class="Emdep.Geos.Modules.Hrm.Views.ExpenseAttachmentImageView"             
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
        xmlns:local="clr-namespace:Emdep.Geos.Modules.Hrm.Views"             
        mc:Ignorable="d"          
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"        
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"             
        d:DesignHeight="300" d:DesignWidth="300"  HorizontalAlignment="Center"            >
    <!--[GEOS2-5073][rdixit][12.02.2024]-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content=" " Height="40" Width="40" Grid.Row="0" Command="{Binding PrintButtonCommand}" CommandParameter="{Binding ElementName=PART_Editor}"  HorizontalAlignment="Right" Margin="0,0,5,0">
            <Button.ToolTip>
                <TextBlock Text="{DynamicResource ButtonPrint}" />
            </Button.ToolTip>
            <Button.ContentTemplate>
                <DataTemplate>
                    <Image Style="{DynamicResource PrinterButtonImageStyle}" Height="24" Width="24" Margin="-10" />
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <dxe:ImageEdit Name="PART_Editor"  Grid.Row="1" HorizontalContentAlignment="Center" HorizontalAlignment="Center" 
                       ShowMenuMode="Hover" IsPrintingMode="True" EditMode="InplaceActive" VerticalContentAlignment="Center" VerticalAlignment="Center"                         
                       Source="{Binding DataContext.PhotoSource,RelativeSource={RelativeSource AncestorType=Window},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
