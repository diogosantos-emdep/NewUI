<UserControl x:Class="WindowsUIDemo.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsUIDemo" x:Name="uc"
             Height="800" Width="800" >

    <Border x:Name="border" BorderThickness="5" Background="Transparent" >
            <ScrollViewer x:Name="scrollHost" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <local:ImagePresenter Flip="{Binding Flip, ElementName=uc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Scale="{Binding Scale, ElementName=uc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                  Rotation="{Binding Rotation, ElementName=uc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Focusable="False" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                  FlowDirection="LeftToRight" >
                    <local:ImagePresenter.Content>
                        <Image x:Name="image" Source="{Binding ImageSource, ElementName=uc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                           Stretch="UniformToFill" MouseMove="OnImageMouseMove" LostMouseCapture="OnImageLostMouseCapture"
                           MouseLeftButtonDown="OnImageMouseLeftButtonDown" MouseLeftButtonUp="OnImageMouseLeftButtonUp" 
                               VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                    </local:ImagePresenter.Content>
                </local:ImagePresenter>
            </ScrollViewer>
    </Border>


</UserControl>