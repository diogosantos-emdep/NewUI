                                                                                   ShowColumnHeaders="True"
                                                                                   ShowSearchPanelMode="Never"
                                                                                   VerticalScrollbarVisibility="Auto" 
                                                                                   HorizontalScrollbarVisibility="Auto"
                                                                                   AllowFixedColumnMenu="False"
                                                                                   AutoWidth="False"
                                                                                   ShowSearchPanelCloseButton="True"
                                                                                   SearchPanelHorizontalAlignment="Stretch"
                                                                                   AllowColumnMoving="True"
                                                                                   AllowGrouping="True"
                                                                                   ShowGroupPanel="False"
                                                                                   ShowIndicator="False" 
                                                                                   AllowColumnFiltering="True"
                                                                                   FilterEditorShowOperandTypeIcon="True"
                                                                                   AllowDragDrop="True"
                                                                                   AllowEditing="True"
                                                                                  
                                                                                   >
                                                <!--FocusedRow="{Binding Path=SelectedSuggested, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ColumnChooserColumnDisplayMode="ShowHiddenColumnsOnly"-->
                                                <dxmvvm:Interaction.Behaviors>
                                                    <dxmvvm:EventToCommand EventName="Loaded"
                                                                                     Command="{Binding DataContext.TableViewLoadedCommand, RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
                                                                                    PassEventArgsToCommand="True"
                                                                                     >
                                                    </dxmvvm:EventToCommand>

                                                    <dxmvvm:EventToCommand EventName="Unloaded"
                                                                                     Command="{Binding DataContext.TableViewUnloadedCommand, RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
                                                                                    PassEventArgsToCommand="True"
                                                                                     >
                                                    </dxmvvm:EventToCommand>
                                                    <dxmvvm:EventToCommand Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType={x:Type dxwui:WinUIDialogWindow}}}"
