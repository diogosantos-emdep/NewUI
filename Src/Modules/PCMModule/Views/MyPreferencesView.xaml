<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.PCM.Views.MyPreferencesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.PCM.Views"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"   
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:PCMCommon ="clr-namespace:Emdep.Geos.Modules.PCM"
                         
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900"
             Title="{DynamicResource CrmMainViewModelMyPreferences}"
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}">

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding MyPreferencesViewCancelButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>
    <dxlc:LayoutGroup Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="{DynamicResource BorderBrushColor}" 
                BorderThickness="1" 
                HorizontalAlignment="Stretch">
            <Grid Grid.Row="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="15"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>


                <TextBlock Grid.Row="0"
                   Text="{DynamicResource PCM_Appearance}" 
                   Style="{StaticResource TextBlock14Style}"
                   HorizontalAlignment="Center"  VerticalAlignment="Center" 
                   FontWeight="Bold" FontSize="20"/>

                <Border BorderBrush="{DynamicResource BorderBrushColor}" 
                Grid.Row="2" 
                BorderThickness="1" 
                HorizontalAlignment="Stretch">

                    <Grid ShowGridLines="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="165"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="50"/>

                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{DynamicResource PositionOfExpandedSection}"
                           HorizontalAlignment="Left" VerticalAlignment="Top"
                           Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap">
                        </TextBlock>

                        <dxe:ComboBoxEdit Grid.Row="1" Grid.Column="3" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                                  ShowError="False" ShowErrorToolTip="False" 
                                  Style="{DynamicResource ComboBoxEditStyle}"
                                  Width="90" Height="30" 
                                  IsTextEditable="False" 
                                  ItemsSource="{dxe:EnumItemsSource EnumType=dxlc:MaximizedElementPosition}"  
                                  EditValue="{Binding SelectedAppearanceItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  >
                        </dxe:ComboBoxEdit>


                    </Grid>

                </Border>

                <TextBlock Grid.Row="4" Text="{DynamicResource NumberOfRecords}"
                 Style="{StaticResource TextBlock14Style}"
                   HorizontalAlignment="Center"  VerticalAlignment="Center" 
                   FontWeight="Bold" FontSize="20" Margin="0,-10,0,0"/>

                <Border BorderBrush="{DynamicResource BorderBrushColor}" 
                Grid.Row="6" 
                BorderThickness="1" 
                HorizontalAlignment="Stretch">
                    <Grid ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="165"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource Image}" Style="{StaticResource TextBlock14Style}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" />

                        <dxe:ComboBoxEdit Grid.Column="3" Grid.Row="1" x:Name="image"   Height="30"  IsTextEditable="False" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center" ShowError="False" ShowErrorToolTip="False"
                                  Style="{DynamicResource ComboBoxEditStyle}" Width="90" 
                    ItemsSource="{Binding DataContext.LstImage,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                    SelectedIndex="{Binding DataContext.ImageSelectedIndex,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"/>
                        <TextBlock Text="{DynamicResource Attachments}" Style="{StaticResource TextBlock14Style}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" />

                        <dxe:ComboBoxEdit Grid.Column="3" Grid.Row="3" x:Name="Attachment"   Height="30"  IsTextEditable="False" 
                                   HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowError="False" ShowErrorToolTip="False"
                                  Style="{DynamicResource ComboBoxEditStyle}" Width="90" 
                    ItemsSource="{Binding DataContext.LstAttachment,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" 
                                  SelectedIndex="{Binding DataContext.AttachmentSelectedIndex,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
/>
                        <TextBlock Text="{DynamicResource Links}" Style="{StaticResource TextBlock14Style}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" />

                        <dxe:ComboBoxEdit Grid.Column="3" Grid.Row="5" x:Name="Links"   Height="30"  IsTextEditable="False" 
                                   HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowError="False" ShowErrorToolTip="False"
                                  Style="{DynamicResource ComboBoxEditStyle}" Width="90" 
                    ItemsSource="{Binding DataContext.LstLinks,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}" SelectedIndex="{Binding DataContext.LinksSelectedIndex,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                />
                    </Grid>
                </Border>

                <Grid Grid.Row="8" Margin="10,0,0,0" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="{DynamicResource Currency}" 
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Style="{StaticResource TextBlock14Style}" TextAlignment="Left" TextWrapping="Wrap">
                    </TextBlock>

                    <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="2" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                  ShowError="False" ShowErrorToolTip="False" 
                                  Style="{DynamicResource ComboBoxEditStyle}"
                                  Width="88" Height="30" 
                                  IsTextEditable="False" DisplayMember="Name"
                                  ItemsSource="{Binding Currencies,UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"  
                                  SelectedItem="{Binding SelectedCurrency,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  >
                        <!--Margin="0 8 0 8"-->
                    </dxe:ComboBoxEdit>

                </Grid>
            </Grid>
            </Border>
            <!--Accept and Cancel Button-->
            <Grid Grid.Row="1" ShowGridLines="False" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="3" Grid.Column="0"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Right"
                    Content="{DynamicResource AddCatalogueAcceptButton}"
                    Command="{Binding DataContext.MyPreferencesViewAcceptButtonCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow}}"
                    Height="30"
                    Width="100" />

                <Button Grid.Row="3" Grid.Column="2"
                    Style="{DynamicResource Button16Style}"
                    HorizontalAlignment="Left"
                    Content="{DynamicResource AddCatalogueCancelButton}"
                    Command="{Binding MyPreferencesViewCancelButtonCommand}"
                    Height="30"
                    Width="100" />
            </Grid>
        </Grid>

      
    </dxlc:LayoutGroup>
        
   


 

</dxwui:WinUIDialogWindow>
