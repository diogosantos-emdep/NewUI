<UserControl x:Class="Emdep.Geos.Modules.APM.Views.ActionPlansView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.APM.Views"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation" 
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
             xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"
             xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:ViewModels="clr-namespace:Emdep.Geos.Modules.APM.ViewModels"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:APMCommon ="clr-namespace:Emdep.Geos.Modules.APM.CommonClasses"
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" 
             xmlns:Interactive="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Behaviors="clr-namespace:Emdep.Geos.UI.Behaviors;assembly=Emdep.Geos.UI.Common"
             xmlns:Helper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
             xmlns:dxgext="clr-namespace:DevExpress.Xpf.Grid;assembly=DevExpress.Xpf.Grid.v19.2.Extensions"
             xmlns:viewModel="clr-namespace:Emdep.Geos.Modules.APM.ViewModels"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:UIConverter="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
             xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"                  
             Style="{DynamicResource UserControlStyle}" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">

    <UserControl.Resources>
        <Converters:DelegatedToImageURLConverter x:Key="DelegatedToImageURLConverter" />
        <Converters:ForegroundColorConverter x:Key="ForegroundColorConverter"/>
        <Converters:ImageUrlToByteArrayConverter x:Key="ImageUrlToByteArrayConverter" />
        <Converters:ListToCompanyConverter x:Key="ListToCompanyConverter" />
        <!--[rdixit][GEOS2-6015][17.10.2024]-->
        <Converters:DrawingColorToBrushConverter x:Key="DrawingColorToBrushConverter" />
        <Converters:DueDatePassedConverter  x:Key="DueDatePassedConverter" />
        <Converters:TaskListToDetailButtonVisibilityConverter  x:Key="TaskListVisibilityConverter"/>
        <!--[GEOS2-8845][shweta.thube][16.07.2025]-->
        <Style x:Key="HideButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}"> 
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.APM;component/Assets/Images/ArrowRight.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.APM;component/Assets/Images/ArrowLeft.png"
                                   Visibility="{TemplateBinding IsChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopHideButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.APM;component/Assets/Images/Arrowdown.png"
                                   Visibility="{Binding IsTopDockChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="/Emdep.Geos.Modules.APM;component/Assets/Images/ArrowTop.png"
                                   Visibility="{Binding IsTopDockChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopTaskHideButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderThickness="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Source="/Emdep.Geos.Modules.APM;component/Assets/Images/Arrowdown.png"
                           Visibility="{Binding IsTopTaskDockChecked, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}}"/>
                                <Image Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Source="/Emdep.Geos.Modules.APM;component/Assets/Images/ArrowTop.png"
                           Visibility="{Binding IsTopTaskDockChecked, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LeftPanelTileItemStyle" TargetType="{x:Type dxnav:TileBarItem}">
            <Setter Property="Foreground" Value="{Binding BackColor,Converter={Converters:ForegroundColorConverter}}"/>
            <Setter Property="BorderBrush" Value="#FFD6D6D6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{Binding BackColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="{Binding Height}"/>
            <Setter Property="Width" Value="{Binding Width}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SelectionPadding" Value="0" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="37"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-35,-5,0,0" Text="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ToolTip="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" TextWrapping="Wrap" FontSize="30" Opacity="0.6"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,-5,0,3" Text="{Binding Caption}" ToolTip="{Binding Caption}" FontSize="13" />

                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderThickness" Value="5"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TileBarItemColorStyle}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopPanelTileItemStyle" TargetType="{x:Type dxnav:TileBarItem}">
            <Setter Property="Foreground" Value="{Binding BackColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={Converters:ForegroundColorConverter}}"/>
            <Setter Property="BorderBrush" Value="#FFD6D6D6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{Binding BackColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="{Binding Height,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="Width" Value="{Binding width,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SelectionPadding" Value="0" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-35,-5,8,0" Opacity="0.6" Visibility="{Binding EntitiesCountVisibility}"/>
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding Caption}" FontSize="13" Margin="6,0,0,3"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderThickness" Value="5"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TileBarItemColorStyle}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="rowInfoTemplate">
            <dxgext:NameTextControl NameValue="Code # " TextValue="{Binding ActionPlanCodeWithTaskNumber}"/>
        </DataTemplate>
        <DataTemplate x:Key="dragInfoTemplate">
            <Border Padding="12,8,24,10">
                <StackPanel>
                    <TextBlock FontWeight="Bold"
                        Foreground="#FF949494"
                        Name="oneRowTextBlock"
                        Text="Moving Task:">
                        <TextBlock.Visibility>
                            <Binding Path="DraggingRows.Count">
                                <Binding.Converter>
                                    <dxgext:CountToVisibilityConverter Invert="True" />
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.Visibility>
                    </TextBlock>
                    <ContentPresenter Content="{Binding FirstDraggingObject}"
                        ContentTemplate="{StaticResource rowInfoTemplate}"
                        Name="rowInfoDragPresenter">
                        <ContentPresenter.Visibility>
                            <Binding Path="DataContext.DraggingRows.Count" RelativeSource="{RelativeSource TemplatedParent}">
                                <Binding.Converter>
                                    <dxgext:CountToVisibilityConverter Invert="True" />
                                </Binding.Converter>
                            </Binding>
                        </ContentPresenter.Visibility>
                    </ContentPresenter>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style x:Key="AlertPanelTileItemStyle" TargetType="{x:Type dxnav:TileBarItem}">
            <Setter Property="Foreground" Value="{Binding BackColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={Converters:ForegroundColorConverter}}"/>
            <Setter Property="BorderBrush" Value="#FFD6D6D6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{Binding BackColor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="{Binding Height,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="Width" Value="{Binding width,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SelectionPadding" Value="0" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Stretch" Text="{Binding Caption}" FontSize="12" Margin="0,5,0,0" />
                            <!--<TextBlock Grid.Row="1" Text="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ToolTip="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" FontSize="29" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,2" Opacity="0.6" Visibility="{Binding EntitiesCountVisibility}"/>-->


                            <TextBlock Grid.Row="1" Text="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                       ToolTip="{Binding EntitiesCount,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" FontSize="14" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Margin="0,-6,0,2" Opacity="0.6" Visibility="{Binding EntitiesCountVisibility}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Caption}" Value="Most Overdue Responsible">
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="TextAlignment" Value="Left"/>
                                                <!-- Force offset -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Caption}" Value="Most Overdue Theme">
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="TextAlignment" Value="Left"/>
                                                <!-- Force offset -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding EntitiesCount}" Value="---">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <!-- Force offset -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>


                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderThickness" Value="5"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TileBarItemColorStyle}"/>
                </Trigger>

                <!-- New Trigger for Left Alignment of Caption -->
                <!--
                <DataTrigger Binding="{Binding Caption}" Value="Responsible with most overdue">
                    <Setter TargetName="CaptionTextBlock" Property="HorizontalAlignment" Value="Left"/>
                </DataTrigger>-->

            </Style.Triggers>
        </Style>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="28" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsTaskGridVisibility}" Value="True">
                                <Setter Property="Content" Value="Tasks" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsTaskGridVisibility}" Value="False">
                                <Setter Property="Content" Value="Action Plans" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <DockPanel Grid.Row="0" Grid.Column="1">

                <Grid HorizontalAlignment="Right" Width="Auto" Height="45" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"   VerticalAlignment="Center" Margin="5,0,0,0" >
                        <Image Style="{DynamicResource CalendarImageStyle}" Width="30" Height="20" Margin="2,0,3,0" />
                        <TextBlock Text="{DynamicResource AnnualSalesPerformanceViewPeriod}"  FontWeight="Bold" Margin="0,0,0,0" IsEnabled="True" />
                    </DockPanel>

                    <dxe:ComboBoxEdit  Grid.Column="2" 
                                 Style="{DynamicResource ComboBoxEditStyle}"
                        Margin="5,0,5,0" 
                          Width="150" Height="30"
                         ItemsSource="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=FinancialYearLst, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               EditValue="{Binding Source={x:Static APMCommon:APMCommon.Instance}, Path=SelectedPeriod,UpdateSourceTrigger=PropertyChanged}"
                                       
                                       >
                        <dxe:ComboBoxEdit.StyleSettings>
                            <dxe:CheckedComboBoxStyleSettings />
                        </dxe:ComboBoxEdit.StyleSettings>

                        <dxmvvm:Interaction.Triggers>
                            <dxmvvm:EventToCommand EventName="PopupClosed"
                                            Command="{Binding DataContext.SelectedYearChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            PassEventArgsToCommand="True"/>
                        </dxmvvm:Interaction.Triggers>
                    </dxe:ComboBoxEdit>

                    <!--Add New Action -->
                    <Button HorizontalAlignment="Left" Height="40" Width="40" Grid.Column="3" Margin="0,0,5,0"
                            IsEnabled="{Binding IsAddButtonEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding AddActionPlanButtonCommand}" CommandParameter="{Binding ElementName=ActionPlansTableView}" >
                        <!--<Button.ToolTip>
                            <TextBlock Text="{DynamicResource ActionsAddNewActions}"/>
                        </Button.ToolTip>-->

                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTaskGridVisibility}" Value="False">
                                        <Setter Property="ToolTip" Value="Add New Action" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTaskGridVisibility}" Value="True">
                                        <Setter Property="ToolTip" Value="Add New Task" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Style="{DynamicResource APMAddButtonImageStyle}" Grid.Column="3" Height="24" Width="24" HorizontalAlignment="Right" Margin="-10" />
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!--Import Action -->
                    <!--[GEOS2-6021][rdixit][17.02.2025]-->
                    <Button HorizontalAlignment="Left" Height="40" Width="40" Grid.Column="4" Margin="0,0,5,0"          
                            IsEnabled="{Binding IsAddButtonEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"                      
                            Command="{Binding ImportButtonCommand}"  >
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonImport}" />
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource APMImportButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Refresh Button -->
                    <Button Content=" "  Grid.Column="5" Height="40" Width="40" HorizontalAlignment="Left" Margin="0,0,5,0"
                           Command="{Binding RefreshButtonCommand}" CommandParameter="{Binding ElementName=ActionPlansTableView}"  >
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonRefresh}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource APMRefreshButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Print Button -->
                    <!--<Button Content=" " Grid.Row="0" Grid.Column="6" Height="40" Width="40" HorizontalAlignment="Left" Margin="0,0,5,0"
                         Command="{Binding PrintButtonCommand}"     >
                        <Button.CommandParameter>
                            <MultiBinding Converter="{Converters:ConverterForRefresh}">
                                <Binding ElementName="ActionPlansTableView" />
                                <Binding ElementName="TasksGridTableView" />
                            </MultiBinding>
                        </Button.CommandParameter>
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonPrint}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{ DynamicResource APMPrinterButtonImageStyle}"  Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>-->
                    <!--[pallavi.kale][GEOS2-8084][05.08.2025]-->
                    <dx:DropDownButton x:Name="dropdownButtonPrint" Content="Dropdown button" 
                            HorizontalAlignment="Left" Height="40" Width="40"  Grid.Row="0" Grid.Column="6" Margin="0,0,5,0" VerticalAlignment="Center" >
                        <dx:DropDownButton.Style>
                            <Style>
                                <Setter Property="dx:DropDownButtonBase.ArrowAlignment" Value="Right" />
                                <Setter Property="dx:DropDownButtonBase.ArrowPadding" Value="0" />
                            </Style>
                        </dx:DropDownButton.Style>

                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonPrint}"/>
                        </Button.ToolTip>

                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Style="{DynamicResource APMPrinterButtonImageStyle}" Grid.Column="5" Height="24" Width="24" Margin="-20"/>

                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>

                        <dxb:PopupMenu dxb:BarManager.ShowGlyphsInPopupMenus="False" >
                            <dxb:PopupMenu.Resources>
                                <Style TargetType="{x:Type dxb:BarButtonItemLinkControl}">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="12,6"/>
                                    <Setter Property="Margin" Value="-5,4,-5,4"/>
                                </Style>
                            </dxb:PopupMenu.Resources>

                            <dxb:BarButtonItem Name="Standard"  Content="Standard" Command="{Binding PrintButtonCommand}"  >
                                <dxb:BarButtonItem.CommandParameter>
                                    <MultiBinding Converter="{Converters:ConverterForRefresh}">
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="ActionPlansTableViewProp"/>
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="TasksGridTableViewProp"/>
                                    </MultiBinding>
                                </dxb:BarButtonItem.CommandParameter>
                            </dxb:BarButtonItem>
                            <dxb:BarButtonItem Name="Customer" Content="Customer"  Command="{Binding PrintCustomerButtonCommand}" >
                                <dxb:BarButtonItem.CommandParameter>
                                    <MultiBinding Converter="{Converters:ConverterForRefresh}">
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="ActionPlansTableViewProp"/>
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="TasksGridTableViewProp"/>
                                    </MultiBinding>
                                </dxb:BarButtonItem.CommandParameter>
                            </dxb:BarButtonItem>


                        </dxb:PopupMenu>
                    </dx:DropDownButton>
                    <!--Export to Excel-->
                    <!--<Button HorizontalAlignment="Left" Height="40" Width="40" Grid.Column="7"  Margin="0,0,5,0"
                      Command="{Binding ExportButtonCommand}" >
                        <Button.CommandParameter>
                            <MultiBinding Converter="{Converters:ConverterForRefresh}">
                                <Binding ElementName="ActionPlansTableView" />
                                <Binding ElementName="TasksGridTableView" />

                            </MultiBinding>
                        </Button.CommandParameter>
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonExportToExcel}"/>
                        </Button.ToolTip>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Style="{DynamicResource ExcelExportButtonImageStyle}" Grid.Column="6" Height="24" Width="24" Margin="-10"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>-->
                    <!--[pallavi.kale][GEOS2-8084][05.08.2025]-->
                    <dx:DropDownButton x:Name="dropdownButtonExport" Content="Dropdown button" 
                         HorizontalAlignment="Left" Height="40" Width="40"  Grid.Row="0" Grid.Column="7" Margin="0,0,5,0" VerticalAlignment="Center" >
                        <dx:DropDownButton.Style>
                            <Style>
                                <Setter Property="dx:DropDownButtonBase.ArrowAlignment" Value="Right" />
                                <Setter Property="dx:DropDownButtonBase.ArrowPadding" Value="0" />
                            </Style>
                        </dx:DropDownButton.Style>
                        
                        <Button.ToolTip>
                            <TextBlock Text="{DynamicResource ButtonExportToExcel}"/>
                        </Button.ToolTip>

                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Style="{DynamicResource ExcelExportButtonImageStyle}" Grid.Column="6" Height="24" Width="24" Margin="-20"/>

                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>

                        <dxb:PopupMenu dxb:BarManager.ShowGlyphsInPopupMenus="False">
                            <dxb:PopupMenu.Resources>
                                <Style TargetType="{x:Type dxb:BarButtonItemLinkControl}">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="12,6"/>
                                    <Setter Property="Margin" Value="-5,4,-5,4"/>
