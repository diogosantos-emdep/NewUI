                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Style="{DynamicResource AddCustomerButtonImageStyle}"  Height="20" Width="20" Margin="-10"/>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
