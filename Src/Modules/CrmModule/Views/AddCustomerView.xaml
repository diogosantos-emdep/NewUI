                                <!--[pramod.misal][GEOS2-6462][12-11-2024]-->
                                <!--Alias-->
                                <Label Content="{DynamicResource OTMAlias}" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" />
                                <dxe:TextEdit EditValue="{Binding DataContext.Alias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox} }"
                                              Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                              IsReadOnly="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=IsPermissionReadOnly}" />


                                <!--Registered Name-->
                                <Label Content="{DynamicResource RegisteredName}" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" />
                                <dxe:TextEdit EditValue="{Binding DataContext.RegisteredName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox} }"
                                              Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                              AllowNullInput="True" Height="50" TextWrapping="Wrap" VerticalContentAlignment="Top" />


                                <!--Register Number-->
                                <Label Content="{DynamicResource CustomerEditViewRegistrationNumberofEmployee}" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" />
                                <dxe:TextEdit EditValue="{Binding DataContext.RegisterationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox} }"
                                              Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                              IsReadOnly="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=IsPermissionReadOnly}" />




                                <!--Number of Emplyees--><!--
                                <Label Content="{DynamicResource CustomerAddViewNumberofEmployee}" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" />
                                <dxe:TextEdit EditValue="{Binding DataContext.CustomerNumberofEmplyee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=dxlc:GroupBox} }"
                                              Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                               MaskType="RegEx" Mask="\d{0,5}" AllowNullInput="True"
                                              IsReadOnly="{Binding Source={x:Static GeosApplication:GeosApplication.Instance}, Path=IsPermissionReadOnly}">
                                </dxe:TextEdit>


