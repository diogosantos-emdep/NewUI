<dxwui:WinUIDialogWindow x:Class="Emdep.Geos.Modules.Crm.Views.AddNewCarOEMView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Modules.Crm.Views"
             mc:Ignorable="d"        
                         xmlns:CRMCommon="clr-namespace:Emdep.Geos.Modules.Crm;assembly=Emdep.Geos.Modules.Crm"
                         xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
                         xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                         xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                         xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
                         xmlns:Converters="clr-namespace:Emdep.Geos.UI.Converters;assembly=Emdep.Geos.UI.Converters"
                         xmlns:GeosApplication="clr-namespace:Emdep.Geos.UI.Common;assembly=Emdep.Geos.UI.Common"                         
                         xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
                         xmlns:Validation ="clr-namespace:Emdep.Geos.UI.Validations;assembly=Emdep.Geos.UI.Validations"
                         xmlns:UIHelper="clr-namespace:Emdep.Geos.UI.Helper;assembly=Emdep.Geos.UI.Helper"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                         xmlns:CrmApplication="clr-namespace:Emdep.Geos.Modules.Crm"
                         xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                         xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                         xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                         Style="{DynamicResource WinUIDialogWindowStyle}"
             Title="{Binding WindowHeader}"
             TitleStyle="{DynamicResource WinUIDialogWindowTitleStyle}"
             d:DesignHeight="300" d:DesignWidth="300">
    <dxwui:WinUIDialogWindow.Resources>

    </dxwui:WinUIDialogWindow.Resources>

    <dxwui:WinUIDialogWindow.InputBindings>
        <KeyBinding Key="Escape"  Command="{Binding EscapeButtonCommand}"/>
    </dxwui:WinUIDialogWindow.InputBindings>

    <!--[001][kshinde][20/06/2022][GEOS2-244]-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!--Name :-->
        <TextBlock Grid.Row="0" Text="{DynamicResource AddCarName}" Style="{DynamicResource TextBlock14Style}" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <dxe:TextEdit  Grid.Row="0" Grid.Column="2" IsReadOnly="False" TabIndex="0" 
                      Text="{Binding Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Height="30" >
            <Binding Path="DataContext.Name" RelativeSource="{RelativeSource AncestorType=dxwui:WinUIDialogWindow}" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" 
                         ValidatesOnDataErrors="True">
                <Binding.ValidationRules>
                    <Validation:AddEditCarOEMValidation FieldName="Name" ValidationStep="UpdatedValue" ValidatesOnTargetUpdated="True"/>
                </Binding.ValidationRules>
            </Binding>
        </dxe:TextEdit>
        <!--Logo :-->
        <TextBlock  Grid.Row="2" Grid.Column="0" Text="{DynamicResource AddCarLogo}" Style="{DynamicResource TextBlock14Style}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <dxe:ImageEdit     Width ="128" Height="128" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="2" IsEnabled="{Binding IsImageLoadPermissionEnabled}" RenderSize="128,128"
                         Source="{Binding DataContext.LogoImage,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"                           
                         >
           
            <dxe:ImageEdit.Style >
                <Style>
                    <Style.Triggers >
                        <DataTrigger Binding="{Binding DataContext.IsLogoImageExist,RelativeSource={RelativeSource AncestorType=dxwui:WinUIDialogWindow},UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Value="False">
                            <Setter Property="dxe:ImageEdit.Stretch" Value="None" ></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </dxe:ImageEdit.Style>

        </dxe:ImageEdit>

        <!--Buttons-->
        <Grid Grid.Row="4" ShowGridLines="False" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button  HorizontalAlignment="Right"
                     Style="{DynamicResource Button16Style}"
                     VerticalAlignment="Top"                     
                     Content="{DynamicResource AcceptButton}"
                     Command="{Binding AcceptCommand}"
                    
                     TabIndex="4"
                     Height="30"
                     Width="100"  />

            <Button Grid.Column="6" 
                    HorizontalAlignment="Left"
                    Style="{DynamicResource Button16Style}"
                    Content="{DynamicResource CancelButton}"
                    VerticalAlignment="Top"
                    Command="{Binding CancelCommand}" 
                    TabIndex="5"
                    Height="30"
                    Width="100" />
        </Grid>
    </Grid>
</dxwui:WinUIDialogWindow>
