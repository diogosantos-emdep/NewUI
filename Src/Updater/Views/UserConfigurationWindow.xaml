<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emdep.Geos.Workbench.Downloader.ViewModels"
            xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
            x:Class="Emdep.Geos.Workbench.Updater.Views.UserConfigurationWindow"
            Style="{DynamicResource UserControlUpdaterBackgroundStyle}" >

    <!--<UserControl.Resources>
        <ResourceDictionary Source="/GeosWorkbenchInstaller;component/Resources/Language.xaml" />
    </UserControl.Resources>-->

    <Grid  Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="5" Command="{Binding UpdaterWindowMinimizeCommand}" Height="30" Width="100" Margin="0,0,-35,0"
                HorizontalAlignment="Right" VerticalAlignment="Top"  Visibility="Visible" >
            <Button.Template>
                <ControlTemplate>
                    <Image  Source="{DynamicResource MinimizeImageSource}" Height="16" />
                </ControlTemplate>
            </Button.Template>
            <Button.ToolTip>
                <ToolTip Content="Minimize" />
            </Button.ToolTip>
        </Button>

        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="{DynamicResource UserConfigurationWindowTitle}"  Foreground="{DynamicResource ForegroundColorLabel}"
               Width="300"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="-10,0,0,0" Style="{DynamicResource LabelTitle}"/>
        <Label  Style="{DynamicResource LabelForegroundstyle}" Grid.Row="1" Grid.Column="1" Content="{DynamicResource UserConfigurationWindowServiceProvider}" 
               VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <dxe:ComboBoxEdit Grid.Row="1"                                       
		                  IsTextEditable="False" 
				          SelectedItem="{Binding SelectedIndexGeosServiceProviders}"	
                          Grid.Column="2"
			              Width="180"		
			              HorizontalAlignment="Left" 
			              VerticalAlignment="Top" ItemsSource="{Binding ListGeosServiceProviders}">
            <dxmvvm:Interaction.Triggers>
                <dxmvvm:EventToCommand EventName="SelectedIndexChanged" PassEventArgsToCommand="True" Command="{Binding ServiceProvidersSelectionChangedCommand,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </dxmvvm:Interaction.Triggers>
        </dxe:ComboBoxEdit>

        <!--<dxe:ComboBoxEdit  HorizontalAlignment="Left"
                           Width="200" 
                           IsTextEditable="False" 
                           ItemsSource="{Binding DataContext.ProjectOwnerList,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxwui:WinUIDialogWindow }}"
                           EditValue="{Binding IdOwner,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                           DisplayMember="Login"
                           ValueMember="IdUser"
                           Grid.Row="2" Grid.Column="4" Margin="0,3" ValidateOnTextInput="False" ValidateOnEnterKeyPressed="True">
        </dxe:ComboBoxEdit>-->

        <Label Style="{DynamicResource LabelForegroundstyle}" Content="Url:"  Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center"  VerticalAlignment="Center" >
            <!--<Label.Style>
                <Style TargetType="{x:Type Label}">
                    --><!--<Setter Property="Content" Value=" UserConfigurationWindowPrivateIp"></Setter>--><!--
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsNetworkIP ,UpdateSourceTrigger=PropertyChanged}" Value="true">
                            <Setter Property="Content" Value="{DynamicResource UserConfigurationWindowPrivateIp}"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsNetworkIP,UpdateSourceTrigger=PropertyChanged}" Value="false">
                            <Setter Property="Content" Value="{DynamicResource UserConfigurationWindowPublicIp}"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>-->
        </Label>

        <dxe:TextEdit Grid.Row="2"
			Width="350"
			Height="35"
            Grid.ColumnSpan="4"
			Grid.Column="2"
			HorizontalAlignment="Left"
			VerticalAlignment="Stretch"
            HorizontalContentAlignment="Left"			
			EditValue="{Binding ServicePath, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

        <!--<Label Grid.Row="3" Grid.Column="0" Content="{DynamicResource UserConfigurationWindowPrivateIp}" Width="150" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <dxe:TextEdit Grid.Row="3"
			Width="180"
			Height="35"
			Grid.Column="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
			MaskType="RegEx" 
			Mask="([1-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])(\.([0-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])){3}" 
			EditValue="{Binding Ip, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />-->
        <!--<dxe:SpinEdit Grid.Row="3"
			Grid.Column="1"
			Width="180"
			Height="35"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			MinValue="0"
			MaxValue="65535"
			MaskType="Numeric"
			IsFloatValue="False"
			DisplayFormatString="N0" 
			MaskUseAsDisplayFormat="False"
			EditValue="{Binding Port, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />-->

        <!--<Label Grid.Row="2" Grid.Column="3" Content="{DynamicResource UserConfigurationWindowPort}" 
               HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  
               VerticalAlignment="Center" Margin="0,0,0,0"/>
        <dxe:SpinEdit Grid.Row="2"
			Grid.Column="4"
			Width="70"
			Height="35"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			MinValue="0"
			MaxValue="65535"
			MaskType="Numeric"
			IsFloatValue="False"
			DisplayFormatString="N0" 
			MaskUseAsDisplayFormat="False"
			EditValue="{Binding Port, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />-->

        <DockPanel Width="250" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="{DynamicResource UserConfigurationWindowSave}" 
					Height="30" 
					Width="100" 
					HorizontalAlignment="Left" 
					VerticalAlignment="Top"
					Command="{Binding UserConfigurationSaveButtonCommand}"/>

            <Button Content="{DynamicResource UserConfigurationWindowCancel}"  
					Height="30"
					Width="100" 
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Command="{Binding UserConfigurationCancelButtonCommand}"/>
        </DockPanel>
    </Grid>
</UserControl>
